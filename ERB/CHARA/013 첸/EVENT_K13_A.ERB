@KOJO_MESSAGE_PLAYERCHANGE_13
SIF CFLAG:7900 == 0
    RETURN 0
;연모(나온다)
IF TALENT:150 == 1 && CFLAG:7007 == 0
    PRINTFORMW 「여기로부터는, 첸에게 맡겨줘.」
    CFLAG:7007 = 1
;복종(나온다)
