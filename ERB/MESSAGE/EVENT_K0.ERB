;--------------------------------------------------
;EVENTTRAIN 관계
;-------------------------------------------------
@EVENTTRAIN
SIF FLAG:캐릭터대사표시 == 0
    RETURN 0
SIF NO:TARGET != 0
    RETURN 0

;대사 존재 판정
CALL TRY_0
SIF !RESULT
    RETURN 0

;대사 호출
IF ASSI > 0 && ASSIPLAY
    TRYCALLFORM LES_EVENTTRAIN_K0_M{NO:ASSI}
    ;범용 역조교 대사
    SIF FLAG:22 == 0
        TRYCALL LES_EVENTTRAIN_K0_MX
ELSE
    TRYCALLFORM LES_EVENTTRAIN_K0_M{NO:MASTER}
    ;범용 역조교 대사
