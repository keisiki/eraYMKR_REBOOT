;=======================================;
;DEVELOPED_CUSTOMTOOL 開発完了チェック
;CFLAG引数
;なし
;ARG引数
; 0 : 呼び出し状況(0か省略時：調教前　1:工房待機時)
; 1 : 開発者番号(CHARANUM、ただし工房待機時のみ)
;戻値
;RETURN    : 対象アイテム有無 (0:なし 1:あり)
;FLAG 1120 : 対象アイテム番号 (なし時-1)
;FLAG 1121 : 対象アイテムの改造度 (0:改造なし 1:高品質化 2:特製品化)
;LOCAL変数
;     0 : 調査対象開発レベル
;     1 : 対象アイテム番号
;     2 : 対象アイテムの開発状況管理番号 (対象アイテム番号＋700)
;     3 : 対象アイテム数
;     4 : 乱数受け皿(何番目の対象アイテムかを指定)
;     5 : 対象アイテム番号チェックカウンタ
;     6 : 対象アイテム番号
;     7 : 開発決定済みアイテム数
;     8 : 調教対象番号テンポラリ(工房待機時用)
;     9 : 処理終了フラグ
;=======================================;
@DEVELOPED_CUSTOMTOOL, ARG:0, ARG:1
FLAG:1120 = -1
FLAG:1121 = 0
IF ARG:0 != 0
    ;開発者指定ありの場合は開発者番号(ARG:1)をTARGETに変更する
    LOCAL:8 = TARGET
    TARGET = ARG:1
ENDIF
LOCAL:9 = 0
;調査対象開発レベルを設定 (0⇒0、1⇒4)
IF ABL:공작기능 > 0
    IF CFLAG:799 & 4
        LOCAL:0 = 4
    ELSEIF CFLAG:799 & 2
        LOCAL:0 = 0
    ELSE
    ;開発が無ければ終了
        LOCAL:9 = 1
    ENDIF
ELSE
    ;工作技能が無ければ終了
    LOCAL:9 = 1
ENDIF
IF LOCAL:9 == 1
    ;開発者指定ありの場合はTARGETを戻す
    SIF ARG:0 != 0
        TARGET = LOCAL:8
    RETURN 0
ENDIF
;アイテム番号総ざらい(0～89 90番台のエンディング系アイテムは開発不可)
LOCAL:3 = 0
LOCAL:7 = 0
FOR LOCAL:1, 0, 90
    LOCAL:2 = LOCAL:1 + 700
    ;開発フラグが2(上質／高品質を開発中)か6(特製品を開発中)であれば対象アイテムとしてカウント
    IF (CFLAG:(LOCAL:2) & 2)
        LOCAL:7 += 1
        SIF (LOCAL:0 == 0 || (CFLAG:(LOCAL:2) & LOCAL:0))
            LOCAL:3 += 1
    ENDIF
NEXT
LOCAL:5 = 0
LOCAL:6 = -1
IF LOCAL:3 > 0
    ;何番目の対象アイテムが完成するかを指定
    LOCAL:4 = RAND:(LOCAL:3) + 1
    FOR LOCAL:1, 0, 90
        ;対象アイテム番号を変換
        LOCAL:2 = LOCAL:1 + 700
        ;開発フラグが2(上質／高品質を開発中)か6(特製品を開発中)であれば対象アイテムとしてカウント
        IF (CFLAG:(LOCAL:2) & 2) && (LOCAL:0 == 0 || (CFLAG:(LOCAL:2) & LOCAL:0))
            LOCAL:5 += 1
            LOCAL:6 = LOCAL:1
        ENDIF
        ;対象が見つかればループ終了
        SIF LOCAL:5 == LOCAL:4
            BREAK
    NEXT
    ;アイテムが無ければ終了(念のため)
    IF LOCAL:6 < 0
        ;開発者指定ありの場合はTARGETを戻す
        SIF ARG:0 != 0
            TARGET = LOCAL:8
        RETURN 0
    ENDIF
    IF LOCAL:0 == 4
        FLAG:1121 = 2
    ELSE
        FLAG:1121 = 1
    ENDIF
    IF CFLAG:4 == 0
        ;呼び出しが調教前であれば口上とフラグチェック
        FLAG:1110 = LOCAL:1
        IF LOCAL:0 == 4
            CALL KOJO_DEVELOPED_CUSTOMTOOL_PLUS
            CFLAG:(LOCAL:2) = 12
            EXP:74 += 2
            LOCAL:1--
            PRINTFORML %CALLNAME:TARGET%의 %ITEMNAME:(LOCAL:1)%의 성능이 더 오른 것 같다.
            LOCAL:1++
            PRINTFORML %EXPNAME:74%+2
            ;特製品を作ったのを見て工房の設計を考える
            IF (FLAG:1100 & 8) && FLAG:1102 < 1
                PRINTW 공방을 개설할 수 있게 되었습니다.
            ENDIF
            SIF FLAG:1102 < 1
                FLAG:1102 = 1
            WAIT
            SIF LOCAL:3 == 1
                CFLAG:799 -= 4
        ELSE
            CALL KOJO_DEVELOPED_CUSTOMTOOL
            CFLAG:(LOCAL:2) = 4
            EXP:74 += 1
            LOCAL:1--
            PRINTFORML %CALLNAME:TARGET%의 %ITEMNAME:(LOCAL:1)%의 성능이 더 오른 것 같다.
            LOCAL:1++
            PRINTFORMW %EXPNAME:74%+1
            SIF LOCAL:3 == 1
                CFLAG:799 -= 2
        ENDIF
    ELSEIF CFLAG:4 == 3
        ;呼び出しが工房である場合の口上とフラグチェック
        FLAG:1110 = LOCAL:1
        ;特製品を作成しているなら作業番号を切り替える
        SIF LOCAL:0 == 4
            CFLAG:690 = 105
        RESULT = -1
        TRYCALLFORM KOJO_WORKSHOP_{NO}, CFLAG:690, LOCAL:1
        SIF RESULT == -1
            TRYCALLFORM KOJO_WORKSHOP_XX, CFLAG:690, LOCAL:1
        PRINTFORML %조사처리(CALLNAME:TARGET, "는")% 대기 중에 %ITEMNAME:(LOCAL:1)%의 성능을 \@ CFLAG:690 == 105 ? 더욱 더 # \@ 올린 것 같다.
    ENDIF
    ;開発者指定ありの場合はTARGETを戻す
    SIF ARG:0 != 0
        TARGET = LOCAL:8
    RETURN 1
ENDIF
;開発者指定ありの場合はTARGETを戻す
