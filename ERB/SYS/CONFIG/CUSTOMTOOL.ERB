;=======================================;
;SOURCECHECK_CUSTOMTOOL 使用時ソースチェック
;引数
;FLAG 1110 : 使用アイテム番号
;FLAG 1111 : 改善タイプ(0:威力向上 1:SM系強化 2:苦痛系強化(非装備/装着時) 3:苦痛系強化(装備中/非装備2個目以降)
;FLAG 1112 : チェック対象ソース値
;戻値
;RETURN    : 0固定
;FLAG 1120 : チェック結果ソース値
;LOCAL変数
;0      : 引数受け皿(使用アイテム番号)
;1      : 引数受け皿(チェック対象ソース番号)
;2      : 引数受け皿(チェック対象ソース値)
;3      : 対象アイテムの開発状況管理番号 (対象アイテム番号＋700)
;4      : チェック対象ソース値演算テンポラリ
;5      : 対象アイテムの開発者管理番号 (対象アイテム＋1000)
;6      : 苦痛軽減ランク
;7      : 苦痛軽減結果
;=======================================;
@SOURCECHECK_CUSTOMTOOL
LOCAL:0 = FLAG:1110
LOCAL:1 = FLAG:1111
LOCAL:2 = FLAG:1112
LOCAL:3 = LOCAL:0 + 700
LOCAL:4 = LOCAL:2
LOCAL:5 = LOCAL:0 + 1000
LOCAL:6 = 0
LOCAL:7 = 0
IF FLAG:(LOCAL:5) < 0
    ;開発者管理番号が0未満(誰のでもないか未定)なら変動なし
    FLAG:1120 = LOCAL:0
    RETURN 0
ENDIF
IF LOCAL:1 == 0
    ;通常の性能向上
    IF CFLAG:(FLAG:(LOCAL:5)):(LOCAL:3) & 8
        ;特製品
        IF FLAG:(LOCAL:5) == TARGET
            ;調教対象特製品であれば自慰中毒に合わせて倍率変化
            IF ABL:자위중독 == 5
                TIMES LOCAL:4 , 1.75
            ELSEIF ABL:자위중독 == 4
                TIMES LOCAL:4 , 1.50
            ELSEIF ABL:자위중독 == 3
                TIMES LOCAL:4 , 1.35
            ELSE
                TIMES LOCAL:4 , 1.25
            ENDIF
        ELSE
            ;他者製
            TIMES LOCAL:4 , 1.25
        ENDIF
    ELSEIF CFLAG:(FLAG:(LOCAL:5)):(LOCAL:3) & 4
        ;上質／高性能
        IF FLAG:(LOCAL:5) == TARGET
            ;調教対象製
            TIMES LOCAL:4 , 1.20
        ELSE
            ;他者製
            TIMES LOCAL:4 , 1.15
        ENDIF
    ENDIF
ELSE
    ;SM系の特殊な性能向上
    IF CFLAG:(FLAG:(LOCAL:5)):(LOCAL:3) & 8
        ;特製品
        IF FLAG:(LOCAL:5) == TARGET
            ;調教対象特製品であれば自慰中毒に合わせて倍率変化
            IF ABL:자위중독 == 5
                TIMES LOCAL:4 , 1.75
            ELSEIF ABL:자위중독 == 4
                TIMES LOCAL:4 , 1.50
            ELSEIF ABL:자위중독 == 3
                TIMES LOCAL:4 , 1.35
            ELSE
                TIMES LOCAL:4 , 1.25
            ENDIF
            LOCAL:6 = 2
        ELSEIF FLAG:(LOCAL:5) == PLAYER
            ;調教者特製品であれば技巧レベルに合わせて倍率変化
            IF ABL:PLAYER:12 == 5
                TIMES LOCAL:4 , 1.75
            ELSEIF ABL:PLAYER:12 == 4
                TIMES LOCAL:4 , 1.50
            ELSEIF ABL:PLAYER:12 == 3
                TIMES LOCAL:4 , 1.35
            ELSE
                TIMES LOCAL:4 , 1.25
            ENDIF
            LOCAL:6 = 3
        ELSE
            ;他者製
            TIMES LOCAL:4 , 1.25
            LOCAL:6 = 1
        ENDIF
    ELSEIF CFLAG:(FLAG:(LOCAL:5)):(LOCAL:3) & 4
        ;上質／高性能
        IF FLAG:(LOCAL:5) == TARGET
            ;調教対象製
            TIMES LOCAL:4 , 1.20
            LOCAL:6 = 1
        ELSEIF FLAG:(LOCAL:5) == PLAYER
            ;調教者製
            TIMES LOCAL:4 , 1.20
            LOCAL:6 = 2
        ELSE
            ;他者製
            TIMES LOCAL:4 , 1.15
            LOCAL:6 = 1
        ENDIF
    ENDIF
    ;苦痛系なら体力・気力の消耗を軽減
    IF LOCAL:1 == 2 || LOCAL:1 == 3
        LOCAL:7 = LOCAL:4
        IF LOCAL:6 == 3
            TIMES LOCAL:7 , 0.03
        ELSEIF LOCAL:6 == 2
            TIMES LOCAL:7 , 0.02
        ELSEIF LOCAL:6 == 1
            TIMES LOCAL:7 , 0.01
        ELSE
            LOCAL:7 = 0
        ENDIF
        IF LOCAL:1 == 2
            CFLAG:790 = LOCAL:7
            CFLAG:791 = LOCAL:7
        ELSEIF LOCAL:1 == 3
            CFLAG:790 += LOCAL:7
            CFLAG:791 += LOCAL:7
        ENDIF
    ENDIF
ENDIF
;演算結果を戻り値に渡す
FLAG:1120 = LOCAL:4
RETURN 0

