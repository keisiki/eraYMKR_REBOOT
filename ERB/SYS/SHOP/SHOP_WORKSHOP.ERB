;=======================================;
;@STAY_WORKSHOP 工房に半日滞在する
;工房に滞在するための準備処理を行う
;=======================================;
@STAY_WORKSHOP
IF TARGET < 0
    ;調教対象がいない場合、念のためMASTERを代わりにセットしておく
    TARGET = MASTER
    ;調教対象無しフラグを立てておく
    SIF (CFLAG:MASTER:691 & 1p10) == 0
        CFLAG:MASTER:691 |= 1p10
ELSE
    ;調教対象がいる場合、調教対象無しフラグを倒しておく
    SIF CFLAG:MASTER:691 & 1p10
        CFLAG:MASTER:691 -= 1p10
ENDIF
SIF CFLAG:MASTER:690 == 5
    CFLAG:MASTER:690 = 0
BEGIN TURNEND
RETURN 0

