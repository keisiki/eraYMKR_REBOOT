    RETURN 0
;医療用品は(現状)工房では作成不能
;SIF (FLAG:1120 & 128) && TALENT:(FLAG:1111):55
SIF (FLAG:1120 & 128)
    RETURN 0
;工作経験を記憶
;K = EXP:(FLAG:1111):94
LOCAL:0 = 1
;電動品は工作技能Lv5必要
SIF (FLAG:1120 & 2) && ABL:(FLAG:1111):공작기능 < 5
    RETURN 0
;SM用品はSM系素養(ドＳ、ドＭ、サド、マゾ、サドっ気Lv1以上、マゾっ気Lv1以上のいずれか)が必要
SIF (FLAG:1120 & 4) && (TALENT:(FLAG:1111):177 || TALENT:(FLAG:1111):178 || TALENT:(FLAG:1111):81 || TALENT:(FLAG:1111):82 || ABL:(FLAG:1111):새드끼 || ABL:(FLAG:1111):마조끼)
    RETURN 0
;大道具は工作経験がある程度必要
IF (FLAG:1120 & 8) 
    LOCAL:0 *= 6
ENDIF
;消耗品は工作経験が少々必要
IF (FLAG:1120 & 16)
    LOCAL:0 *= 2
ENDIF
;衣料品は工作経験が少々必要
IF (FLAG:1120 & 32)
    LOCAL:0 *= 2
ENDIF
;精密機器は工作技能Lv5と工作経験がかなり必要
IF (FLAG:1120 & 64)
    IF ABL:(FLAG:1111):93 < 5
        RETURN 0
    ELSE
        LOCAL:0 *= 8
    ENDIF
ENDIF
;工作名人なら必要工作経験を半減
SIF TALENT:(FLAG:1111):195
    LOCAL:0 /= 2
;工作経験が必要工作経験に満たなければ作成不能
SIF EXP:(FLAG:1111):74 < LOCAL:0
    RETURN 0
RETURN 1

