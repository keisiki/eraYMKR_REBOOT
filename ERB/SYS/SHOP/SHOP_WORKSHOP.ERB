            LOCAL:0 += 1
            LOCAL:1 = LOCAL:3
        ENDIF
    NEXT
    ;生徒数一人なら「対象全員」を「対象その生徒」に変更
    IF LOCAL:0 == 1
        CFLAG:(LOCAL:2):692 = CFLAG:(LOCAL:1):3109
    ;生徒数ゼロなら待機状態に変更
    ELSEIF LOCAL:0 < 1
        CFLAG:(LOCAL:2):690 = 0
        CFLAG:(LOCAL:2):692 = 0
        LOCAL:0 = 0
    ENDIF
    CFLAG:(LOCAL:2):694 = LOCAL:0
WEND
RETURN 0

