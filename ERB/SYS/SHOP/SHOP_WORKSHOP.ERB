    SIF (LOCAL:2 + 1) == CHARANUM
        BREAK
    FINDCHARA CFLAG:690, 1, LOCAL:2 + 1
    LOCAL:2 = RESULT
    SIF LOCAL:2 == -1
        BREAK
    LOCAL:0 = 0
    FOR LOCAL:3, 0, CHARANUM
