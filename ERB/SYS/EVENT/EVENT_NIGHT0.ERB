        CONTINUE

    ;101以上の相性の奴隷を保存 ※TARGETとMが同一キャラにならないようにTARGETと登録順番号が同じならはじく
    IF RELATION:TARGET:(NO:COUNT) > 100 && TARGET != COUNT
        ;一人目は強制的に記録
        IF LOCAL:22 == 0
            CALLF SET_CHARA_M(COUNT)
            LOCAL:15 = COUNT
        ELSE
            ;二人目からは３分の１の確率で保存
            IF RAND:3 == 0
                CALLF SET_CHARA_M(COUNT)
                LOCAL:15 = COUNT
            ENDIF
        ENDIF
        LOCAL:22 += 1
    ENDIF
REND

