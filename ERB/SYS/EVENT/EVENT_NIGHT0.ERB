IF FLAG:12 & 512
    LOCAL:20 = NIGHT_CHECK2(LOCAL:21)
    LOCAL:21 = RAND:100
ELSE
    SIF TARGET == -1
        RETURN 0
    CALL NIGHT_CHECK
    IF RESULT >= 18
        LOCAL:20 = 1
        TFLAG:400 = TARGET
        LOCAL:21 = RAND:110
    ENDIF
