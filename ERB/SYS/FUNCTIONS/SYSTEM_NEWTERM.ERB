IF TALENT:MASTER:대범함
    FOR LOCAL, 0, 17
        LOCAL:6 += GETBIT(FLAG:계승가능조수수, LOCAL)
    NEXT
ENDIF
;대체 인원의 한계 값 설정
LOCAL:7 = (TALENT:MASTER:대범함) ? 20 # 9
LOCAL:6 = LIMIT(LOCAL:6, 0, LOCAL:7)

LOCAL:5 = 0
TFLAG:0 = 0
IF CHARANUM > 1
    FOR LOCAL, 0, CHARANUM
        MARK:LOCAL:98 = 0
        ;일단 주인 자신은 제거
        SIF LOCAL == MASTER
