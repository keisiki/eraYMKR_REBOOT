;-------------------------------------------------
DOWNBASE:0 += 700
DOWNBASE:기력 += 350

SOURCE:11 = 100
SOURCE:20 = 2500
SOURCE:12 = 1200
SOURCE:22 = 2000
SOURCE:31 = 2700

;ABL:A감각을 본다
IF ABL:A감각 == 0
    SOURCE:2 = 11
    SOURCE:22 += 100
ELSEIF ABL:A감각 == 1
    SOURCE:2 = 110
    SOURCE:22 += 700
ELSEIF ABL:A감각 == 2
    SOURCE:2 = 550
    SOURCE:22 += 1500
ELSEIF ABL:A감각 == 3
    SOURCE:2 = 1100
    SOURCE:22 += 3000
ELSEIF ABL:A감각 == 4
    SOURCE:2 = 2200
    SOURCE:22 += 5000
ELSE
    SOURCE:2 = 3300
    SOURCE:22 += 8000
ENDIF

;EXP:A경험을 본다
IF EXP:A경험 < EXPLV:1
    TIMES SOURCE:2 , 0.10
    SOURCE:20 += 26000
ELSEIF EXP:A경험 < EXPLV:2
    TIMES SOURCE:2 , 0.30
    SOURCE:20 += 13000
ELSEIF EXP:A경험 < EXPLV:3
    TIMES SOURCE:2 , 0.50
    SOURCE:20 += 6500
ELSEIF EXP:A경험 < EXPLV:4
    TIMES SOURCE:2 , 1.00
    SOURCE:20 += 2000
ELSEIF EXP:A경험 < EXPLV:5
    TIMES SOURCE:2 , 1.40
    SOURCE:20 += 1000
ELSE
    TIMES SOURCE:2 , 1.60
    SOURCE:20 += 500
ENDIF

;PALAM:윤활을 본다
IF PALAM:10 < PALAMLV:1
    TIMES SOURCE:2 , 0.40
    SOURCE:20 += 10000
ELSEIF PALAM:10 < PALAMLV:2
    TIMES SOURCE:2 , 0.80
    SOURCE:20 += 3600
ELSEIF PALAM:10 < PALAMLV:3
    TIMES SOURCE:2 , 1.00
    SOURCE:20 += 1200
ELSEIF PALAM:10 < PALAMLV:4
    TIMES SOURCE:2 , 1.40
    SOURCE:20 += 200
ELSE
    TIMES SOURCE:2 , 1.80
    SOURCE:20 += 100
ENDIF

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES SOURCE:2 , 0.60
    TIMES SOURCE:22 , 0.60
ELSEIF PALAM:13 < PALAMLV:2
    TIMES SOURCE:2 , 0.80
    TIMES SOURCE:22 , 0.80
ELSEIF PALAM:13 < PALAMLV:3
    TIMES SOURCE:2 , 1.00
    TIMES SOURCE:22 , 1.00
ELSEIF PALAM:13 < PALAMLV:4
    TIMES SOURCE:2 , 1.20
    TIMES SOURCE:22 , 1.20
ELSE
    TIMES SOURCE:2 , 1.40
    TIMES SOURCE:22 , 1.40
ENDIF

;처녀로 정조관념
SIF TALENT:처녀 == 1 && TALENT:정조관념
    SOURCE:22 /= 3

;A민감, 둔감을 본다
;쾌A자체의 체크는 다음에 정리해 준다
IF TALENT:A둔감
    TIMES SOURCE:20 , 1.50
    TIMES SOURCE:22 , 1.50
    TIMES SOURCE:31 , 1.50
ELSEIF TALENT:A민감
    TIMES SOURCE:20 , 0.60
    TIMES SOURCE:22 , 0.60
    TIMES SOURCE:31 , 0.60
ENDIF

;[작은체형]
SIF TALENT:작은체형
    TIMES SOURCE:20 , 2.00

TCVAR:1 += 25
TCVAR:33 += 2

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 3
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 10
ENDIF
;주인 경험 플래그
SIF ASSIPLAY == 0
    TFLAG:50 += (ABL:A감각 >= 3) ?  2 # 1
RETURN 1

