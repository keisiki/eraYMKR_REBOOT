SIF ASSIPLAY
    RETURN 0
;메이링이나 청아, 카센, 후토, 미코가 대상일 경우에는 조수 가능 또는 연모 또는 봉사정신 ４ 이상 또는 순종 · 기교 · 봉사정신이 모두 3 이상
IF NO:TARGET == 6 || NO:TARGET == 80 || NO:TARGET == 83 || NO:TARGET == 85 || NO:TARGET == 86 || TALENT:TARGET:선인 == 1
    SIF CFLAG:1 < 2 && TALENT:연모 == 0 && ABL:봉사정신 < 4 && (ABL:순종 < 3 || ABL:기교 < 3 || ABL:봉사정신 < 3)
        RETURN 0
ENDIF
;수면 중에는 불가
SIF EQUIP:14
    RETURN 0
;실신 중에는 불가
SIF TFLAG:899 > 0
    RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
    RETURN 0
;욕실 플레이 중에는 플레이 매트가 없으면 불가
SIF TEQUIP:53 && ITEM:42 == 0 && NOITEM == 0
    RETURN 0
;샤워 중에는 불가
SIF TEQUIP:54
    RETURN 0
;○○목욕탕 입욕 중에는 불가
SIF TEQUIP:55
    RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
    RETURN 0
;훈도시 착용 중일 경우는 안 됨
SIF TEQUIP:59 == 17
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
RETURN 1

