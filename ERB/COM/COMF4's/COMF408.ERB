SIF TEQUIP:40 == 6
    JUMP COM653

PRINTL 거미줄
COM_NAME = 거미줄
CALL TRAIN_MESSAGE_COM408

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
;긴박 경험이 높으면 소비 감소
IF EXP:긴박경험 < EXPLV:3
    DOWNBASE:0 += 100
    DOWNBASE:기력 += 130
ELSEIF EXP:긴박경험 < EXPLV:4
    DOWNBASE:0 += 80
    DOWNBASE:기력 += 100
ELSE
    DOWNBASE:0 += 60
    DOWNBASE:기력 += 70
ENDIF

LOCAL:1 = 250
LOCAL:2 = 800
SOURCE:12 = 900
SOURCE:22 = 500
SOURCE:31 = 500

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES LOCAL:1 , 0.80
ELSEIF PALAM:13 < PALAMLV:2
    TIMES LOCAL:1 , 0.90
ELSEIF PALAM:13 < PALAMLV:3
    TIMES LOCAL:1 , 1.00
ELSEIF PALAM:13 < PALAMLV:4
    TIMES LOCAL:1 , 1.10
ELSE
    TIMES LOCAL:1 , 1.20
ENDIF

;ABL:순종을 본다
IF ABL:순종 == 0
    TIMES LOCAL:1 , 0.40
ELSEIF ABL:순종 == 1
    TIMES LOCAL:1 , 0.60
ELSEIF ABL:순종 == 2
    TIMES LOCAL:1 , 0.80
ELSEIF ABL:순종 == 3
    TIMES LOCAL:1 , 1.00
ELSEIF ABL:순종 == 4
    TIMES LOCAL:1 , 1.10
ELSE
    TIMES LOCAL:1 , 1.20
ENDIF

;ABL:마조끼를 본다
IF ABL:마조끼 == 0
    TIMES LOCAL:1 , 0.80
ELSEIF ABL:마조끼 == 1
    TIMES LOCAL:1 , 1.00
ELSEIF ABL:마조끼 == 2
    TIMES LOCAL:1 , 1.30
ELSEIF ABL:마조끼 == 3
    TIMES LOCAL:1 , 1.60
ELSEIF ABL:마조끼 == 4
    TIMES LOCAL:1 , 2.00
ELSE
    TIMES LOCAL:1 , 3.00
ENDIF

;겁쟁이
SIF TALENT:10
    TIMES SOURCE:31 , 2.00
;도착적
SIF TALENT:80
    TIMES LOCAL:1 , 2.00
;절벽·빈유라면 수치심이 자극된다
SIF TALENT:110 || TALENT:111
    TIMES SOURCE:12 , 3.50

;조교 대상이 리굴이라면 공포 상승
SIF NO:TARGET == 24
    TIMES LOCAL:2 , 3.00

SOURCE:25 += LOCAL:2
SOURCE:20 += LOCAL:1
SOURCE:12 += LOCAL:1
SOURCE:22 += LOCAL:1
SOURCE:31 += LOCAL:1
SOURCE:19 += LOCAL:1
SOURCE:17 += LOCAL:1
SOURCE:18 += LOCAL:1

;줄의 착탈
TEQUIP:40 = 6
TEQUIP:41 = 2
TFLAG:142 = 100

TCVAR:31 += 7

RETURN 1

