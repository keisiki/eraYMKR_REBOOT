    LOCAL = 60
ELSEIF ABL:마조끼 == 1
    LOCAL = 180
ELSEIF ABL:마조끼 == 2
    LOCAL = 300
ELSEIF ABL:마조끼 == 3
    LOCAL = 480
ELSEIF ABL:마조끼 == 4
    LOCAL = 700
ELSE
    LOCAL = 850
ENDIF

;도착적
SIF TALENT:80
    TIMES LOCAL , 2.00

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES LOCAL , 0.80
ELSEIF PALAM:13 < PALAMLV:2
    TIMES LOCAL , 0.90
ELSEIF PALAM:13 < PALAMLV:3
    TIMES LOCAL , 1.00
ELSEIF PALAM:13 < PALAMLV:4
    TIMES LOCAL , 1.10
ELSE
    TIMES LOCAL , 1.20
ENDIF

SOURCE:20 += LOCAL
SOURCE:19 += LOCAL
SOURCE:12 += LOCAL
SOURCE:22 += LOCAL
SOURCE:31 += LOCAL
SOURCE:17 += LOCAL
SOURCE:18 += LOCAL
SOURCE:25 += SOURCE:31

IF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
    TCVAR:12 += 1
ELSEIF TALENT:120 && TALENT:PLAYER:120
    TCVAR:13 += 1
ENDIF
;주인 경험 플래그
SIF ASSIPLAY == 0 && ABL:마조끼 >= 2
    TFLAG:50 += 1

LOCAL:1 = 1 + RAND:10
TFLAG:142 -= LOCAL:1

SIF TFLAG:142 <= 0
    CALL SPIDER_SILK_TEAR

TCVAR:31 += 2

RETURN 1

