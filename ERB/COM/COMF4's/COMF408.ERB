@COM_ABLE408
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:408 > 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16384) == 0
    RETURN 0
;조교자가 ヤマメでないとダメ
SIF NO:PLAYER != 58
    RETURN 0
;縄装着中はダメ
SIF TEQUIP:40 && TEQUIP:40 < 6
    RETURN 0
;蜘蛛の巣に吊るされていたらダメ
