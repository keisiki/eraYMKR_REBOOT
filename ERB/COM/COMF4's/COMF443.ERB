@COM_ABLE443
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:443 > 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16384) == 0
    RETURN 0
;対象が요우무のときは반령이 調教可能なキャラでなおかつ主人や助手をしていない状態でないと使えない
IF NO:TARGET == 19
    ;반령이 현재 조교 가능
    LOCAL:1 = 0
    FOR LOCAL, 0, CHARANUM
        ;主人や助手は除外
        SIF LOCAL == MASTER || LOCAL == ASSI
            CONTINUE
        ;妊娠していたら除外
        SIF TALENT:LOCAL:140 == 1
            CONTINUE
        ;失踪中などこの場にいないなら除外
        SIF CFLAG:LOCAL:4
            CONTINUE
        ;反発刻印もしくは恐怖刻印３がある場合は除外(拒絶する)
        SIF MARK:LOCAL:공포각인 > 2 || MARK:LOCAL:반발각인
            CONTINUE
        ;반령だったらLOCAL:1に+1
        SIF NO:LOCAL == 65
            LOCAL:1 += 1
    NEXT
    SIF LOCAL:1 == 0
        RETURN 0
;対象が요우키のときは반령(요우키)が調教可能なキャラでなおかつ主人や助手をしていない状態でないと使えない
ELSEIF NO:TARGET == 70
    ;반령(요우키)が현재 조교 가능
    LOCAL:1 = 0
    FOR LOCAL, 0, CHARANUM
        ;主人や助手は除外
        SIF LOCAL == MASTER || LOCAL == ASSI
            CONTINUE
        ;妊娠していたら除外
        SIF TALENT:LOCAL:140 == 1
            CONTINUE
        ;失踪中などこの場にいないなら除外
        SIF CFLAG:LOCAL:4
            CONTINUE
        ;反発刻印もしくは恐怖刻印３がある場合は除外(拒絶する)
        SIF MARK:LOCAL:공포각인 > 2 || MARK:LOCAL:반발각인
            CONTINUE
        ;반령(요우키)だったらLOCAL:1に+1
        SIF NO:LOCAL == 99
            LOCAL:1 += 1
    NEXT
    SIF LOCAL:1 == 0
        RETURN 0
;対象が요우무か요우키でないとダメ
ELSE
    RETURN 0
ENDIF
