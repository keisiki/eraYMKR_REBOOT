ELSEIF ABL:순종 == 3
    SOURCE:40 = 200
ELSEIF ABL:순종 == 2
    SOURCE:40 = 100
ELSEIF ABL:순종 == 1
    SOURCE:40 = 20
ENDIF

MONEY -= 1500
TEQUIP:55 = 17

RETURN 1

