    SOURCE:17 = 0
ELSEIF ABL:순종 == 1
    SOURCE:32 = 250
    SOURCE:17 = 20
ELSEIF ABL:순종 == 2
    SOURCE:32 = 100
    SOURCE:17 = 100
ELSEIF ABL:순종 == 3
    SOURCE:32 = 10
    SOURCE:17 = 250
ELSEIF ABL:순종 == 4
    SOURCE:32 = 5
    SOURCE:17 = 500
ELSE
    SOURCE:32 = 0
    SOURCE:17 = 800
ENDIF

;ABL:노출벽을 본다
