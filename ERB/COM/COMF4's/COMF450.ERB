@COM_ABLE450
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:450 > 0
    RETURN 0
;조교자奉仕 · ウフフ系커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 2048) == 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16384) == 0
    RETURN 0
;조교자가 天治でないとダメ
SIF NO:PLAYER != 142
    RETURN 0
;ビール2つ持っているか, アイテムなし設定でないとダメ
SIF ITEM:601 < 2 && NOITEM == 0
    RETURN 0
;主人に対する好感度が100이상 필요
SIF CFLAG:2 < 100
    RETURN 0
;反発刻印が0でないとダメ
SIF MARK:반발각인
    RETURN 0
;수면 중에는 불가
SIF EQUIP:14
    RETURN 0
;猿轡付けていると無理
SIF TEQUIP:42
    RETURN 0
;샤워 중에는 불가
SIF TEQUIP:54
    RETURN 0
;○○목욕탕 입욕 중에는 불가
SIF TEQUIP:55
    RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
;실신 중에는 불가
SIF TFLAG:899 > 0
    RETURN 0
RETURN 1

