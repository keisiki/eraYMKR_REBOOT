;-------------------------------------------------
;초응시 발동중
;-------------------------------------------------
;파라미터 변화. 사랑 주도권 달성감 굴종 중독 충족 트라우마 수치 선정성 기술 학습의 소스를 랜덤으로 바꾸어 넣고
;가산될 가능성을 두고 있는 것은 카오스 같아지기 때문에
;또 카오스를 증강시키기 (위해)때문에, 한층 더 파라미터(parameter)에 가산되는 값이 상하에 변화하도록(듯이)
@EQUIP_COM452
VARSET LOCAL, 0
PRINTL <초응시 발동 중>
;텐포라리에 배치해, 원래의 SOURCE치를 리셋
LOCAL:1 = SOURCE:11
LOCAL:2 = SOURCE:14
LOCAL:3 = SOURCE:16
LOCAL:4 = SOURCE:22
LOCAL:5 = SOURCE:24
LOCAL:6 = SOURCE:25
LOCAL:7 = SOURCE:28
LOCAL:8 = SOURCE:29
SOURCE:11 = 0
SOURCE:14 = 0
SOURCE:16 = 0
SOURCE:22 = 0
SOURCE:24 = 0
SOURCE:25 = 0
SOURCE:28 = 0
SOURCE:29 = 0

;재계산
FOR LOCAL , 1, 9
    LOCAL:9 = LOCAL:LOCAL
    IF RAND:3 == 0
        TIMES LOCAL:9 , 0.80
    ELSEIF RAND:2 == 0
        TIMES LOCAL:9 , 1.20
    ENDIF
    LOCAL:10 = RAND:100
    LOCAL:10 %= 8
    SELECTCASE LOCAL:10
        CASE 0
            SOURCE:11 += LOCAL:9
        CASE 1
            SOURCE:14 += LOCAL:9
        CASE 2
            SOURCE:16 += LOCAL:9
        CASE 3
            SOURCE:22 += LOCAL:9
        CASE 4
            SOURCE:24 += LOCAL:9
        CASE 5
            SOURCE:25 += LOCAL:9
        CASE 6
            SOURCE:28 += LOCAL:9
        CASE 7
            SOURCE:29 += LOCAL:9
    ENDSELECT
NEXT

LOCAL = RAND:5
IF LOCAL == 0
    ;불결이 욕정 추가에 추가
    LOCAL:11 = SOURCE:30 / 10 * 7
    SOURCE:18 += LOCAL:11
ELSEIF LOCAL == 1
    ;일탈이 쿄우준 추가에 추가
    LOCAL:11 = SOURCE:31 / 10 * 7
    SOURCE:17 += LOCAL:11
ELSEIF LOCAL == 2
    ;반감 추가가 액체 추가에 추가
    LOCAL:11 = SOURCE:32 / 10 * 7
    SOURCE:19 += LOCAL:11
ENDIF
;마지막에 쾌CVAB의 합계 에 비례해 지배의 소스가 증가한다
LOCAL:11 = (SOURCE:0 + SOURCE:1 + SOURCE:2 + SOURCE:3) / 10 * 7
SOURCE:23 += LOCAL:11

RETURN 1

