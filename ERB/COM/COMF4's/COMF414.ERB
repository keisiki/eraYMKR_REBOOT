@COM_ABLE414
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:414 > 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 16384) == 0
    RETURN 0
;조교자가 ＥＸ化していない妹紅でないとダメ
SIF ( NO:PLAYER != 31 || CFLAG:PLAYER:SP캐릭터) && NO:PLAYER != 85
    RETURN 0
;Ｂ계 장착구 사용 중에는 불가
SIF TEQUIP:35 || TEQUIP:36
    RETURN 0
;욕실 플레이 중에는 플레이 매트가 없으면 불가
SIF TEQUIP:53 && ITEM:42 == 0 && NOITEM == 0
    RETURN 0
;샤워 중에는 불가
SIF TEQUIP:54
    RETURN 0
;○○목욕탕 입욕 중에는 불가
SIF TEQUIP:55
    RETURN 0
;알몸 앞치마, 학교수영복 플레이, 코스프레 중에는 불가
SIF TEQUIP:59
    RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
    RETURN 0
RETURN 1

