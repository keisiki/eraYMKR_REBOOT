@COM414
PRINTL 유두 지지기
COM_NAME = 유두 지지기
CALL TRAIN_MESSAGE_COM414

DOWNBASE:0 += 5
DOWNBASE:기력 += 50

SOURCE:12 = 300
SOURCE:22 = 300
SOURCE:31 = 400

;ABL:B감각을 본다
IF ABL:B감각 == 0
    SOURCE:3 = 40
    SOURCE:20 = 100
ELSEIF ABL:B감각 == 1
    SOURCE:3 = 160
    SOURCE:20 = 500
ELSEIF ABL:B감각 == 2
    SOURCE:3 = 700
    SOURCE:20 = 750
ELSEIF ABL:B감각 == 3
    SOURCE:3 = 1500
    SOURCE:20 = 1500
ELSEIF ABL:B감각 == 4
    SOURCE:3 = 2400
    SOURCE:20 = 2500
ELSE
    SOURCE:3 = 3300
    SOURCE:20 = 3000
ENDIF

;조교자의 ABL:기교를 본다
IF ABL:PLAYER:기교 == 0
    TIMES SOURCE:3 , 0.60
    TIMES SOURCE:20 , 4.00
ELSEIF ABL:PLAYER:기교 == 1
    TIMES SOURCE:3 , 0.80
    TIMES SOURCE:20 , 2.00
ELSEIF ABL:PLAYER:기교 == 2
    TIMES SOURCE:3 , 1.00
    TIMES SOURCE:20 , 1.50
ELSEIF ABL:PLAYER:기교 == 3
    TIMES SOURCE:3 , 1.20
    TIMES SOURCE:20 , 1.20
ELSEIF ABL:PLAYER:기교 == 4
    TIMES SOURCE:3 , 1.40
    TIMES SOURCE:20 , 1.10
ELSE
    TIMES SOURCE:3 , 1.60
    TIMES SOURCE:20 , 1.00
ENDIF

;새드을 본다
SIF TALENT:새드
    TIMES SOURCE:20 , 2.00
;B민감, 둔감을 본다
SIF TALENT:B둔감
    TIMES SOURCE:3 , 0.60
SIF TALENT:B민감
    TIMES SOURCE:3 , 1.50
;불길에 약할 것 같은 분들(치르노, 레티, 리굴, 미스티아)
IF NO:TARGET == 5 || NO:TARGET == 12 || NO:TARGET == 24 || NO:TARGET == 25
    TIMES SOURCE:20 , 2.00
    SOURCE:25 += 3000
ENDIF

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 3
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 3
ENDIF

RETURN 1

