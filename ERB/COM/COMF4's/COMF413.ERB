@COM_ABLE413
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:413 > 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 16384) == 0
    RETURN 0
;조교자가 ＥＸ化していない妹紅でないとダメ
SIF (NO:PLAYER != 31 || CFLAG:PLAYER:SP캐릭터) && NO:PLAYER != 85
    RETURN 0
