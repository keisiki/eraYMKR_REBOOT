@COM_ABLE424
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:424 > 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 16384) == 0
    RETURN 0
;조교자가 萃香または勇儀, 若しくは조교 대상이 萃香または勇儀でないとダメ
IF NO:TARGET != 23 && NO:TARGET != 60
    SIF NO:PLAYER != 23 && NO:PLAYER != 60
        RETURN 0
ENDIF
;性器が汚れているとMASTERの場合はできない(조교자가 汚れ無視か愛液, 母乳のよごれならＯＫ)
SIF STAIN:보지 >= 2 && (STAIN:보지 != 16 && STAIN:보지 != 17) && ASSIPLAY == 0 && TALENT:MASTER:불결무시 == 0
    RETURN 0
;性器が汚れており, 汚臭敏感で순종4미만의 ASSI일 경우はできない(조교자가 汚れ無視か愛液, 母乳のよごれならＯＫ)
IF STAIN:보지 >= 2 && (STAIN:보지 != 16 && STAIN:보지 != 17) && ASSIPLAY
    SIF ABL:ASSI:순종 <= 3 && TALENT:ASSI:냄새민감 && TALENT:ASSI:불결무시 == 0
        RETURN 0
ENDIF
;그 조교 중에 관장 플레이＋배설이 있었을 경우, 조교자가 汚れ無視もしくは汚臭鈍感を持たないなら実行できない
SIF TFLAG:140 & 256 && TALENT:PLAYER:냄새둔감 == 0 && TALENT:PLAYER:불결무시 == 0
    RETURN 0
;[작은체형]の場合, 巨乳か爆乳じゃないとダメ
SIF TALENT:128 && TALENT:111 == 0 && TALENT:112 == 0
    RETURN 0
;남자라면 안 됨
SIF TALENT:남자
    RETURN 0
;Ｖ계 장착구使用中のときは기교가 4이상 없으면 안 됨
SIF TEQUIP:20 && ABL:PLAYER:기교 < 4
    RETURN 0
;쿠스코 채웠으면 불가
SIF TEQUIP:21
    RETURN 0
;縄で緊縛中または대상의 순종이 3이상 없으면 안 됨
SIF TEQUIP:40 && ABL:순종 < 2
    RETURN 0
;거미집에 걸려 있을 때는 불가
SIF TEQUIP:40 == 7
    RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
    RETURN 0
;욕실 플레이 중에는 플레이 매트가 없으면 불가
SIF TEQUIP:53 && ITEM:42 == 0 && NOITEM == 0
    RETURN 0
;○○목욕탕 입욕 중에는 불가
SIF TEQUIP:55
    RETURN 0
;학교수영복 플레이 중에는 불가
SIF TEQUIP:59 == 2
    RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
    RETURN 0
;コスプレ中はだめ(色々と面倒なので)
SIF TEQUIP:59 > 2
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM424
IF TEQUIP:20 == 9
    PRINTL 고구마 술 따르기
    COM_NAME = 고구마 술 따르기
ELSE
    PRINTL 가랑이 술 따르기
    COM_NAME = 가랑이 술 따르기
ENDIF
;말용으로 TFLAG:201을 사용. (0=가슴에, 1=정좌로 가랑이에, 2=보통으로 가랑이에)
TFLAG:201 = 0

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
IF FLAG:조교모드 & 8
    PRINTL 어디를 사용할까?
    SIF TALENT:112 || TALENT:113
        PRINTL [0] - 가슴
    PRINTL [1] - 가랑이(정좌)
    PRINTL [2] - 가랑이
    $INPUT_LOOP
    INPUT
    IF RESULT == 0 && (TALENT:112 || TALENT:113)
        LOCAL:1 = 0
    ELSEIF RESULT == 1 || RESULT == 2
        LOCAL:1 = RESULT
    ELSE
        GOTO INPUT_LOOP
    ENDIF
ELSE
    LOCAL:1 = RAND:3
ENDIF
;말용
TFLAG:201 = LOCAL:1
CALL TRAIN_MESSAGE_COM424

DOWNBASE:0 += 20
DOWNBASE:기력 += 60

SOURCE:19 = 5000
SOURCE:18 = 1000
SOURCE:12 = 500
SOURCE:22 = 500
SOURCE:31 = 1000

IF LOCAL:1 == 1
    SOURCE:20 = 500
    TIMES SOURCE:22 , 1.30
ENDIF

IF (TALENT:112 || TALENT:113) && LOCAL:1 == 0
    ;ABL:B감각을 본다
    IF ABL:B감각 == 0
        SOURCE:3 = 75
    ELSEIF ABL:B감각 == 1
        SOURCE:3 = 150
    ELSEIF ABL:B감각 == 2
        SOURCE:3 = 450
    ELSEIF ABL:B감각 == 3
        SOURCE:3 = 900
    ELSEIF ABL:B감각 == 4
        SOURCE:3 = 1700
    ELSE
        SOURCE:3 = 2600
    ENDIF
    
    ;B민감, 둔감을 본다
    IF TALENT:106
        TIMES SOURCE:3 , 1.50
    ELSEIF TALENT:107
        TIMES SOURCE:3 , 0.60
    ENDIF
ELSE
    ;ABL:C감각을 본다
    IF ABL:C감각 == 0
        SOURCE:0 = 100
    ELSEIF ABL:C감각 == 1
        SOURCE:0 = 250
    ELSEIF ABL:C감각 == 2
        SOURCE:0 = 500
    ELSEIF ABL:C감각 == 3
        SOURCE:0 = 1000
    ELSEIF ABL:C감각 == 4
        SOURCE:0 = 1800
    ELSE
        SOURCE:0 = 2900
    ENDIF
    
    ;C민감, 둔감을 본다
    IF TALENT:100
        TIMES SOURCE:0 , 1.50
    ELSEIF TALENT:101
        TIMES SOURCE:0 , 0.60
    ENDIF
ENDIF

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES SOURCE:18, 0.30
    TIMES SOURCE:22, 0.30
ELSEIF PALAM:13 < PALAMLV:2
    TIMES SOURCE:18, 0.60
    TIMES SOURCE:22, 0.60
ELSEIF PALAM:13 < PALAMLV:3
    TIMES SOURCE:18, 1.00
    TIMES SOURCE:22, 1.00
ELSEIF PALAM:13 < PALAMLV:4
    TIMES SOURCE:18, 1.30
    TIMES SOURCE:22, 1.30
ELSE
    TIMES SOURCE:18, 1.60
    TIMES SOURCE:22, 1.60
ENDIF

;프라이드 높다
SIF TALENT:프라이드가높음
    SOURCE:22 /= 2
;보수적
SIF TALENT:보수적
    SOURCE:22 /= 3
;약에 들어 있는 독 내성
SIF TALENT:44
    SOURCE:18 /= 4

IF (TALENT:112 == 0 && TALENT:113 == 0) || LOCAL:1 > 0
    SIF PLAYER == MASTER
        TCVAR:41 += 1
    ;노예의 V⇔조교자의 입의 불결이 이동
    STAIN:보지 |= STAIN:PLAYER:입
    STAIN:PLAYER:입 |= STAIN:보지
ENDIF

;취기가 돈다(피부 흡수……는 무리하게인가? )
SOURCE:40 += 100

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF

RETURN 1

