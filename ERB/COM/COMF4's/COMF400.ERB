@COM_ABLE400
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:400 > 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 16384) == 0
    RETURN 0
;이미 실행 중이면 불가
SIF TFLAG:140 & 4
    RETURN 0
;조교자가 흡혈귀 아니면 불가
SIF TALENT:PLAYER:흡혈귀 == 0
    RETURN 0
;기계면 불가
SIF TALENT:기계
    RETURN 0
;媚薬効果発揮中はダメ
SIF TEQUIP:11
    RETURN 0
;利尿剤効果発揮中はダメ
SIF TEQUIP:12
    RETURN 0
;睡眠薬効果発揮中はダメ
SIF EQUIP:14
    RETURN 0
;排卵誘発剤効果発揮中はダメ
SIF TEQUIP:16
    RETURN 0
;緊急避妊薬効果発揮中はダメ
SIF TEQUIP:17
    RETURN 0
;鈴蘭の毒効果発揮中はダメ
SIF TEQUIP:18
    RETURN 0
;触手強制回復効果発揮中はダメ
SIF TEQUIP:91
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;베이스는 바늘. 성공 판정은 주로 다리 코키로부터.
;TFLAG:140으로 EXP:흡혈경험를 사용합니다
@COM400
PRINTL 흡혈

;-------------------------------------------------
;실행할 수 있을까의 판정
;-------------------------------------------------
IF TFLAG:699 == 0
    CALL COM_ORDER
    ;실행할 수 없다
    SIF RESULT == 0
        RETURN 0
ENDIF

;-------------------------------------------------
;실행 결정
;-------------------------------------------------
COM_NAME = 흡혈
CALL TRAIN_MESSAGE_COM400

DOWNBASE:0 += 50
DOWNBASE:기력 += 150

SOURCE:22 = 1000
SOURCE:31 = 4000
SOURCE:18 = 1000
SOURCE:17 = 1000

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
    SOURCE:20 = 2000
ELSEIF PALAM:16 < PALAMLV:2
    SOURCE:20 = 2300
ELSEIF PALAM:16 < PALAMLV:3
    SOURCE:20 = 2600
ELSEIF PALAM:16 < PALAMLV:4
    SOURCE:20 = 2850
ELSE
    SOURCE:20 = 3000
ENDIF

;EXP:흡혈 경험을 본다
IF EXP:흡혈경험 < EXPLV:1
    TIMES SOURCE:22 , 0.10
    TIMES SOURCE:31 , 2.50
    TIMES SOURCE:18 , 0.00
    TIMES SOURCE:17 , 0.00
ELSEIF EXP:흡혈경험 < EXPLV:2
    TIMES SOURCE:22 , 1.00
    TIMES SOURCE:31 , 1.00
    TIMES SOURCE:18 , 1.00
    TIMES SOURCE:17 , 0.50
ELSEIF EXP:흡혈경험 < EXPLV:3
    TIMES SOURCE:22 , 2.00
    TIMES SOURCE:31 , 0.25
    TIMES SOURCE:18 , 10.0
    TIMES SOURCE:17 , 5.00
ELSE
    TIMES SOURCE:22 , 5.00
    TIMES SOURCE:31 , 0.00
    TIMES SOURCE:18 , 20.0
    TIMES SOURCE:17 , 10.0
ENDIF

;ABL:조교자의 기교를 본다
IF ABL:PLAYER:기교 < 1
    TIMES SOURCE:20 , 2.00
ELSEIF ABL:PLAYER:기교 < 2
    TIMES SOURCE:20 , 1.75
ELSEIF ABL:PLAYER:기교 < 3
    TIMES SOURCE:20 , 1.50
ELSEIF ABL:PLAYER:기교 < 4
    TIMES SOURCE:20 , 1.25
ELSEIF ABL:PLAYER:기교 < 5
    TIMES SOURCE:20 , 1.00
ELSE
    TIMES SOURCE:20 , 0.75
ENDIF

;매님
IF NO:PLAYER == 11
    TIMES SOURCE:20 , 5.00
    DOWNBASE:0 += 450
    DOWNBASE:기력 += 350
;광기
ELSEIF TALENT:PLAYER:광기
    TIMES SOURCE:20 , 2.00
    DOWNBASE:0 += 150
    DOWNBASE:기력 += 50
ENDIF

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 2
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 2
ENDIF
TCVAR:54 += 1
;주인 경험 플래그
SIF ASSIPLAY == 0 && ABL:마조끼 >= 3
    TFLAG:50 += 1

TFLAG:140 |= 4
RETURN 1

