    TIMES SOURCE:0 , 0.50
    TIMES SOURCE:15 , 2.50
    TIMES SOURCE:16 , 2.50
ELSE
    TIMES SOURCE:0 , 0.50
    TIMES SOURCE:15 , 4.00
    TIMES SOURCE:16 , 4.00
ENDIF

;조수가 처녀
IF TALENT:PLAYER:처녀
    PRINTL <조수가 처녀>
    CALL LOST_VIRGIN, TARGET, PLAYER
    IF TALENT:PLAYER:처녀 == 1
        TIMES SOURCE:22 , 20.00
        TIMES SOURCE:31 , 3.00
        IF (CFLAG:21 & 8) == 0
            TCVAR:50 += 1
            CFLAG:21 |= 8
        ENDIF
        IF ABL:순종 < 3
            PRINTFORML 그리고 %ABLNAME:10%이 3이 되었다.
            ABL:순종 = 3
        ENDIF
    ELSE
        TIMES SOURCE:22 , 15.00
        TIMES SOURCE:31 , 1.80
    ENDIF
    TFLAG:5 += TALENT:PLAYER:처녀
    TALENT:PLAYER:처녀 = 0
    STAIN:PLAYER:보지 |= 32
ENDIF
TCVAR:PLAYER:0 += 1

