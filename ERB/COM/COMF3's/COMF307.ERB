IF ABL:봉사정신 == 0
    SOURCE:0 = 800
    SOURCE:15 = 3200
    SOURCE:16 = 400
ELSEIF ABL:봉사정신 == 1
    SOURCE:0 = 1400
    SOURCE:15 = 3800
    SOURCE:16 = 800
ELSEIF ABL:봉사정신 == 2
    SOURCE:0 = 2000
    SOURCE:15 = 4600
    SOURCE:16 = 1500
ELSEIF ABL:봉사정신 == 3
    SOURCE:0 = 2500
    SOURCE:15 = 5400
    SOURCE:16 = 2300
