ELSEIF ABL:기교 == 1
    LOCAL = 300
ELSEIF ABL:기교 == 2
    LOCAL = 800
ELSEIF ABL:기교 == 3
    LOCAL = 1500
ELSEIF ABL:기교 == 4
    LOCAL = 2000
