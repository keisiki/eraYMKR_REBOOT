;커맨드 본체
;--------------------------------------------------
;독단과 편견으로 손가락 펠라를 손가락 츄파로 명칭 변경
@COM327
PRINTL 손가락 츄파

;-------------------------------------------------
;실행할 수 있을까의 판정
;-------------------------------------------------
IF TFLAG:699 == 0
    CALL COM_ORDER
    ;실행할 수 없다
    SIF RESULT == 0
        RETURN 0
ENDIF

;-------------------------------------------------
;실행 결정
;-------------------------------------------------
COM_NAME = 손가락 츄파
CALL TRAIN_MESSAGE_COM327

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
DOWNBASE:0 += 5
DOWNBASE:기력 += 50

SOURCE:14 = 200
SOURCE:22 = 500
SOURCE:31 = 200

;위 쪽으로 계산한 더러운 데이터
SOURCE:30 = TFLAG:242*80 + 50

;ABL:봉사 정신을 본다
IF ABL:봉사정신 == 0
    SOURCE:15 = 210
    SOURCE:16 = 100
    TIMES SOURCE:30 , 4.00
ELSEIF ABL:봉사정신 == 1
    SOURCE:15 = 250
    SOURCE:16 = 200
    TIMES SOURCE:30 , 2.50
ELSEIF ABL:봉사정신 == 2
    SOURCE:15 = 290
    SOURCE:16 = 400
    TIMES SOURCE:30 , 1.50
ELSEIF ABL:봉사정신 == 3
    SOURCE:15 = 330
    SOURCE:16 = 600
    TIMES SOURCE:30 , 1.00
ELSEIF ABL:봉사정신 == 4
    SOURCE:15 = 370
    SOURCE:16 = 1000
    TIMES SOURCE:30 , 0.50
ELSE
    SOURCE:15 = 410
    SOURCE:16 = 1500
    TIMES SOURCE:30 , 0.10
ENDIF

;ABL:기교를 본다
IF ABL:기교 == 0
    TIMES SOURCE:15 , 0.50
    TIMES SOURCE:16 , 0.50
ELSEIF ABL:기교 == 1
    TIMES SOURCE:15 , 0.80
    TIMES SOURCE:16 , 0.80
ELSEIF ABL:기교 == 2
    TIMES SOURCE:15 , 1.00
    TIMES SOURCE:16 , 1.00
ELSEIF ABL:기교 == 3
    TIMES SOURCE:15 , 1.50
    TIMES SOURCE:16 , 1.50
ELSEIF ABL:기교 == 4
    TIMES SOURCE:15 , 2.50
    TIMES SOURCE:16 , 2.50
ELSE
    TIMES SOURCE:15 , 4.00
    TIMES SOURCE:16 , 4.00
ENDIF

;[괴뢰]와[정신 붕괴]와[괴조인격]을 가지지 않고,[연모]소유라면 애정 경험이 가산
SIF TALENT:연모 && TALENT:정신붕괴 == 0 && TALENT:괴뢰 == 0 && TALENT:괴조인격 == 0
    TCVAR:21 += 1

TCVAR:22 += 1

;노예의 입⇔조교자의 손의 불결이 이동
STAIN:입 |= STAIN:PLAYER:손
STAIN:PLAYER:손 |= STAIN:입

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF
;봉사 쾌락 경험 입수 판정
TFLAG:100 |= 1
RETURN 1

