SIF (FLAG:커맨드확장 & 2048) == 0
    RETURN 0
;対象が猫舌だと猫フェラパッチ有効でないとダメ
SIF TALENT:고양이혀 && (FLAG:조교모드 & 16) == 0
    RETURN 0
;猫舌だと기교3 · 奉仕精神3 · 순종2が필요
SIF TALENT:고양이혀 && (ABL:기교 < 3 || ABL:봉사정신 < 3 || ABL:순종 < 2)
    RETURN 0
;거미집에 걸려 있을 때는 불가
SIF TEQUIP:40 == 7
    RETURN 0
;볼 개그 사용 중에는 불가
SIF TEQUIP:42
    RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
    RETURN 0
