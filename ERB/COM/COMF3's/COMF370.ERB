@COM_ABLE370
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:370 > 0
    RETURN 0
;特殊風呂系커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 1024) == 0
    RETURN 0
;風呂を改装していないとダメ
SIF (FLAG:욕탕개조 & 1024) == 0
    RETURN 0
;해제는 언제든 가능
SIF TEQUIP:55 == 12
    RETURN 1
;みすちー, あやや, うにゅほまたは動物耳持ちは순종이 2이상 없으면 안 됨
IF NO:TARGET == 25 || NO:TARGET == 32 || NO:TARGET == 63 || TALENT:동물귀
    SIF ABL:C감각 < 2
        RETURN 0
ENDIF
;수면 중에는 불가
SIF EQUIP:14
    RETURN 0
;실신 중에는 불가
SIF TFLAG:899 > 0
    RETURN 0
;전극사용 중에는 불가
SIF TEQUIP:20 == 4 || TEQUIP:25 == 4 || TEQUIP:30 == 4 || TEQUIP:30 == 6 || TEQUIP:32 == 4 || TEQUIP:35 == 4
    RETURN 0
;거미집에 걸려 있을 때는 불가
SIF TEQUIP:40 == 7
    RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
    RETURN 0
;야외면 안 됨
SIF TEQUIP:52
    RETURN 0
;욕실 플레이 중에는 불가
SIF TEQUIP:53
    RETURN 0
;그밖의 ○○ 욕탕 입욕 중에는 불가
SIF TEQUIP:55 && TEQUIP:55 != 12
    RETURN 0
;의사 선생님 플레이 중에는 불가
SIF TEQUIP:57
    RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
    RETURN 0
;조수가 スク水とビキニと褌以外のコスプレ中はだめ
SIF ASSI >= 0 && ASSIPLAY && TEQUIP:ASSI:59 > 1 && TEQUIP:ASSI:59 != 2 && TEQUIP:ASSI:59 != 12 && TEQUIP:ASSI:59 != 17
    RETURN 0
;ビキニと褌以外のコスプレ中はだめ
SIF TEQUIP:59 > 2 && TEQUIP:59 != 12 && TEQUIP:59 != 17
    RETURN 0
;알몸 앞치마 중에는 불가
SIF TEQUIP:59 == 1
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;온천의 증기가 소용돌이치는 실에 데리고 들어가, 차분히 요리(루비：조교)합니다
;축축히땀흘려 오는 딸(아가씨)들을 즐긴 후는 아트아트(루비：신체가 불 비치고 있어 있다) 중에
;드셔 주세요. 덧붙여 소모가 격렬해지기 (위해)때문에 장 목욕탕은 금물입니다.
@COM370
IF NO:TARGET == 25 || NO:TARGET == 32 || NO:TARGET == 63
    PRINTL 한증 새 찜
    COM_NAME = 한증 새 찜
    LOCAL:1 = 1
ELSEIF NO:TARGET == 37 || NO:TARGET == 38
    PRINTL 한증 감자 찜
    COM_NAME = 한증 감자 찜
    LOCAL:1 = 2
ELSE
    PRINTL 한증탕
    COM_NAME = 한증탕
    LOCAL:1 = 0
ENDIF
CALL TRAIN_MESSAGE_COM370

DOWNBASE:0 += 10
DOWNBASE:기력 += 30

IF TEQUIP:55 == 12
    TEQUIP:55 = 0
    RETURN 1
ENDIF

LOCAL:2 = MAX(CFLAG:2 / 250, 20)
SOURCE:11 = LOCAL:2
SOURCE:19 = 250

;ABL:노출벽을 본다
IF ABL:노출증 == 0
    SOURCE:12 = 20
ELSEIF ABL:노출증 == 1
    SOURCE:12 = 50
ELSEIF ABL:노출증 == 2
    SOURCE:12 = 120
ELSEIF ABL:노출증 == 3
    SOURCE:12 = 190
ELSEIF ABL:노출증 == 4
    SOURCE:12 = 270
ELSE
    SOURCE:12 = 360
ENDIF

IF LOCAL:1 == 1
    TIMES SOURCE:11 , 0.80
    TIMES SOURCE:19 , 2.50
    TIMES SOURCE:12 , 1.60
ELSEIF LOCAL:1 == 2
    TIMES SOURCE:11 , 0.75
    TIMES SOURCE:19 , 2.00
    TIMES SOURCE:12 , 2.00
ENDIF

TFLAG:155 = 0
TEQUIP:55 = 12

RETURN 1

;--------------------------------------------------
;한증 입욕중
;--------------------------------------------------
@EQUIP_COM370
IF NO:TARGET == 25 || NO:TARGET == 32 || NO:TARGET == 63
    PRINTL <한증 새 찜 조교 중>
    LOCAL = 1
ELSEIF NO:TARGET == 37 || NO:TARGET == 38
    PRINTL <한증 감자 찜 조교 중>
    LOCAL = 2
ELSE
    PRINTL <한증탕 입욕 중>
    LOCAL = 0
ENDIF

TFLAG:155 += (TFLAG:155 < 10) ?  1 # 0
DOWNBASE:0 += 5 + 5 * TFLAG:155
DOWNBASE:기력 += 10 + 10 * TFLAG:155

LOCAL:1 = MAX(CFLAG:2 / 500, 10)
LOCAL:2 = 150
LOCAL:3 = 25 * TFLAG:155

;노출벽
IF ABL:노출증 == 0
    LOCAL:4 = 10
ELSEIF ABL:노출증 == 1
    LOCAL:4 = 20
ELSEIF ABL:노출증 == 2
    LOCAL:4 = 50
ELSEIF ABL:노출증 == 3
    LOCAL:4 = 90
ELSEIF ABL:노출증 == 4
    LOCAL:4 = 140
ELSE
    LOCAL:4 = 200
ENDIF

IF LOCAL == 1
    TIMES LOCAL:1 , 0.80
    TIMES LOCAL:2 , 2.50
    TIMES LOCAL:3 , 1.20
    TIMES LOCAL:4 , 1.60
ELSEIF LOCAL == 2
    TIMES LOCAL:1 , 0.75
    TIMES LOCAL:2 , 2.00
    TIMES LOCAL:3 , 2.00
    TIMES LOCAL:4 , 1.20
ENDIF

SOURCE:11 += LOCAL:1
SOURCE:19 += LOCAL:2
SOURCE:18 += LOCAL:3
SOURCE:12 += LOCAL:4

RETURN 1

