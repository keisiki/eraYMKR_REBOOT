    DOWNBASE:기력 += 10
ENDIF
IF (LOCAL & 8) == 0
    ;B감각
    IF ABL:B감각 == 0
        LOCAL:2 = 10
        LOCAL:6 += 25
    ELSEIF ABL:B감각 == 1
        LOCAL:2 = 50
        LOCAL:6 += 50
    ELSEIF ABL:B감각 == 2
        LOCAL:2 = 180
        LOCAL:6 += 80
    ELSEIF ABL:B감각 == 3
        LOCAL:2 = 420
        LOCAL:6 += 130
    ELSEIF ABL:B감각 == 4
        LOCAL:2 = 800
        LOCAL:6 += 250
    ELSE
        LOCAL:2 = 1400
        LOCAL:6 += 600
    ENDIF
    DOWNBASE:0 += 1
    DOWNBASE:기력 += 5
ENDIF

