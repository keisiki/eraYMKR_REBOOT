DOWNBASE:0 += 5 * TFLAG:155
DOWNBASE:기력 += 10 * TFLAG:155

LOCAL:1 = 0
LOCAL:2 = 0
LOCAL:3 = 0
LOCAL:4 = 0

LOCAL = 0
;오나호르를 장착하고 있다
SIF TEQUIP:30 == 2
    LOCAL |= 1
;바이브래이터등의 기구를 삽입하고 있다(쿠스코 제외하다)
SIF TEQUIP:20
    LOCAL |= 2
;애널 바이브래이터등의 기구를 삽입하고 있다
SIF TEQUIP:25 || TEQUIP:26
    LOCAL |= 4
;착유기를 장착하고 있다
SIF TEQUIP:35 == 2
    LOCAL |= 8

;마조끼
IF ABL:마조끼 == 0
    LOCAL:5 = 30
    LOCAL:6 = 5
    LOCAL:7 = 10
ELSEIF ABL:마조끼 == 1
    LOCAL:5 = 60
    LOCAL:6 = 100
    LOCAL:7 = 50
ELSEIF ABL:마조끼 == 2
    LOCAL:5 = 120
    LOCAL:6 = 20
    LOCAL:7 = 150
