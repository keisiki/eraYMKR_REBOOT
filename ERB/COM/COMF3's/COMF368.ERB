    DOWNBASE:기력 += 5
ENDIF
IF (LOCAL & 2) == 0 && TALENT:처녀 == 0
    ;V감각
    IF ABL:V감각 == 0
        LOCAL:4 = 10
        LOCAL:6 += 15
    ELSEIF ABL:V감각 == 1
        LOCAL:4 = 40
        LOCAL:6 += 25
    ELSEIF ABL:V감각 == 2
        LOCAL:4 = 120
        LOCAL:6 += 40
    ELSEIF ABL:V감각 == 3
        LOCAL:4 = 240
        LOCAL:6 += 70
    ELSEIF ABL:V감각 == 4
        LOCAL:4 = 420
        LOCAL:6 += 130
    ELSE
        LOCAL:4 = 900
        LOCAL:6 += 200
    ENDIF
    DOWNBASE:0 += 3
    DOWNBASE:기력 += 8
ENDIF
IF (LOCAL & 4) == 0
    ;A감각
    IF ABL:A감각 == 0
        LOCAL:1 = 5
        LOCAL:6 += 20
    ELSEIF ABL:A감각 == 1
        LOCAL:1 = 15
        LOCAL:6 += 35
    ELSEIF ABL:A감각 == 2
        LOCAL:1 = 60
        LOCAL:6 += 40
    ELSEIF ABL:A감각 == 3
        LOCAL:1 = 150
        LOCAL:6 += 65
    ELSEIF ABL:A감각 == 4
        LOCAL:1 = 220
        LOCAL:6 += 100
    ELSE
        LOCAL:1 = 300
        LOCAL:6 += 150
    ENDIF
