PRINTL 목욕하며 보낸다
COM_NAME = 목욕하며 보낸다
CALL TRAIN_MESSAGE_COM345

DOWNBASE:0 += 0
DOWNBASE:기력 += 20

SOURCE:10 = 50
SOURCE:18 = 50

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    SOURCE:12 = 30
ELSEIF PALAM:13 < PALAMLV:2
    SOURCE:12 = 50
ELSEIF PALAM:13 < PALAMLV:3
    SOURCE:12 = 80
ELSEIF PALAM:13 < PALAMLV:4
    SOURCE:12 = 120
ELSE
    SOURCE:12 = 200
ENDIF

;봉사 정신을 본다
IF ABL:봉사정신 == 0
    SOURCE:11 = 10
ELSEIF ABL:봉사정신 == 1
    SOURCE:11 = 30
ELSEIF ABL:봉사정신 == 2
    SOURCE:11 = 60
ELSEIF ABL:봉사정신 == 3
    SOURCE:11 = 100
ELSEIF ABL:봉사정신 == 4
    SOURCE:11 = 160
ELSE
    SOURCE:11 = 250
ENDIF

;ABL:순종을 본다
IF ABL:순종 == 0
    TIMES SOURCE:11 , 0.80
ELSEIF ABL:순종 == 1
    TIMES SOURCE:11 , 0.90
ELSEIF ABL:순종 == 2
    TIMES SOURCE:11 , 1.00
ELSEIF ABL:순종 == 3
    TIMES SOURCE:11 , 1.10
ELSEIF ABL:순종 == 4
    TIMES SOURCE:11 , 1.20
ELSE
    TIMES SOURCE:11 , 1.30
ENDIF

;동물귀의 경우
IF TALENT:동물귀
    TIMES SOURCE:31 , 1.60
    TIMES SOURCE:22 , 1.50
    TIMES SOURCE:32 , 2.00
ENDIF
;흡혈귀의 경우
IF TALENT:흡혈귀
    SOURCE:20 = 100
    TIMES SOURCE:20 , 1.60
    TIMES SOURCE:22 , 2.00
    TIMES SOURCE:32 , 1.40
ENDIF

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF

;샤워로 더러움이 리셋
RESET_STAIN TARGET
RESET_STAIN PLAYER

;(할 수 있으면) 윤활이 반에
PALAM:10 /= 2
PALAM:21 /= 2

RETURN 1

