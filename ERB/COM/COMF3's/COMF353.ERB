;=============================================================================
;거품 비비기한다
;=============================================================================
;………………………………………………
;실행 판정
;………………………………………………
@COM_ABLE353
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:353 > 0
    RETURN 0
;조교자奉仕 · ウフフ系커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 2048) == 0
    RETURN 0
;욕실 플레이中でプレイマットが無いとダメ
IF TEQUIP:53 == 1
    SIF ITEM:42 == 0 && NOITEM == 0
        RETURN 0
ELSE
    RETURN 0
ENDIF
;순종4미만 · 레즈끼(BL끼)3미만의 ASSI일 경우, 조교 대상이 동성이라면 실행할 수 없다(망신か복종ならＯＫ)
IF ASSIPLAY
    SIF (ABL:ASSI:순종 < 4 || ((TALENT:남자 == 0 && TALENT:ASSI:남자 == 0 && ABL:ASSI:레즈끼 < 3) || (TALENT:남자 && TALENT:ASSI:남자 && ABL:ASSI:BL끼 < 3))) && TALENT:ASSI:망신 == 0 && TALENT:ASSI:복종 == 0
    RETURN 0
ENDIF
;수면 중에는 불가
SIF EQUIP:14
    RETURN 0
;실신 중에는 불가
SIF TFLAG:899 > 0
    RETURN 0
;Ｖ계 장착구 사용 중에는 불가
SIF TEQUIP:20 || TEQUIP:21
    RETURN 0
;Ａ계 장착구 사용 중에는 불가
SIF TEQUIP:25 || TEQUIP:26
    RETURN 0
;Ｃ계 장착구 사용 중에는 불가
SIF TEQUIP:30
    RETURN 0
;Ｂ계 장착구 사용 중에는 불가
SIF TEQUIP:35 || TEQUIP:36
    RETURN 0
;밧줄 사용 중에는 불가
SIF TEQUIP:40
    RETURN 0
;아이마스크사용 중에는 불가
SIF TEQUIP:41
    RETURN 0
;볼 개그 사용 중에는 불가
SIF TEQUIP:42
    RETURN 0
;조수가 スク水とビキニと褌以外のコスプレ中はだめ
SIF ASSI >= 0 && ASSIPLAY && TEQUIP:ASSI:59 > 1 && TEQUIP:ASSI:59 != 2 && TEQUIP:ASSI:59 != 12 && TEQUIP:ASSI:59 != 17
    RETURN 0
;ビキニと褌以外のコスプレ中はだめ
SIF TEQUIP:59 > 2 && TEQUIP:59 != 12 && TEQUIP:59 != 17
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;조교자가 노예에 거품 춤으로 반격 한다
@COM353
PRINTL 거품 비비기한다
COM_NAME = 거품 비기기한다
CALL TRAIN_MESSAGE_COM353

;-------------------------------------------------
;사정 게이지 체크
;-------------------------------------------------
LOCAL = 0

;ABL:기교를 본다
IF ABL:기교 == 0
    LOCAL = 40
ELSEIF ABL:기교 == 1
    LOCAL = 260
ELSEIF ABL:기교 == 2
    LOCAL = 800
ELSEIF ABL:기교 == 3
    LOCAL = 2500
ELSEIF ABL:기교 == 4
    LOCAL = 3500
ELSE
    LOCAL = 5600
ENDIF

;순종을 본다
LOCAL = EJACULATIONCHECK_ABL_10_1(TARGET, LOCAL)
;봉사 정신을 본다
LOCAL = EJACULATIONCHECK_ABL_13_1(TARGET, LOCAL)

;조교자의 기교를 본다
LOCAL = EJACULATIONCHECK_ABL_12_2(PLAYER, LOCAL)
;조교자의 봉사 정신을 본다
LOCAL = EJACULATIONCHECK_ABL_13_1(PLAYER, LOCAL)

;조교 대상의 C감각을 본다
LOCAL = EJACULATIONCHECK_ABL_0_1(TARGET, LOCAL)

SIF TALENT:남자 || TALENT:후타나리
    BASE:사정 += LOCAL

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
DOWNBASE:0 += 30
DOWNBASE:기력 += 260

SOURCE:10 = 1000
SOURCE:11 = 1000
SOURCE:12 = 60
SOURCE:14 = 1500
SOURCE:18 = 300
SOURCE:24 = 400

;ABL:C감각을 본다
IF ABL:C감각 == 0
    SOURCE:0 = 500
    SOURCE:15 = 1000
ELSEIF ABL:C감각 == 1
    SOURCE:0 = 900
    SOURCE:15 = 1300
ELSEIF ABL:C감각 == 2
    SOURCE:0 = 1300
    SOURCE:15 = 1600
ELSEIF ABL:C감각 == 3
    SOURCE:0 = 1800
    SOURCE:15 = 2000
ELSEIF ABL:C감각 == 4
    SOURCE:0 = 2300
    SOURCE:15 = 2400
ELSE
    SOURCE:0 = 2900
    SOURCE:15 = 3000
ENDIF

;ABL:B감각을 본다
IF ABL:B감각 == 0
    SOURCE:3 = 15
ELSEIF ABL:B감각 == 1
    SOURCE:3 = 50
ELSEIF ABL:B감각 == 2
    SOURCE:3 = 300
ELSEIF ABL:B감각 == 3
    SOURCE:3 = 700
ELSEIF ABL:B감각 == 4
    SOURCE:3 = 1100
ELSE
    SOURCE:3 = 1600
ENDIF

;ABL:조교자의 기교를 본다
IF ABL:PLAYER:기교 == 0
    TIMES SOURCE:0 , 0.50
    TIMES SOURCE:3 , 0.50
    TIMES SOURCE:15 , 0.50
ELSEIF ABL:PLAYER:기교 == 1
    TIMES SOURCE:0 , 0.80
    TIMES SOURCE:3 , 0.80
    TIMES SOURCE:15 , 0.80
ELSEIF ABL:PLAYER:기교 == 2
    TIMES SOURCE:0 , 1.00
    TIMES SOURCE:3 , 1.00
    TIMES SOURCE:15 , 1.00
ELSEIF ABL:PLAYER:기교 == 3
    TIMES SOURCE:0 , 1.50
    TIMES SOURCE:3 , 1.20
    TIMES SOURCE:15 , 1.50
ELSEIF ABL:PLAYER:기교 == 4
    TIMES SOURCE:0 , 2.50
    TIMES SOURCE:3 , 1.50
    TIMES SOURCE:15 , 2.50
ELSE
    TIMES SOURCE:0 , 4.00
    TIMES SOURCE:3 , 2.50
    TIMES SOURCE:15 , 4.00
ENDIF

;B민감, B둔감
IF TALENT:B민감
    TIMES SOURCE:3 , 1.20
ELSEIF TALENT:B둔감
    TIMES SOURCE:3 , 0.70
ENDIF
;큰 가슴, 폭유
SIF TALENT:거유 || TALENT:폭유
    TIMES SOURCE:3 , 1.20
;음유
SIF TALENT:음유
    TIMES SOURCE:3 , 1.20

;-------------------------------------------------
;사정 체크
;-------------------------------------------------
;노예의 사정은 TRAIN_CHECK.ERB에서 관리
    ;사정처 타입의 설정
    TFLAG:703 = 17
    ;사정처 선택의 가능·불가
    TFLAG:704 = 0
    ;노예 사정처 선정이 끝난 플래그
    TFLAG:705 = 1

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 7
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 7
ENDIF

;더러움은 리셋
RESET_STAIN TARGET
RESET_STAIN PLAYER
;주인 경험 플래그
SIF ASSIPLAY == 0 && EXP:펠라경험 >= EXPLV:3
    TFLAG:50 += 1

;조교자가 후타나리
SIF TALENT:PLAYER:후타나리
    SOURCE:22 /= 2

RETURN 1

;--------------------------------------------------
;조교시 메시지
;--------------------------------------------------
@TRAIN_MESSAGE_COM353
CALL KOJO_TRAIN_MESSAGE_COM
SIF FLAG:조교시텍스트표시 == 0 || CFLAG:지문소거판정 == 1 || RESULT != 0
    RETURN 0

PRINTL
PRINTFORM %조사선택(CALLNAME:PLAYER, "는")% 비누로 거품을 일으켜 자신의 몸에 흠뻑 묻히고는, 
IF TALENT:PLAYER:소인 || TALENT:PLAYER:작은체형
    PRINTFORM %CALLNAME:TARGET%에게 작은 몸을 힘껏 문질러가며 
ELSEIF TALENT:PLAYER:거유 || TALENT:PLAYER:폭유
    PRINTFORM %CALLNAME:TARGET%에게 풍만한 가슴과 포근한 피부를 문질러가며 
ELSE
    PRINTFORM %CALLNAME:TARGET%에게 전신을 문질러 
ENDIF
