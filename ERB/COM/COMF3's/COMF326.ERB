@COM326
;쿠스코 삽입중 또는 전회의 조교가 G스포트 또는 손가락 삽입또한 플레이어의 기교 3이상이라면 G스포트 자극에
IF TEQUIP:21 || PREVCOM == 4 && ABL:PLAYER:기교 >= 3 || PREVCOM == 600
    CALL EXCOM_ABLE600
    SIF RESULT == 1
        JUMP COM600
ENDIF

PRINTL 페니스밴드 삽입
COM_NAME = 페니스밴드 삽입
CALL TRAIN_MESSAGE_COM326

;V경험을 수반하는 커맨드의 플래그(처녀막 재생 대응)
TFLAG:1 = 1

DOWNBASE:0 += 60
DOWNBASE:기력 += 120

SOURCE:11 = 100
SOURCE:12 = 800
SOURCE:31 = 500

;ABL:V감각을 본다
IF ABL:V감각 == 0
    SOURCE:1 = 30
    SOURCE:22 = 200
ELSEIF ABL:V감각 == 1
    SOURCE:1 = 120
    SOURCE:22 = 350
ELSEIF ABL:V감각 == 2
    SOURCE:1 = 350
    SOURCE:22 = 550
ELSEIF ABL:V감각 == 3
    SOURCE:1 = 700
    SOURCE:22 = 900
ELSEIF ABL:V감각 == 4
    SOURCE:1 = 1300
    SOURCE:22 = 1500
ELSE
    SOURCE:1 = 2000
    SOURCE:22 = 2300
ENDIF

;EXP:V경험을 본다
IF EXP:V경험 < EXPLV:1
    TIMES SOURCE:1 , 0.20
    TIMES SOURCE:22, 0.20
    SOURCE:20 = 300
ELSEIF EXP:V경험 < EXPLV:2
    TIMES SOURCE:1 , 0.50
    TIMES SOURCE:22, 0.50
    SOURCE:20 = 180
ELSEIF EXP:V경험 < EXPLV:3
    TIMES SOURCE:1 , 1.00
    TIMES SOURCE:22, 0.80
    SOURCE:20 = 80
ELSEIF EXP:V경험 < EXPLV:4
    TIMES SOURCE:1 , 1.20
    TIMES SOURCE:22, 1.00
    SOURCE:20 = 30
ELSEIF EXP:V경험 < EXPLV:5
    TIMES SOURCE:1 , 1.60
    TIMES SOURCE:22, 1.20
    SOURCE:20 = 0
ELSE
    TIMES SOURCE:1 , 1.80
    TIMES SOURCE:22, 1.50
    SOURCE:20 = 0
ENDIF

;PALAM:윤활을 본다
IF PALAM:10 < PALAMLV:1
    TIMES SOURCE:1 , 0.10
    SOURCE:20 += 700
    TIMES SOURCE:20 , 3.00
ELSEIF PALAM:10 < PALAMLV:2
    TIMES SOURCE:1 , 0.20
    SOURCE:20 += 200
    TIMES SOURCE:20 , 1.00
ELSEIF PALAM:10 < PALAMLV:3
    TIMES SOURCE:1 , 0.60
    TIMES SOURCE:20 , 0.80
ELSEIF PALAM:10 < PALAMLV:4
    TIMES SOURCE:1 , 1.00
    TIMES SOURCE:20 , 0.50
ELSE
    TIMES SOURCE:1 , 2.00
    TIMES SOURCE:20 , 0.10
ENDIF

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES SOURCE:1 , 0.50
ELSEIF PALAM:13 < PALAMLV:2
    TIMES SOURCE:1 , 0.80
ELSEIF PALAM:13 < PALAMLV:3
    TIMES SOURCE:1 , 1.20
ELSEIF PALAM:13 < PALAMLV:4
    TIMES SOURCE:1 , 1.50
ELSE
    TIMES SOURCE:1 , 1.80
ENDIF

;V민감, 둔감을 본다
;쾌V자체의 체크는 다음에 정리해 준다
IF TALENT:103
    TIMES SOURCE:20 , 1.50
    TIMES SOURCE:22 , 1.50
    TIMES SOURCE:31 , 1.50
ELSEIF TALENT:102
    TIMES SOURCE:20 , 0.60
    TIMES SOURCE:22 , 0.60
    TIMES SOURCE:31 , 0.60
ENDIF

;처녀로 정조관념
SIF TALENT:처녀 == 1 && TALENT:30
    TIMES SOURCE:22 , 2.00

TCVAR:0 += 1

;노예의 V⇔조교자의 입의 불결이 이동
STAIN:보지 |= STAIN:PLAYER:입
STAIN:PLAYER:입 |= STAIN:보지

SIF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
    TCVAR:12 += 7

RETURN 1

