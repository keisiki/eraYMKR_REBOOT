DOWNBASE:PLAYER:체력 += 25
DOWNBASE:PLAYER:기력 += 40

SOURCE:16 = 250
SOURCE:18 = 150

;노출벽을 본다
IF ABL:노출증 == 0
    SOURCE:21 = 50
    SOURCE:22 = 100
    SOURCE:30 = 2000
ELSEIF ABL:노출증 == 1
    SOURCE:21 = 100
    SOURCE:22 = 200
    SOURCE:30 = 600
ELSEIF ABL:노출증 == 2
    SOURCE:21 = 200
    SOURCE:22 = 400
    SOURCE:30 = 150
ELSEIF ABL:노출증 == 3
    SOURCE:21 = 300
    SOURCE:22 = 800
    SOURCE:30 = 30
ELSEIF ABL:노출증 == 4
    SOURCE:21 = 400
    SOURCE:22 = 1200
    SOURCE:30 = 0
ELSE
    SOURCE:21 = 500
    SOURCE:22 = 2000
    SOURCE:30 = 0
ENDIF

LOCAL:1 = 1200
LOCAL:2 = 400
LOCAL:3 = 1000

;미노리코와의 궁합에 따라 보정 좌우
LOCAL = 38
IF RELATION:LOCAL > 0 && RELATION:LOCAL != 100
    LOCAL:1 *= RELATION:LOCAL
    LOCAL:1 /= 100
    ;트라우마는 강제적으로 증가
    IF RELATION:LOCAL < 100
        LOCAL:2 *= (200-RELATION:LOCAL)
    ELSE
        LOCAL:2 *= RELATION:LOCAL
    ENDIF
    LOCAL:2 /= 100
    LOCAL:3 *= 100
    LOCAL:3 /= RELATION:LOCAL
ENDIF

SOURCE:24 += LOCAL:1
SOURCE:25 += LOCAL:2
SOURCE:26 += LOCAL:1
SOURCE:27 += LOCAL:1
SOURCE:29 += LOCAL:1
SOURCE:31 += LOCAL:3

;촉수풍요음향의 ON/OFF
IF TEQUIP:95 & 256
    TEQUIP:95 -= 256
ELSE
    TEQUIP:95 |= 256
    TEQUIP:89 = 99
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 0
RETURN 1

