@COM_ABLE595
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:595 > 0
    RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 4096) == 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 16384) == 0
    RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0
    RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
    RETURN 0
;해제는 언제든 가능
SIF TEQUIP:95 & 256
    RETURN 1
;다른 향을 피우고 있을 때는 불가
SIF TEQUIP:89 && TEQUIP:89 != 99
    RETURN 0
;조교자는 촉수사역LV3이상 필요
SIF ABL:PLAYER:촉수사역 < 3
    RETURN 0
;触手が[MINORIKO触手]を得ていないとダメ
SIF (FLAG:촉수특수능력 & 32768) == 0
    RETURN 0
;穣子を触手生贄に捧げていない(=穣子が何らかの形で存在している)とダメ
SIF (FLAG:촉수특수산제물 & 32768) == 0
    RETURN 0
;수면 중엔 불가
SIF EQUIP:14
    RETURN 0
;실신 중엔 불가
SIF TFLAG:899 > 0
    RETURN 0
RETURN 1

