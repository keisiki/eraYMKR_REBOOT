@COM_ABLE554
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:554 > 0
    RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 4096) == 0
    RETURN 0
;吸血경험이 0일 경우, 이상계 조교 필터가 오프되어 있지 않으면 불가
SIF FLAG:VA이상조교필터 & 4 && EXP:흡혈경험 == 0
    RETURN 0
;조교자는 촉수사역LV2이상 필요
SIF ABL:PLAYER:촉수사역 < 2
    RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
    RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
    RETURN 0
;촉수가 [吸血촉수]を得ていないとダメ
SIF (FLAG:촉수능력 & 65536) == 0
    RETURN 0
;이미 실행 중이면 불가
SIF TFLAG:140 & 64
    RETURN 0
;기계면 불가
SIF TALENT:기계
    RETURN 0
;媚薬効果発揮中はダメ
SIF TEQUIP:11
    RETURN 0
;利尿剤効果発揮中はダメ
SIF TEQUIP:12
    RETURN 0
;睡眠薬効果発揮中はダメ
SIF EQUIP:14
    RETURN 0
;排卵誘発剤効果発揮中はダメ
SIF TEQUIP:16
    RETURN 0
;緊急避妊薬効果発揮中はダメ
SIF TEQUIP:17
    RETURN 0
;鈴蘭の毒効果発揮中はダメ
SIF TEQUIP:18
    RETURN 0
;촉수強制回復効果発揮中はダメ
SIF TEQUIP:91
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;수집품 「혈액」을 채취 가능한 얼마 안되는 커맨드.
;촉수가 거머리같이 노예의 피부에 들러 붙어, 피를 빨아 들여 가는 이미지.
;「흡혈」 「바늘」을 참고에 작성.
@COM554
PRINTL 촉수 흡혈
COM_NAME = 촉수 흡혈
CALL TRAIN_MESSAGE_COM554

DOWNBASE:0 += 70
DOWNBASE:기력 += 80

SOURCE:24 = 1000
SOURCE:30 = 3000
SOURCE:31 = 6000
SOURCE:23 = 1500

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
    SOURCE:20 = 2000
ELSEIF PALAM:16 < PALAMLV:2
    SOURCE:20 = 2200
ELSEIF PALAM:16 < PALAMLV:3
    SOURCE:20 = 2500
ELSEIF PALAM:16 < PALAMLV:4
    SOURCE:20 = 2900
ELSE
    SOURCE:20 = 3400
ENDIF

;EXP:흡혈 경험을 본다
IF EXP:흡혈경험 < EXPLV:1
    TIMES SOURCE:24 , 0.10
    TIMES SOURCE:30 , 3.00
    TIMES SOURCE:31 , 2.50
    TIMES SOURCE:23 , 0.10
ELSEIF EXP:흡혈경험 < EXPLV:2
    TIMES SOURCE:24 , 1.00
    TIMES SOURCE:30 , 1.50
    TIMES SOURCE:31 , 1.00
    TIMES SOURCE:23 , 0.50
ELSEIF EXP:흡혈경험 < EXPLV:3
    TIMES SOURCE:24 , 1.50
    TIMES SOURCE:30 , 1.00
    TIMES SOURCE:31 , 0.75
    TIMES SOURCE:23 , 1.00
ELSE
    TIMES SOURCE:24 , 2.00
    TIMES SOURCE:30 , 0.80
    TIMES SOURCE:31 , 0.50
    TIMES SOURCE:23 , 1.50
ENDIF

;ABL:촉수 중독을 본다
IF ABL:촉수중독 == 0
    TIMES SOURCE:20 , 2.00
    TIMES SOURCE:31 , 5.00
ELSEIF ABL:촉수중독 == 1
    TIMES SOURCE:20 , 1.75
    TIMES SOURCE:31 , 2.00
ELSEIF ABL:촉수중독 == 2
    TIMES SOURCE:20 , 1.50
    TIMES SOURCE:31 , 1.00
ELSEIF ABL:촉수중독 == 3
    TIMES SOURCE:20 , 1.25
    TIMES SOURCE:31 , 0.50
ELSEIF ABL:촉수중독 == 4
    TIMES SOURCE:20 , 1.00
    TIMES SOURCE:31 , 0.25
ELSE
    TIMES SOURCE:20 , 0.75
    TIMES SOURCE:31 , 0.00
ENDIF

LOCAL:1 = SOURCE:31 / 10

;촉수 최면
IF TEQUIP:92
    TIMES SOURCE:20 , 0.75
    TIMES SOURCE:30 , 0.75
    TIMES LOCAL:1 , 0.25
ENDIF

SOURCE:25 += LOCAL:1

SIF EXP:흡혈경험 == 0
    TCVAR:50 += 1

TCVAR:54 += 1
TFLAG:140 |= 64

;혈액 채취 처리
SIF FLAG:SHOP이벤트확장 & 8
    CALL SWEET_POTATO_RED_BLOOD

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 1
RETURN 1

