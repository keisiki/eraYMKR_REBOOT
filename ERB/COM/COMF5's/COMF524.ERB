@COM_ABLE524
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:524 > 0
    RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
    RETURN 0
;一度も촉수貫通をしたことが無い場合, 이상계 조교 필터가 오프되어 있지 않으면 불가
SIF FLAG:2 & 4 && (CFLAG:24 & 32) == 0
    RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
    RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
    RETURN 0
;Ａ조교 필터가 오프되어 있지 않으면 불가
SIF FLAG:2 & 2
    RETURN 0
;조교자는 촉수사역LV4이상 필요
SIF ABL:PLAYER:98 < 4
    RETURN 0
;촉수가 [遠隔精密制御]を得ていないとダメ
SIF (FLAG:75 & 512) == 0
    RETURN 0
;기계면 불가
SIF TALENT:206
    RETURN 0
;그밖의 Ａ계 촉수責め中は不可
SIF TEQUIP:25 && TEQUIP:25 != 3
    RETURN 0
;ボールギャグ装着中, 촉수口辱中はダメ
SIF TEQUIP:42
    RETURN 0
;촉수強制回復中(口内)はダメ
SIF TEQUIP:91 == 1
    RETURN 0
;卵が邪魔で촉수貫通できない
SIF TEQUIP:94
    RETURN 0
;촉수催眠中は不可
SIF TEQUIP:92
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM524
PRINTL 촉수 관통
COM_NAME = 촉수 관통
CALL TRAIN_MESSAGE_COM524

IF TEQUIP:25 == 3
    DOWNBASE:0 += 50
    DOWNBASE:1 += 200
    TEQUIP:25 = 0
    ;촉수 경험 플래그
    TFLAG:90 = 0
    RETURN 1
ENDIF

DOWNBASE:0 += 500
DOWNBASE:1 += 500
LOCAL:1 = 2500
LOCAL:2 = 1000
LOCAL:3 = 0
;EXP:촉수 경험을 본다
IF EXP:53 < EXPLV:1
    TIMES LOCAL:1 , 3.00
ELSEIF EXP:53 < EXPLV:2
    TIMES LOCAL:1 , 2.50
ELSEIF EXP:53 < EXPLV:3
    TIMES LOCAL:1 , 2.00
ELSEIF EXP:53 < EXPLV:4
    TIMES LOCAL:1 , 1.50
ELSEIF EXP:53 < EXPLV:5
    TIMES LOCAL:1 , 1.00
ELSE
    TIMES LOCAL:1 , 0.80
ENDIF
;ABL:촉수 중독을 본다
IF ABL:촉수중독 == 0
    LOCAL:3 += 0
    TIMES LOCAL:2 , 1.00
ELSEIF ABL:촉수중독 == 1
    LOCAL:3 += 50
    TIMES LOCAL:2 , 1.20
ELSEIF ABL:촉수중독 == 2
    LOCAL:3 += 120
    TIMES LOCAL:2 , 1.40
ELSEIF ABL:촉수중독 == 3
    LOCAL:3 += 350
    TIMES LOCAL:2 , 1.60
ELSEIF ABL:촉수중독 == 4
    LOCAL:3 += 900
    TIMES LOCAL:2 , 1.80
ELSE
    LOCAL:3 += 2000
    TIMES LOCAL:2 , 2.00
ENDIF

SOURCE:25 += LOCAL:1 * 2

;겁쟁이
SIF TALENT:10
    TIMES LOCAL:1 , 2.00

SOURCE:2 += LOCAL:2 * 2
SOURCE:20 += LOCAL:1
SOURCE:24 += LOCAL:3
SOURCE:30 += LOCAL:2 * 10
SOURCE:22 += LOCAL:2 * 2
SOURCE:31 += LOCAL:2 * 5
SOURCE:23 += LOCAL:2

TEQUIP:25 = 3
STAIN:4 |= 64
IF (CFLAG:24 & 32) == 0
    TCVAR:50 += 4
    ;날뛰었습니다 매우 아픈…아마
    SOURCE:20 += 9000
    CFLAG:24 |= 32
    ;반발 각인 판정 부활
    SIF MARK:9 < 3 && MARK:9 <= MARK:97
        MARK:97 = 0
ENDIF
TCVAR:1 += 2
;촉수 경험 플래그
TFLAG:90 = 2

;커맨드 속성：촉수
TFLAG:98 = 8
RETURN 1

