@COM_ABLE590
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:590 > 0
    RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 4096) == 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 16384) == 0
    RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
    RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
    RETURN 0
;해제는 언제든 가능
SIF TEQUIP:30 == 7
    RETURN 1
;남자라면 안 됨
SIF TALENT:120
    RETURN 0
;조교자는 촉수사역LV3이상 필요
SIF ABL:PLAYER:촉수사역 < 3
    RETURN 0
;촉수가 [HIGH-FAIRY촉수]を得ていないとダメ
SIF (FLAG:촉수특수능력 & 1024) == 0
    RETURN 0
;大妖精を촉수生贄に捧げていない(=大妖精が何らかの形で存在している)とダメ
SIF (FLAG:촉수특수산제물 & 1024) == 0
    RETURN 0
;그밖의 Ｃ계 촉수 고문 중에는 불가
SIF TEQUIP:30 && TEQUIP:30 != 7
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;촉수계 다른 커맨드와 클리캡으로부터 사교 합성
;촉수생지를 통해서 하반신이 촉수와 일체화한 대요정을 소환,
;기특하게 계속 커닐링구스합니다. 기특하다…
@COM590
PRINTL 촉수 요정 안마
COM_NAME = 촉수 요정 안마
CALL TRAIN_MESSAGE_COM590

DOWNBASE:0 += 15
DOWNBASE:기력 += 120

LOCAL:1 = 120
LOCAL:2 = 70

;ABL:C감각을 본다
IF ABL:C감각 == 0
    SOURCE:0 = 180
ELSEIF ABL:C감각 == 1
    SOURCE:0 = 340
ELSEIF ABL:C감각 == 2
    SOURCE:0 = 810
ELSEIF ABL:C감각 == 3
    SOURCE:0 = 1440
ELSEIF ABL:C감각 == 4
    SOURCE:0 = 2160
ELSE
    SOURCE:0 = 2700
ENDIF

;주인이[요정 지식]
IF TALENT:MASTER:57
    TIMES SOURCE:0 , 1.20
    TIMES LOCAL:1 , 1.20
    TIMES LOCAL:2 , 1.20
ENDIF

;대요정과의 궁합 있고 없음으로 보정이 상하
LOCAL:3 = 4
IF RELATION:(LOCAL:3) > 0 && RELATION:(LOCAL:3) != 100
    LOCAL:1 *= RELATION:(LOCAL:3)
    LOCAL:1 /= 100
    LOCAL:2 *= RELATION:(LOCAL:3)
    LOCAL:2 /= 100
ENDIF

SOURCE:12 += LOCAL:1
SOURCE:25 += (LOCAL:1 + LOCAL:2)/2
SOURCE:31 += LOCAL:2

IF TEQUIP:30 == 7
    TEQUIP:30 = 0
ELSE
    TEQUIP:30 = 7
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 0
RETURN 1

;-------------------------------------------------
;촉수 요정 안마중
;-------------------------------------------------
@EQUIP_COM590
PRINTL <촉수 요정 안마중>

DOWNBASE:0 += 8
DOWNBASE:기력 += 25

LOCAL:2 = 50
LOCAL:3 = 30

;ABL:C감각을 본다
IF ABL:C감각 == 0
    LOCAL:1 = 36
ELSEIF ABL:C감각 == 1
    LOCAL:1 = 108
ELSEIF ABL:C감각 == 2
    LOCAL:1 = 225
ELSEIF ABL:C감각 == 3
    LOCAL:1 = 405
ELSEIF ABL:C감각 == 4
    LOCAL:1 = 540
ELSE
    LOCAL:1 = 675
ENDIF

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES LOCAL:1 , 0.80
ELSEIF PALAM:13 < PALAMLV:2
    TIMES LOCAL:1 , 0.90
ELSEIF PALAM:13 < PALAMLV:3
    TIMES LOCAL:1 , 1.00
ELSEIF PALAM:13 < PALAMLV:4
    TIMES LOCAL:1 , 1.10
ELSE
    TIMES LOCAL:1 , 1.20
ENDIF

;ABL:순종을 본다
IF ABL:순종 == 0
    TIMES LOCAL:1 , 0.80
    TIMES LOCAL:2 , 0.80
ELSEIF ABL:순종 == 1
    TIMES LOCAL:1 , 0.90
    TIMES LOCAL:2 , 0.90
ELSEIF ABL:순종 == 2
    TIMES LOCAL:1 , 1.00
    TIMES LOCAL:2 , 1.00
ELSEIF ABL:순종 == 3
    TIMES LOCAL:1 , 1.10
    TIMES LOCAL:2 , 1.10
ELSEIF ABL:순종 == 4
    TIMES LOCAL:1 , 1.20
    TIMES LOCAL:2 , 1.20
ELSE
    TIMES LOCAL:1 , 1.30
    TIMES LOCAL:2 , 1.30
ENDIF

;주인이[요정 지식]
IF TALENT:MASTER:57
    TIMES LOCAL:1 , 1.20
    TIMES LOCAL:2 , 1.20
    TIMES LOCAL:3 , 1.20
ENDIF

;대요정과의 궁합 있고 없음으로 보정이 상하
LOCAL = 4
IF RELATION:LOCAL > 0 && RELATION:LOCAL != 100
    LOCAL:1 *= RELATION:LOCAL
    LOCAL:1 /= 100
    LOCAL:2 *= RELATION:LOCAL
    LOCAL:2 /= 100
    LOCAL:3 *= RELATION:LOCAL
    LOCAL:3 /= 100
ENDIF

SOURCE:0 += LOCAL:1
SOURCE:12 += LOCAL:2
SOURCE:18 += 50
SOURCE:25 += (LOCAL:2 + LOCAL:3)/2
SOURCE:31 += LOCAL:3

;대요정의 성별상, 조교 대상이♀의 때만 레즈비언 경험이 들어가는 사양에
SIF TALENT:120 == 0
    TCVAR:12 += 1

;촉수 경험 플래그
TFLAG:90 += 1
RETURN 1

