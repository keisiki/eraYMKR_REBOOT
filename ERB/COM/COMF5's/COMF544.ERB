;………………………………………………
;실행 판정
;………………………………………………
@COM_ABLE544
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:544 > 0
    RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
    RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
    RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
    RETURN 0
;촉수가 [特殊ホルモン分泌]を得ていないとダメ
SIF (FLAG:75 & 1024) == 0
    RETURN 0
;조교자는 촉수사역LV2이상 필요
SIF ABL:PLAYER:촉수사역 < 2
    RETURN 0
;鼻フック装着中だとダメ
SIF TEQUIP:44 == 1
    RETURN 0
;촉수鼻穴삽입中じゃないとダメ
SIF TEQUIP:44 != 2
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM544
PRINTL 촉수 콧구멍 세정
COM_NAME = 촉수 비강 세정
CALL TRAIN_MESSAGE_COM544

;EXP:긴박경험이 높으면 소비 감소
IF EXP:긴박경험 < EXPLV:3
    LOCAL:1 = 60
ELSEIF EXP:긴박경험 < EXPLV:4
    LOCAL:1 = 30
ELSE
    LOCAL:1 = 20
ENDIF

;ABL:촉수 중독을 본다
IF ABL:촉수중독 == 0
    TIMES LOCAL:1 , 1.00
    LOCAL:2 = 50
ELSEIF ABL:촉수중독 == 1
    TIMES LOCAL:1 , 0.90
    LOCAL:2 = 90
ELSEIF ABL:촉수중독 == 2
    TIMES LOCAL:1 , 0.80
    LOCAL:2 = 120
ELSEIF ABL:촉수중독 == 3
    TIMES LOCAL:1 , 0.70
    LOCAL:2 = 190
ELSEIF ABL:촉수중독 == 4
    TIMES LOCAL:1 , 0.60
    LOCAL:2 = 250
ELSE
    TIMES LOCAL:1 , 0.50
    LOCAL:2 = 350
ENDIF

DOWNBASE:0 += LOCAL:1
DOWNBASE:기력 += LOCAL:1 *2

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------

SOURCE:15 = 160
SOURCE:16 = LOCAL:2
SOURCE:30 = 3000
SOURCE:19 = 800
SOURCE:31 = 2400
SOURCE:23 = 1200

;ABL:마조끼를 본다
IF ABL:마조끼 == 0
    TIMES SOURCE:15 , 0.50
    TIMES SOURCE:16 , 0.50
ELSEIF ABL:마조끼 == 1
    TIMES SOURCE:15 , 0.80
    TIMES SOURCE:16 , 0.80
ELSEIF ABL:마조끼 == 2
    TIMES SOURCE:15 , 1.00
    TIMES SOURCE:16 , 1.00
ELSEIF ABL:마조끼 == 3
    TIMES SOURCE:15 , 1.20
    TIMES SOURCE:16 , 1.20
ELSEIF ABL:마조끼 == 4
    TIMES SOURCE:15 , 1.50
    TIMES SOURCE:16 , 1.50
ELSE
    TIMES SOURCE:15 , 2.00
    TIMES SOURCE:16 , 2.00
ENDIF

SOURCE:22 = LOCAL:2
SOURCE:17 = LOCAL:2

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 1
RETURN 1

