@COM_ABLE581
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:581 > 0
    RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16384) == 0
    RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
    RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
    RETURN 0
;해제는 언제든 가능
SIF TEQUIP:95 & 1
    RETURN 1
;조교자는 촉수사역LV3이상 필요
SIF ABL:PLAYER:98 < 3
    RETURN 0
;촉수가 [NITORI촉수]を得ていないとダメ
SIF (FLAG:98 & 2) == 0
    RETURN 0
;にとりを촉수生贄に捧げていない(=にとりが何らかの形で存在している)とダメ
SIF (FLAG:97 & 2) == 0
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;촉수생지를 통해서 하반신이 촉수와 일체화하는 것에 새를 소환,
;기계 타입의 촉수를 사용해 바치바치와 전기 고문을 실시하는……이라고 말하는 구(? )플레이
@COM581
PRINTL 촉수 전기충격
COM_NAME = 촉수 조개 잡이
CALL TRAIN_MESSAGE_COM581

DOWNBASE:0 += 40
DOWNBASE:1 += 100

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
    LOCAL:1 = 100
ELSEIF PALAM:16 < PALAMLV:2
    LOCAL:1 = 150
ELSEIF PALAM:16 < PALAMLV:3
    LOCAL:1 = 300
ELSEIF PALAM:16 < PALAMLV:4
    LOCAL:1 = 500
ELSEIF PALAM:16 < PALAMLV:5
    LOCAL:1 = 750
ELSE
    LOCAL:1 = 1000
ENDIF

;ABL:마조끼를 본다
IF ABL:마조끼 == 0
    TIMES LOCAL:1 , 1.80
    LOCAL:2 = 6000
    LOCAL:3 = 0
ELSEIF ABL:마조끼 == 1
    TIMES LOCAL:1 , 1.50
    LOCAL:2 = 4000
    LOCAL:3 = 10
ELSEIF ABL:마조끼 == 2
    TIMES LOCAL:1 , 1.20
    LOCAL:2 = 3000
    LOCAL:3 = 30
ELSEIF ABL:마조끼 == 3
    LOCAL:2 = 2000
    LOCAL:3 = 60
ELSEIF ABL:마조끼 == 4
    TIMES LOCAL:1 , 0.80
    LOCAL:2 = 1000
    LOCAL:3 = 100
ELSE
    TIMES LOCAL:1 , 0.60
    LOCAL:2 = 500
    LOCAL:3 = 250
ENDIF

;ABL:촉수시 중독을 본다
IF ABL:촉수중독 == 0
    TIMES LOCAL:2 , 1.50
    TIMES LOCAL:3 , 0.00
ELSEIF ABL:촉수중독 == 1
    TIMES LOCAL:2 , 1.20
    TIMES LOCAL:3 , 0.50
ELSEIF ABL:촉수중독 == 2
    TIMES LOCAL:2 , 1.00
    TIMES LOCAL:3 , 0.80
ELSEIF ABL:촉수중독 == 3
    TIMES LOCAL:2 , 0.80
    TIMES LOCAL:3 , 1.00
ELSEIF ABL:촉수중독 == 4
    TIMES LOCAL:2 , 0.60
    TIMES LOCAL:3 , 1.50
ELSE
    TIMES LOCAL:2 , 0.50
    TIMES LOCAL:3 , 2.10
ENDIF

;도착적
SIF TALENT:80
    TIMES LOCAL:2 , 1.20
;[작은체형]
SIF TALENT:128
    TIMES LOCAL:1 , 2.50

LOCAL:4 = (LOCAL:1 + LOCAL:2 + 1000) / 3

;에 새와의 궁합 있고 없음으로 보정이 상하
LOCAL:5 = 40
IF RELATION:(LOCAL:5) > 0 && RELATION:(LOCAL:5) != 100
    LOCAL:1 *= RELATION:(LOCAL:5)
    LOCAL:1 /= 100
    LOCAL:2 *= RELATION:(LOCAL:5)
    LOCAL:2 /= 100
    LOCAL:3 *= RELATION:(LOCAL:5)
    LOCAL:3 /= 100
    ;트라우마는 강제적으로 증가
    IF RELATION:(LOCAL:5) < 100
        LOCAL:4 *= (200-RELATION:(LOCAL:5))
    ELSE
        LOCAL:4 *= RELATION:(LOCAL:5)
    ENDIF
    LOCAL:4 /= 100
ENDIF

SOURCE:20 += LOCAL:1
SOURCE:24 += LOCAL:3
SOURCE:25 += LOCAL:4
SOURCE:31 += LOCAL:2

;촉수 조개 잡이의 ON/OFF
IF TEQUIP:95 & 1
    TEQUIP:95 -= 1
ELSE
    TEQUIP:95 |= 1
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 0
RETURN 1

