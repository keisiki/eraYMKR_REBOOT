;실행 판정
;………………………………………………
@COM_ABLE506
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:506 > 0
    RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
    RETURN 0
;口が塞がっているときは不可
SIF TEQUIP:42 && TEQUIP:42 != 2
    RETURN 0
;촉수貫通中はダメ
SIF TEQUIP:25 == 3
    RETURN 0
;촉수強制回復中(口内)はダメ
SIF TEQUIP:91 == 1
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM506
PRINTL 촉수펠라
COM_NAME = 촉수구욕
CALL TRAIN_MESSAGE_COM506

DOWNBASE:0 += 80
DOWNBASE:1 += 100

;ABL:봉사 정신을 본다
IF ABL:봉사정신 == 0
    SOURCE:15 += 200
     LOCAL:1 = 100
ELSEIF ABL:봉사정신 == 1
    SOURCE:15 += 300
    LOCAL:1 = 200
ELSEIF ABL:봉사정신 == 2
    SOURCE:15 += 400
    LOCAL:1 = 400
ELSEIF ABL:봉사정신 == 3
    SOURCE:15 += 500
    LOCAL:1 = 600
ELSEIF ABL:봉사정신 == 4
    SOURCE:15 += 600
    LOCAL:1 = 800
ELSE
    SOURCE:15 += 800
    LOCAL:1 = 1100
ENDIF

;ABL:기교를 본다
IF ABL:기교 == 0
    TIMES SOURCE:15 , 0.50
ELSEIF ABL:기교 == 1
    TIMES SOURCE:15 , 0.80
ELSEIF ABL:기교 == 2
    TIMES SOURCE:15 , 1.00
ELSEIF ABL:기교 == 3
    TIMES SOURCE:15 , 1.20
ELSEIF ABL:기교 == 4
    TIMES SOURCE:15 , 1.50
ELSE
    TIMES SOURCE:15 , 2.00
ENDIF

SOURCE:22 += LOCAL:1
SOURCE:17 += LOCAL:1

;촉수의 뽑아 꽂아
IF TEQUIP:42
    TEQUIP:42 = 0
ELSE
    TEQUIP:42 = 2
    STAIN:0 |= 2
    STAIN:0 |= 4
    STAIN:0 |= 64
ENDIF
;촉수 경험 플래그
TFLAG:90 = 0

TCVAR:22 += 1

;커맨드 속성：촉수
TFLAG:98 = 8
RETURN 1

;-------------------------------------------------
;촉수구욕중
;-------------------------------------------------
@EQUIP_COM506
PRINTL <촉수펠라>

DOWNBASE:0 += 80
DOWNBASE:1 += 100

;ABL:봉사 정신을 본다
IF ABL:봉사정신 == 0
    SOURCE:15 += 200
     LOCAL = 100
ELSEIF ABL:봉사정신 == 1
    SOURCE:15 += 300
    LOCAL = 200
ELSEIF ABL:봉사정신 == 2
    SOURCE:15 += 400
    LOCAL = 400
ELSEIF ABL:봉사정신 == 3
    SOURCE:15 += 500
    LOCAL = 600
ELSEIF ABL:봉사정신 == 4
    SOURCE:15 += 600
    LOCAL = 800
ELSE
    SOURCE:15 += 800
    LOCAL = 1100
ENDIF

;ABL:기교를 본다
IF ABL:기교 == 0
    TIMES SOURCE:15 , 0.50
ELSEIF ABL:기교 == 1
    TIMES SOURCE:15 , 0.80
ELSEIF ABL:기교 == 2
    TIMES SOURCE:15 , 1.00
ELSEIF ABL:기교 == 3
    TIMES SOURCE:15 , 1.20
ELSEIF ABL:기교 == 4
    TIMES SOURCE:15 , 1.50
ELSE
    TIMES SOURCE:15 , 2.00
ENDIF

SOURCE:22 += LOCAL
SOURCE:17 += LOCAL

TCVAR:22 += 1
;촉수 경험 플래그
TFLAG:90 += 1
RETURN 1

;--------------------------------------------------
;조교시 메시지
;--------------------------------------------------
@TRAIN_MESSAGE_COM506
CALL KOJO_TRAIN_MESSAGE_COM
SIF FLAG:10 == 0 || CFLAG:99 == 1 || RESULT != 0
    RETURN 0

PRINTL
IF TEQUIP:42
    PRINTFORMW 촉수는 %CALLNAME:TARGET%의 입에서 뽑혀졌다.
ELSE
    PRINTFORMW 젖고 빛나는 촉수가 %CALLNAME:TARGET%의 입에 침입했다.
ENDIF
