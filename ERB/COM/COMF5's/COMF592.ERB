@COM_ABLE592
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:592 > 0
    RETURN 0
;신사적인 촉수계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 4096) == 0
    RETURN 0
;캐릭터 전용 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16384) == 0
    RETURN 0
;아이템進化の秘法を持っているか, 아이템なし設定でないとダメ
SIF ITEM:59 == 0 && NOITEM == 0
    RETURN 0
;촉수조교 중이 아니면 불가
SIF TEQUIP:90 == 0
    RETURN 0
;해제는 언제든 가능
SIF TEQUIP:95 & 32
    RETURN 1
;조교자는 촉수사역LV3이상 필요
SIF ABL:PLAYER:촉수사역 < 3
    RETURN 0
;촉수가 [NAZRIN촉수]を得ていないとダメ
SIF (FLAG:98 & 4096) == 0
    RETURN 0
;ナズーリンを촉수生贄に捧げていない(=ナズーリンが何らかの形で存在している)とダメ
SIF (FLAG:97 & 4096) == 0
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;촉수생지를 통해서 촉수와 일체화한 나즈린을 소환,
;노예의 민감한 부분을 다우징으로 감지해, 보다 효율 좋게 쾌락을 주어 간다……라고 하는 매우 미묘한 플레이
@COM592
PRINTL 촉수음맥탐사
COM_NAME = 촉수음맥탐사
CALL TRAIN_MESSAGE_COM592

DOWNBASE:0 += 5
DOWNBASE:1 += 50

;ABL:노출벽을 본다
IF ABL:노출증 == 0
    LOCAL:1 = 1200
    LOCAL:2 = 500
    LOCAL:3 = 2500
ELSEIF ABL:노출증 == 1
    LOCAL:1 = 1000
    LOCAL:2 = 600
    LOCAL:3 = 1800
ELSEIF ABL:노출증 == 2
    LOCAL:1 = 800
    LOCAL:2 = 700
    LOCAL:3 = 1200
ELSEIF ABL:노출증 == 3
    LOCAL:1 = 1000
    LOCAL:2 = 800
    LOCAL:3 = 600
ELSEIF ABL:노출증 == 4
    LOCAL:1 = 1200
    LOCAL:2 = 900
    LOCAL:3 = 200
ELSE
    LOCAL:1 = 1500
    LOCAL:2 = 1000
    LOCAL:3 = 100
ENDIF

;나즈린과의 궁합 있고 없음으로 보정이 상하
LOCAL:4 = 71
IF RELATION:(LOCAL:4) > 0 && RELATION:(LOCAL:4) != 100
    LOCAL:1 *= RELATION:(LOCAL:4)
    LOCAL:1 /= 100
    LOCAL:2 *= RELATION:(LOCAL:4)
    LOCAL:2 /= 100
    LOCAL:3 *= RELATION:(LOCAL:4)
    LOCAL:3 /= 100
ENDIF

SOURCE:12 = LOCAL:1
SOURCE:25 = LOCAL:2
SOURCE:31 = LOCAL:3

IF TEQUIP:95 & 32
    TEQUIP:95 -= 32
ELSE
    TEQUIP:95 |= 32
ENDIF

;커맨드 속성：촉수
TFLAG:98 = 8
;촉수 경험 플래그
TFLAG:90 = 0
RETURN 1

;-------------------------------------------------
;촉수음맥다우징중
;-------------------------------------------------
@EQUIP_COM592
PRINTL <촉수음맥다우징중>

DOWNBASE:0 += 5
DOWNBASE:1 += 100

;ABL:노출벽을 본다
IF ABL:노출증 == 0
    LOCAL:1 = 420
    LOCAL:2 = 50
    LOCAL:3 = 1200
ELSEIF ABL:노출증 == 1
    LOCAL:1 = 380
    LOCAL:2 = 100
    LOCAL:3 = 900
ELSEIF ABL:노출증 == 2
    LOCAL:1 = 360
    LOCAL:2 = 200
    LOCAL:3 = 600
ELSEIF ABL:노출증 == 3
    LOCAL:1 = 380
    LOCAL:2 = 300
    LOCAL:3 = 300
ELSEIF ABL:노출증 == 4
    LOCAL:1 = 420
    LOCAL:2 = 400
    LOCAL:3 = 100
ELSE
    LOCAL:1 = 450
    LOCAL:2 = 500
    LOCAL:3 = 50
ENDIF

;나즈린과의 궁합 있고 없음으로 보정이 상하
LOCAL = 71
IF RELATION:LOCAL > 0 && RELATION:LOCAL != 100
    LOCAL:1 *= RELATION:LOCAL
    LOCAL:1 /= 100
    LOCAL:2 *= RELATION:LOCAL
    LOCAL:2 /= 100
    LOCAL:3 *= RELATION:LOCAL
    LOCAL:3 /= 100
ENDIF

SOURCE:12 += LOCAL:1
SOURCE:25 += LOCAL:2
SOURCE:31 += LOCAL:3

;ABL:촉수 사역의 레벨로 효과가 강화
IF ABL:PLAYER:촉수사역 <= 3
    TIMES SOURCE:0 , 1.50
    TIMES SOURCE:1 , 1.50
    TIMES SOURCE:2 , 1.50
    TIMES SOURCE:3 , 1.50
ELSEIF ABL:PLAYER:촉수사역 == 4
    TIMES SOURCE:0 , 2.00
    TIMES SOURCE:1 , 2.00
    TIMES SOURCE:2 , 2.00
    TIMES SOURCE:3 , 2.00
ELSE
    TIMES SOURCE:0 , 2.50
    TIMES SOURCE:1 , 2.50
    TIMES SOURCE:2 , 2.50
    TIMES SOURCE:3 , 2.50
ENDIF

;나즈린의 성별상, 조교 대상이♀의 때만 레즈비언 경험이 들어가는 사양에
SIF TALENT:120 == 0
    TCVAR:12 += 1

;촉수 경험 플래그
TFLAG:90 += 1
RETURN 1

