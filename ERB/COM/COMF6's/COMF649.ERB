IF TFLAG:149 == 600
    DOWNBASE:0 += 30
    DOWNBASE:기력 += 50
    SOURCE:40 = 800
;맥주
ELSEIF TFLAG:149 == 601
    DOWNBASE:0 += 60
    DOWNBASE:기력 += 60
    SOURCE:40 = 1600
;와인
ELSEIF TFLAG:149 == 602
    DOWNBASE:0 += 75
    DOWNBASE:기력 += 110
    SOURCE:40 = 2400
;대음양주
ELSEIF TFLAG:149 == 603
    DOWNBASE:0 += 90
    DOWNBASE:기력 += 130
    SOURCE:40 = 3400
;스피리타스
ELSEIF TFLAG:149 == 604
    DOWNBASE:0 += 180
    DOWNBASE:기력 += 220
    SOURCE:40 = 4500
    SOURCE:41 = 1500
;《신편귀독주》
ELSEIF TFLAG:149 == 605
    DOWNBASE:0 += 150
    DOWNBASE:기력 += 200
    SOURCE:40 = 1000
