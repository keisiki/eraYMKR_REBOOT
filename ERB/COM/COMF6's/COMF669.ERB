@EXCOM_ABLE669
;개별 설정 커멘드 필터
SIF DITEMTYPE:999:670 > 0
    RETURN 0
;동물귀 이외 불가
SIF TALENT:116 == 0
    RETURN 0
;조교자의 기교가 3 미만은 안돼
SIF ABL:PLAYER:기교 < 3
    RETURN 0
;곤착용중의 경우 조교자의 기교 4이상 필수
SIF TEQUIP:59 == 17 && ABL:PLAYER:기교 < 4
    RETURN 0
;촉수 조교중은 안 됨
SIF TEQUIP:90
    RETURN 0
RETURN 1

