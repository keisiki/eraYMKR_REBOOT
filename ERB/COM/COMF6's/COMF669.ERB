PRINTL 꼬리를 잡아당긴다
COM_NAME = 꼬리를 잡아당긴다

SELECTCOM = 669
CALL TRAIN_MESSAGE_COM669

DOWNBASE:0 += 20
DOWNBASE:1 += 70

SOURCE:12 = 20
SOURCE:15 = 10
SOURCE:17 = 50

;ABL:순종을 본다
IF ABL:순종 == 0
    SOURCE:11 = 75
    SOURCE:20 = 20
ELSEIF ABL:순종 == 1
    SOURCE:11 = 120
ELSEIF ABL:순종 == 2
    SOURCE:11 = 170
    SOURCE:12 = 10
ELSEIF ABL:순종 == 3
    SOURCE:11 = 200
    SOURCE:12 = 50
ELSEIF ABL:순종 == 4
    SOURCE:11 = 250
    SOURCE:12 = 150
    SOURCE:17 = 150
ELSE
    SOURCE:11 = 280
    SOURCE:12 = 200
    SOURCE:17 = 250
ENDIF

;ABL:욕망을 본다
IF ABL:욕망 == 0
    SOURCE:18 = 40
    SOURCE:20 = 20
ELSEIF ABL:욕망 == 1
    SOURCE:18 = 70
ELSEIF ABL:욕망 == 2
    SOURCE:18 = 300
ELSEIF ABL:욕망 == 3
    SOURCE:10 = 50
    SOURCE:18 = 850
ELSEIF ABL:욕망 == 4
    SOURCE:10 = 300
    SOURCE:17 = 50
    SOURCE:18 = 1200
ELSE
    SOURCE:10 = 600
    SOURCE:17 = 200
    SOURCE:18 = 1700
ENDIF




IF TEQUIP:59 == 2 || TEQUIP:59 == 12 || TEQUIP:59 == 13
    ;학교수영복·비키니·위험한 레오타드 장착중
    SOURCE:10 = 1200
    SOURCE:12 += 400
ELSEIF TEQUIP:59 == 17 || SOURCE:59 == 21
    ;곤·라서스펜더 장착중
    SOURCE:10 = 1400
    SOURCE:12 += 800
ELSEIF TFLAG:899 <= 0 && EQUIP:14 <= 0 && (TALENT:152 || TALENT:153) && (TEQUIP:59 == 1 || TEQUIP:59 == 19)
    ;친애나 상애로 앞치마나 웨딩 드레스 장착중(다만 수면이나 실신하고 있지 않을 때)
    TIMES SOURCE:11 , 1.50 
ELSEIF TEQUIP:36
    ;사라시 장착중
    SOURCE:10 = 1200
    TIMES SOURCE:3 , 1.80
    TIMES SOURCE:11 , 1.40
ENDIF

RETURN 1
