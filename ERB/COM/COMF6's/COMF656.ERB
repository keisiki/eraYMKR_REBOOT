LOCAL = 0

;ABL:기교를 본다
IF ABL:기교 == 0
    LOCAL = 75
ELSEIF ABL:기교 == 1
    LOCAL = 300
ELSEIF ABL:기교 == 2
    LOCAL = 900
ELSEIF ABL:기교 == 3
    LOCAL = 1800
ELSEIF ABL:기교 == 4
    LOCAL = 2400
ELSE
    LOCAL = 3600
ENDIF

;순종을 본다
LOCAL = EJACULATIONCHECK_ABL_10_1(TARGET, LOCAL)
;봉사 정신을 본다
LOCAL = EJACULATIONCHECK_ABL_13_1(TARGET, LOCAL)

;조교자의 A감각을 본다
LOCAL = EJACULATIONCHECK_ABL_2_1(PLAYER, LOCAL)
