;조교 대상의 C감각을 본다
LOCAL = EJACULATIONCHECK_ABL_0_1(TARGET, LOCAL)

SIF TALENT:120 || TALENT:121
    BASE:사정 += LOCAL

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
DOWNBASE:0 += 50
DOWNBASE:기력 += 280

SOURCE:30 = 3000
SOURCE:22 = 2000
SOURCE:31 = 4800

;ABL:순종을 본다
IF ABL:순종 == 0
    TIMES SOURCE:22 , 0.80
    SOURCE:23 = 100
ELSEIF ABL:순종 == 1
    TIMES SOURCE:22 , 0.90
    SOURCE:23 = 200
ELSEIF ABL:순종 == 2
    TIMES SOURCE:22 , 1.00
    SOURCE:23 = 350
ELSEIF ABL:순종 == 3
    TIMES SOURCE:22 , 1.10
    SOURCE:23 = 500
ELSEIF ABL:순종 == 4
    TIMES SOURCE:22 , 1.20
    SOURCE:23 = 800
ELSE
    TIMES SOURCE:22 , 1.30
    SOURCE:23 = 1400
ENDIF

;ABL:C감각을 본다
IF ABL:C감각 == 0
    SOURCE:0 = 800
    SOURCE:15 = 1600
ELSEIF ABL:C감각 == 1
    SOURCE:0 = 1400
    SOURCE:15 = 1900
ELSEIF ABL:C감각 == 2
    SOURCE:0 = 2000
    SOURCE:15 = 2300
ELSEIF ABL:C감각 == 3
    SOURCE:0 = 2500
    SOURCE:15 = 2700
ELSEIF ABL:C감각 == 4
    SOURCE:0 = 2900
    SOURCE:15 = 3100
ELSE
    SOURCE:0 = 3200
    SOURCE:15 = 3500
ENDIF

;ABL:기교를 본다
IF ABL:PLAYER:기교 == 0
    TIMES SOURCE:0 , 0.50
    TIMES SOURCE:15 , 0.50
ELSEIF ABL:PLAYER:기교 == 1
    TIMES SOURCE:0 , 0.80
    TIMES SOURCE:15 , 0.80
ELSEIF ABL:PLAYER:기교 == 2
    TIMES SOURCE:0 , 1.00
    TIMES SOURCE:15 , 1.00
ELSEIF ABL:PLAYER:기교 == 3
    TIMES SOURCE:0 , 1.50
    TIMES SOURCE:15 , 1.50
ELSEIF ABL:PLAYER:기교 == 4
    TIMES SOURCE:0 , 2.50
    TIMES SOURCE:15 , 2.50
ELSE
    TIMES SOURCE:0 , 4.00
    TIMES SOURCE:15 , 4.00
ENDIF

TCVAR:PLAYER:1 += 1
SIF ASSIPLAY == 0 && EXIST_BAR(TARGET)
    CFLAG:176 += 1

;-------------------------------------------------
;사정 체크
;-------------------------------------------------
;노예의 사정은 TRAIN_CHECK.ERB에서 관리
    ;사정처 타입의 설정
    TFLAG:703 = 16
    ;사정처 선택의 가능·불가
    TFLAG:704 = 0
    ;노예 사정처 선정이 끝난 플래그
    TFLAG:705 = 1

IF TALENT:120 || TALENT:121
    ;노예의 P⇔조교자의 A의 불결이 이동
    STAIN:자지 |= STAIN:PLAYER:애널
    STAIN:PLAYER:애널 |= STAIN:자지
ENDIF

IF TALENT:120 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 4
ELSEIF TALENT:120 && TALENT:PLAYER:남자
    TCVAR:13 += 4
ENDIF
;봉사 쾌락 경험 입수 판정
TFLAG:100 |= 1

;처녀 상실의 후에 페니스를 뽑고 있을까
TFLAG:101 = (TFLAG:101 == 2) ?  1 # 0
RETURN 1

