    STAIN:손 |= 4
    STAIN:자지 |= 4
    STAIN:보지 |= 4
    STAIN:가슴 |= 4
    STAIN:다리 |= 4
    STAIN:발 |= 4

    ;手で射精させたフラグ
    TFLAG:12 = TFLAG:91
;通常の射精
ELSEIF TFLAG:91 == 1
    TCVAR:PLAYER:3 += 1
    TCVAR:4 += 1
    PRINTL 사정

    ;精液汚れ
    STAIN:PLAYER:자지 |= 4
    STAIN:손 |= 4
    STAIN:자지 |= 4
    STAIN:보지 |= 4
    STAIN:가슴 |= 4
    STAIN:다리 |= 4
    STAIN:발 |= 4

    ;手で射精させたフラグ
    TFLAG:12 = TFLAG:91
ENDIF
BASE:PLAYER:사정 = LIMIT(BASE:PLAYER:사정 - EJAC*(TFLAG:91), 0, EJAC-1)

;노예의 体⇔조교자의 Ｐ의 불결이 이동
STAIN:손 |= STAIN:PLAYER:자지
