    SOURCE:22 = 160
ELSEIF ABL:봉사정신 == 2
    SOURCE:15 = 350
    SOURCE:16 = 200
    TIMES SOURCE:30 , 1.50
    SOURCE:22 = 700
ELSEIF ABL:봉사정신 == 3
    SOURCE:15 = 400
    SOURCE:16 = 300
