ELSEIF ABL:C감각 == 1
    SOURCE:0 = 120
ELSEIF ABL:C감각 == 2
    SOURCE:0 = 640
ELSEIF ABL:C감각 == 3
    SOURCE:0 = 1200
ELSEIF ABL:C감각 == 4
    SOURCE:0 = 2300
