        SOURCE:24 = 1500
        TIMES SOURCE:16 , 4.00
        TIMES SOURCE:22, 0.70
    ELSEIF ABL:정액중독 == 4
        SOURCE:24 = 3000
        TIMES SOURCE:16 , 5.00
        TIMES SOURCE:22, 0.40
    ELSE
        SOURCE:24 = 6000
        TIMES SOURCE:16 , 6.00
        TIMES SOURCE:22, 0.10
    ENDIF
ENDIF

;대량 사정
IF TFLAG:91 == 2
    TIMES SOURCE:24 , 2.00
    TIMES SOURCE:16 , 1.50

    TCVAR:PLAYER:3 += 2
    TCVAR:4 += 3
    PRINTL 대량사정

