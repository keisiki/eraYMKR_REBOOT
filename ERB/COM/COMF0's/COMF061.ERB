@COM_ABLE61
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:61 > 0
    RETURN 0
;아이템을 가지고 있는지, 아이템 없음 설정이나 촉수 조교중이 아니면 안 됨
SIF ITEM:61 == 0 && NOITEM == 0 && TEQUIP:90 == 0
    RETURN 0
;약물내성이라면 안 됨
SIF TALENT:약물내성
    RETURN 0
;기계라면 안 됨
SIF TALENT:기계
    RETURN 0
;수면중은 불가
SIF EQUIP:14
    RETURN 0
;강제개구기 외에 다른 걸로 입이 막혀 있으면 불가
SIF TEQUIP:42 && TEQUIP:42 != 3
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM61
IF TEQUIP:90
    PRINTL 촉수 미약 전개
    COM_NAME = 촉수 미약 전개
ELSE
    PRINTL 미약
    COM_NAME = 미약
ENDIF
CALL TRAIN_MESSAGE_COM061

;調合知識があれば消費を抑える
LOCAL:1 = 300
SIF TALENT:MASTER:조합지식 || (ASSI >= 0 && TALENT:ASSI:조합지식)
    LOCAL:1 /= 2

;調教対象に媚薬中毒があれば消費を抑える
SIF TALENT:미약중독
    LOCAL:1 /= 2

DOWNBASE:0 += LOCAL:1
DOWNBASE:기력 += LOCAL:1

;媚薬効果で욕정のアップが2倍になるので実際には+10000
SOURCE:18 = 5000
SOURCE:26 = 2000
SOURCE:31 = 2000

;媚薬中毒
IF TALENT:미약중독
    SOURCE:24 = 500
    TIMES SOURCE:18 , 1.50
    TIMES SOURCE:31 , 1.50
    SOURCE:42 = 100
ELSE
    SOURCE:42 = 1 + RAND:3
ENDIF

IF TEQUIP:90 == 0
    IF NOITEM == 0
        ITEM:61 -= 1
        SIF FLAG:아이템확장 & 4 && MONEY:0 >= ITEMPRICE:61
            CALL FILL_PLURAL_ITEM, 61
    ENDIF
ENDIF

TEQUIP:11 = 1

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF

;약물경험
TCVAR:40 += 2

RETURN 1

