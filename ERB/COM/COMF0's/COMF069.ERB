@COM_ABLE69
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:69 > 0
    RETURN 0
;C계 확장 커맨드를 유효하게 하지 않으면 안 됨
SIF (FLAG:커맨드확장 & 1) == 0
    RETURN 0
;약품계 확장 커맨드를 유효하게 하지 않으면 안 됨
SIF (FLAG:커맨드확장 & 32) == 0
    RETURN 0
;이상 경험 필터가 오프가 되지 않으면 안 됨
SIF FLAG:VA이상조교필터 & 4
    RETURN 0
;음핵 성장제가 없으면 안 됨
SIF ITEM:68 == 0 && NOITEM == 0
    RETURN 0
;약물내성이라면 안 됨
SIF TALENT:약물내성
    RETURN 0
;이미 봉이 있는(남자나 후타나리)라면 안 됨
SIF EXIST_PENIS(TARGET)
    RETURN 0
;기계라면 안 됨
SIF TALENT:기계
    RETURN 0
;클리토리스를 성장시키지 않았다고 안 됨
SIF BASE:음핵 == 0
    RETURN 0
;클리토리스 링을 끼고 있으면(자) 안 됨
SIF CFLAG:특수장비 & 1
    RETURN 0
;음핵 성장제사용 중에는 불가
SIF TEQUIP:8
    RETURN 0
;수면중은 불가
SIF EQUIP:14
    RETURN 0
;C계 장착도구 사용중은 불가
SIF TEQUIP:30 || TEQUIP:31
    RETURN 0
;강제개구기 외에 다른 걸로 입이 막혀 있으면 불가
SIF TEQUIP:42 && TEQUIP:42 != 3
    RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
    RETURN 0
;목욕탕 플레이 중에는 불가
SIF TEQUIP:53
    RETURN 0
;00목욕탕 입욕 중에는 불가
SIF TEQUIP:55
    RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
    RETURN 0
;훈도시 착용중의 경우는 안 됨
SIF TEQUIP:59 == 17
    RETURN 0
;알몸 앞치마, 학교수영복 플레이 중에는 불가
SIF TEQUIP:59 == 1 || TEQUIP:59 == 2
    RETURN 0
;나체정식 중에는 안 됨
SIF TEQUIP:60
    RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
RETURN 1

