@COM69
PRINTL 음핵성장제
COM_NAME = 음핵성장제
CALL TRAIN_MESSAGE_COM069

;조제 지식이 있으면 소비를 억제한다
LOCAL:1 = 300
SIF TALENT:MASTER:조합지식 || (ASSI >= 0 && TALENT:ASSI:조합지식)
    LOCAL:1 /= 2

DOWNBASE:0 += LOCAL:1
DOWNBASE:기력 += LOCAL:1

SOURCE:15 = 300
SOURCE:26 = 200

;ABL:순종을 본다
IF ABL:C감각 == 0
    TIMES SOURCE:15 , 2.00
ELSEIF ABL:C감각 == 1
    TIMES SOURCE:15 , 1.50
ELSEIF ABL:C감각 == 2
    TIMES SOURCE:15 , 1.00
ELSEIF ABL:C감각 == 3
    TIMES SOURCE:15 , 0.80
ELSEIF ABL:C감각 == 4
    TIMES SOURCE:15 , 0.60
ELSE
    TIMES SOURCE:15 , 0.30
ENDIF

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF

;약물 경험
TCVAR:40 += 2

SIF PLAYER == MASTER
    TCVAR:41 += 2

;음핵 성장제 1개 소비
IF NOITEM == 0
    ITEM:68 -= 1
    SIF FLAG:아이템확장 & 8 && MONEY:0 >= ITEMPRICE:68
        CALL FILL_PLURAL_ITEM, 68
ENDIF

IF EX:0 < 5
    LOCAL:2 = 5 + RAND:10
ELSEIF EX:0 < 10
    LOCAL:2 = 10 + RAND:10
ELSEIF EX:0 < 20
    LOCAL:2 = 15 + RAND:15
ELSEIF EX:0 < 50
    LOCAL:2 = 20 + RAND:15
ELSEIF EX:0 < 100
    LOCAL:2 = 30 + RAND:15
ELSE
    LOCAL:2 = 50 + RAND:15
ENDIF
BASE:음핵 = MIN(BASE:음핵 + LOCAL:2, 250)

;음핵 성장제효과 발휘
TEQUIP:8 = 1
RETURN 1

