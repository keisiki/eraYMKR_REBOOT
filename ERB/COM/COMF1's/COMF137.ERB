@COM_ABLE137
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:137 > 0
    RETURN 0
;Ｃ계 확장 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 1) == 0
    RETURN 0
;이상계 조교 필터가 오프되어 있지 않으면 불가
SIF FLAG:2 & 4
    RETURN 0
;고문계, 정신조작계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 16) == 0
    RETURN 0
;약품계 확장 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 32) == 0
    RETURN 0
;주사계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:15 & 64) == 0
    RETURN 0
;注射セットを持っているか, 아이템なし設定でないとダメ
SIF ITEM:53 == 0 && NOITEM == 0
    RETURN 0
;조교자의 기교가 4이상이 아니면 불가
SIF ABL:PLAYER:기교 < 4
    RETURN 0
;기교4이하의 ASSI일 경우注射できない(針さばきならＯＫ)
IF ASSIPLAY
    SIF ABL:ASSI:기교 <= 4 && TALENT:ASSI:53 == 0
        RETURN 0
ENDIF
;肥大陰核じゃないとダメ
SIF TALENT:비대음핵 == 0
    RETURN 0
;남자 또는 후타나리면 불가
SIF EXIST_PENIS(TARGET)
    RETURN 0
;기계면 불가
SIF TALENT:206
    RETURN 0
;クリトリスリングをはめているとダメ
SIF CFLAG:42 & 1
    RETURN 0
;Ｃ계 장착구 사용 중에는 불가
SIF TEQUIP:30 || TEQUIP:31
    RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
    RETURN 0
;욕실 플레이 중에는 불가
SIF TEQUIP:53
    RETURN 0
;○○목욕탕 입욕 중에는 불가
SIF TEQUIP:55
    RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
    RETURN 0
;훈도시 착용 중일 경우는 안 됨
SIF TEQUIP:59 == 17
    RETURN 0
;ウェディングドレス · ゴスロリ着用中の場合はダメ
SIF TEQUIP:59 == 19 || TEQUIP:59 == 20
    RETURN 0
;알몸 앞치마, 학교수영복 플레이 중에는 불가
SIF TEQUIP:59 == 1 || TEQUIP:59 == 2
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
RETURN 1

