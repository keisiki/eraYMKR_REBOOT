;커맨드 본체
;--------------------------------------------------
@COM137
PRINTL 사정기능개발
COM_NAME = 사정 기능 개발

;조제 지식이 있으면 소비를 억제한다
LOCAL:3 = (TALENT:MASTER:55) ?  1 # 0
SIF ASSI >= 0 && TALENT:ASSI:55
    LOCAL:3 = 1

LOCAL:1 = (LOCAL:3) ?  750 # 1000
LOCAL:2 = (LOCAL:3) ?  600 # 800

DOWNBASE:0 += LOCAL:1
DOWNBASE:1 += LOCAL:2

SOURCE:24 = 500
SOURCE:30 = 10000
SOURCE:31 = 20000

;ABL:조교자의 기교를 본다
IF ABL:PLAYER:기교 == 4
    SOURCE:0 = 5000
ELSEIF ABL:PLAYER:기교 >= 5
    SOURCE:0 = 2000
ENDIF

;ABL:순종을 본다
IF ABL:C감각 == 0
    SOURCE:31 += 10000
ELSEIF ABL:C감각 == 1
    SOURCE:31 += 8000
ELSEIF ABL:C감각 == 2
    SOURCE:31 += 6000
ELSEIF ABL:C감각 == 3
    SOURCE:31 += 4000
ELSEIF ABL:C감각 == 4
    SOURCE:31 += 2000
ELSE
    SOURCE:31 += 500
ENDIF

;음핵/음경판정
SIF TALENT:171
    SOURCE:18 = 300

IF (ABL:PLAYER:기교 >= 5 || ABL:순종 >= 5) 
    IF TALENT:100
        LOCAL:4 = RAND:2
    ELSEIF TALENT:101
        LOCAL:4 = RAND:8
    ELSE
        LOCAL:4 = RAND:4
    ENDIF
    SIF TALENT:171 && LOCAL:4 > 0
        LOCAL:4 = RAND:2
ELSE
    LOCAL:4 = RAND:6
ENDIF
;말용
TFLAG:99 = (LOCAL:4 == 0) ?  1 # 0
CALL TRAIN_MESSAGE_COM137
IF TFLAG:99 == 1
    PRINTFORMW %조사선택(CALLNAME:TARGET, "는")% [후타나리]가 되었다.
    CALL EVENT_FUTA_PLUS_COMMON, TARGET
    IF (CFLAG:37 & 8) == 0
        TCVAR:50 += 1
        CFLAG:37 |= 8
    ENDIF
ENDIF

;약물 경험
TCVAR:40 += 1

IF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
    TCVAR:12 += 2
ELSEIF TALENT:120 && TALENT:PLAYER:120
    TCVAR:13 += 2
ENDIF
;주인 경험 플래그
SIF ASSIPLAY == 0 && ABL:마조끼 >= 3
    TFLAG:50 += 1

RETURN 1

