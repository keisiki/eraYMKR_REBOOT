SOURCE:12 = 800
SOURCE:22 = 100
SOURCE:31 = 1500

;ABL:노출벽을 본다
IF ABL:노출증 == 0
    SOURCE:12 += 1500
    SOURCE:31 += 3000
ELSEIF ABL:노출증 == 1
    SOURCE:19 += (ABL:욕망 + ABL:노출증) * 10
    SOURCE:12 += 1250
    SOURCE:31 += 1500
ELSEIF ABL:노출증 == 2
    SOURCE:19 += (ABL:욕망 + ABL:노출증) * 20
    SOURCE:12 += 1000
    SOURCE:31 += 800
ELSEIF ABL:노출증 == 3
    SOURCE:19 += (ABL:욕망 + ABL:노출증) * 40
    SOURCE:12 += 750
    SOURCE:31 += 400
ELSEIF ABL:노출증 == 4
    SOURCE:19 += (ABL:욕망 + ABL:노출증) * 80
    SOURCE:12 += 500
    SOURCE:31 += 200
ELSE
    SOURCE:19 += (ABL:욕망 + ABL:노출증) * 140
    SOURCE:12 += 250
    SOURCE:31 += 100
ENDIF

;부끄럼쟁이·부끄럼없음
IF TALENT:35
    TIMES SOURCE:12 , 1.20
    TIMES SOURCE:22 , 1.20
ELSEIF TALENT:36
    TIMES SOURCE:12 , 0.80
    TIMES SOURCE:22 , 0.80
ENDIF

;노예의 A⇔조교자의 손의 불결이 이동
