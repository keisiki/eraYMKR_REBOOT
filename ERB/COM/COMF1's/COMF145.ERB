ELSEIF EXP:방뇨경험 < EXPLV:3
    TIMES LOCAL:1 , 2.00
ELSEIF EXP:방뇨경험 < EXPLV:4
    TIMES LOCAL:1 , 1.00
ELSEIF EXP:방뇨경험 < EXPLV:5
    TIMES LOCAL:1 , 0.80
ELSE
    TIMES LOCAL:1 , 0.60
ENDIF

;반항적
SIF TALENT:반항적
    TIMES LOCAL:1 , 2.00
;프라이드 높다
IF TALENT:프라이드가높음
    TIMES LOCAL:1 , 2.00
;프라이드 낮다
ELSEIF TALENT:프라이드가낮음
    TIMES LOCAL:1 , 0.80
ENDIF
;자제심
SIF TALENT:자제심
    TIMES LOCAL:1 , 1.50
;감정결여
SIF TALENT:감정결여
    TIMES LOCAL:1 , 0.60
;튀고 싶어함
SIF TALENT:튀고싶어함
    TIMES LOCAL:1 , 0.80
;억압
SIF TALENT:억압
    TIMES LOCAL:1 , 3.00
;저항
SIF TALENT:저항
    TIMES LOCAL:1 , 3.00
;부끄럼쟁이
IF TALENT:부끄럼쟁이
    TIMES LOCAL:1 , 3.50
;부끄럼없음
ELSEIF TALENT:부끄럼없음
    TIMES LOCAL:1 , 0.50
ENDIF

SOURCE:25 += LOCAL:1 * 3

;겁쟁이
SIF TALENT:겁쟁이
    TIMES LOCAL:1 , 1.20

SOURCE:31 += LOCAL:1 * 5
SOURCE:32 += LOCAL:1 * 2

;상애
IF TALENT:상애
    SOURCE:11 = 500
;친애
ELSEIF TALENT:친애
    SOURCE:11 = 300
;연모
ELSEIF TALENT:연모
    SOURCE:11 = 100
ENDIF

TCVAR:6 += 2
;방뇨 레벨 증가
IF TALENT:오줌싸개버릇 == 0
    LOCAL:2 = 1 + ((EXP:방뇨경험 + TCVAR:6) / 10)
    LOCAL:2 = MIN(LOCAL:2 * 2, 10)
    CFLAG:방뇨레벨 += LOCAL:2
ENDIF

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF
;촉수 경험 플래그
SIF TEQUIP:90
    TFLAG:90 += 1

TEQUIP:12 = 0
TFLAG:32 = 1
EX:12 += 1
NOWEX:12 += 1
BASE:뇨의 = 0

RETURN 1

