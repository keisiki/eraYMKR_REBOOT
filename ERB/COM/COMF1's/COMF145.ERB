    SOURCE:22 = 6000
ELSEIF ABL:노출증 == 1
    SOURCE:22 = 5000
ELSEIF ABL:노출증 == 2
    SOURCE:22 = 4000
ELSEIF ABL:노출증 == 3
    SOURCE:22 = 3000
ELSEIF ABL:노출증 == 4
    SOURCE:22 = 2000
ELSE
    SOURCE:22 = 1000
ENDIF

