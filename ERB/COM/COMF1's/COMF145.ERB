@COM_ABLE145
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:145 > 0
    RETURN 0
;Ｃ계 확장 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 1) == 0
    RETURN 0
;利尿剤使用中かおもらし癖ありかある程度尿意を催していないとダメ
SIF TEQUIP:12 == 0 && TALENT:오줌싸개버릇 == 0 && BASE:뇨의 <= MAXBASE:뇨의 / 2
    RETURN 0
;순종4미만 · 레즈끼(BL끼) 4 미만의 ASSI일 경우, 조교 대상이 동성이라면 실행할 수 없다(망신か복종があるならＯＫ)
IF ASSIPLAY
    SIF (ABL:ASSI:순종 < 4 || ((TALENT:남자 == 0 && TALENT:ASSI:남자 == 0 && ABL:ASSI:레즈끼 < 4) || (TALENT:남자 && TALENT:ASSI:남자 && ABL:ASSI:BL끼 < 4))) && TALENT:ASSI:망신 == 0 && TALENT:ASSI:복종 == 0
        RETURN 0
ENDIF
;기계면 불가
SIF TALENT:기계
    RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
    RETURN 0
;훈도시 착용 중일 경우는 안 됨
SIF TEQUIP:59 == 17
    RETURN 0
;순종3이상でないとダメ(お風呂場ならＯＫ)
IF TEQUIP:53 == 0
    SIF ABL:순종 < 3
        RETURN 0
ENDIF
;한증탕과 암반욕 외의 ○○ 욕탕 입욕 중에는 불가
SIF TEQUIP:55 && TEQUIP:55 != 12 && TEQUIP:55 != 15
    RETURN 0
;수면 중에는 불가
SIF EQUIP:14
    RETURN 0
;실신 중에는 불가
SIF TFLAG:899 > 0
    RETURN 0
;샤워 중에는 불가
SIF TEQUIP:54
    RETURN 0
;射精止め中はダメ
SIF TEQUIP:69
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
RETURN 1

