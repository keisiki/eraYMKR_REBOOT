@COM_ABLE118
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:118 > 0
    RETURN 0
;수치 플레이계 확장 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 512) == 0
    RETURN 0
;조수가 없으면 불가
SIF ASSI < 0
    RETURN 0
;조수로는 안 됨
SIF ASSIPLAY
    RETURN 0
;주인과 조수 중 한쪽이라도 남자면 안 됨
SIF TALENT:MASTER:남자 || TALENT:ASSI:남자
    RETURN 0
;수면 중에는 불가
SIF EQUIP:14
    RETURN 0
;실신 중에는 불가
SIF TFLAG:899 > 0
    RETURN 0
;眼隠しと耳栓両方つけていた場合は意味がないので実行できない
SIF TEQUIP:41 && TEQUIP:45
    RETURN 0
;욕실 플레이 중에는 플레이 매트가 없으면 불가
SIF TEQUIP:53 && ITEM:42 == 0 && NOITEM == 0
    RETURN 0
;조수가 훈도시 착용 중일 경우 ダメ
SIF ASSI >= 0 && TEQUIP:ASSI:59 == 17
    RETURN 0
;한증탕과 암반욕 외의 ○○ 욕탕 입욕 중에는 불가
SIF TEQUIP:55 && TEQUIP:55 != 12 && TEQUIP:55 != 15
    RETURN 0
;시간정지 중에는 무리
SIF TEQUIP:71
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
RETURN 1

