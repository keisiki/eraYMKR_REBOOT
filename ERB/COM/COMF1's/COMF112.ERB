@COM112
PRINTL 제모플레이
COM_NAME = 제모플레이
CALL TRAIN_MESSAGE_COM112

DOWNBASE:0 += 20
DOWNBASE:기력 += 60

LOCAL:1 = 500
SOURCE:16 = 750
SOURCE:24 = 500
SOURCE:10 = 800
SOURCE:12 = 1000
SOURCE:31 = 1200

;PALAM:윤활을 본다
IF PALAM:10 < PALAMLV:1
    SOURCE:20 = 600
ELSEIF PALAM:10 < PALAMLV:2
    SOURCE:20 = 250
ELSEIF PALAM:10 < PALAMLV:3
    SOURCE:20 = 100
ELSEIF PALAM:10 < PALAMLV:4
    SOURCE:20 = 30
ENDIF

;ABL:노출벽을 본다
IF ABL:노출증 == 0
    TIMES LOCAL:1 , 0.80
ELSEIF ABL:노출증 == 1
    TIMES LOCAL:1 , 1.00
ELSEIF ABL:노출증 == 2
    TIMES LOCAL:1 , 1.20
ELSEIF ABL:노출증 == 3
    TIMES LOCAL:1 , 1.50
ELSEIF ABL:노출증 == 4
    TIMES LOCAL:1 , 2.00
ELSE
    TIMES LOCAL:1 , 2.60
ENDIF

;ABL:마조끼를 본다
IF ABL:마조끼 == 0
    TIMES LOCAL:1 , 0.80
ELSEIF ABL:마조끼 == 1
    TIMES LOCAL:1 , 1.00
ELSEIF ABL:마조끼 == 2
    TIMES LOCAL:1 , 1.20
ELSEIF ABL:마조끼 == 3
    TIMES LOCAL:1 , 1.40
ELSEIF ABL:마조끼 == 4
    TIMES LOCAL:1 , 1.70
ELSE
    TIMES LOCAL:1 , 2.00
ENDIF

SOURCE:24 += LOCAL:1
SOURCE:18 += LOCAL:1
SOURCE:12 += LOCAL:1

;[작은체형], [소인] 이외
SIF TALENT:128 == 0 && TALENT:127 == 0
    TIMES SOURCE:12 , 2.50

IF TALENT:65 == 0
    PRINTL
    PRINTFORMW %조사선택(CALLNAME:TARGET, "는")% [%TALENTNAME:65%]가 되었다.
    TALENT:65 = 1
ENDIF
;탈모 상태 이외의 경우는 나중에 나 오게 된다
SIF CFLAG:36 != 1
    CFLAG:36 = 2
;털이 나 있는 경우는 반들반들이 된다
BASE:음모 = 0

;음모 입수 이벤트
SIF FLAG:SHOP이벤트확장 & 8 && (TFLAG:996 & 64) == 0 
    CALL SWEET_POTATO_PUBLIC_HAIR

;노출 쾌락 경험 입수 판정
TFLAG:100 |= 2

RETURN 1

