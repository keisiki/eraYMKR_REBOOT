    TIMES LOCAL , 1.20
    SOURCE:20 += 10
ELSEIF EXP:0 <= EXPLV:4
    TIMES LOCAL , 1.40
ELSE
    TIMES LOCAL , 1.60
ENDIF

;V민감과 V둔감
IF TALENT:102
    TIMES LOCAL , 1.40
ELSEIF TALENT:103
    TIMES LOCAL , 0.60
ENDIF

IF (FLAG:1100 & 1) && TEQUIP:90 == 0
    ;技師パッチ有効なら道具使用時ソースチェックを呼ぶ
    ;FLAG 1110:道具番号 1111:改善タイプ 1112:SOURCEの実値 
    FLAG:1110 = 6
    FLAG:1111 = 0
    FLAG:1112 = LOCAL
    CALL SOURCECHECK_CUSTOMTOOL
    LOCAL = FLAG:1120
ENDIF

SOURCE:1 += LOCAL
SOURCE:12 += 45
SOURCE:16 += 95
SOURCE:18 += 75
SOURCE:20 += 90
SOURCE:22 += 5
SOURCE:24 += 100
SOURCE:31 += 45

TCVAR:0 += 1

IF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
    TCVAR:12 += 1
ELSEIF TALENT:120 && TALENT:PLAYER:120
    TCVAR:13 += 1
ENDIF

;윤활과 욕정이 일정 이상이라면 애액이 모인다
SIF PALAM:10 >= 30000 && PALAM:13 >= 50000
    TFLAG:129 += 1
;촉수 경험 플래그
SIF TEQUIP:90
    TFLAG:90 += 1
RETURN 1

