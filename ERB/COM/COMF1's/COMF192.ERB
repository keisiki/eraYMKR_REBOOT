;=============================================================================
;유선 개발
;=============================================================================
;………………………………………………
;실행 판정
;………………………………………………
@COM_ABLE192
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:192 > 0
    RETURN 0
;Ｂ계 확장 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 8) == 0
    RETURN 0
;한 번도 유선개발로 모유체질이 된 적이 없을 경우,
;이상계 조교 필터가 오프되어 있지 않으면 불가
SIF FLAG:VA이상조교필터 & 4 && (CFLAG:21 & 16) == 0
    RETURN 0
;남자라면 안 됨
SIF TALENT:120
    RETURN 0
;모유체질이면 불가
SIF TALENT:134
    RETURN 0
;조교자의 기교가 4이상이 아니면 불가
SIF ABL:PLAYER:기교 < 4
    RETURN 0
;Ｂ계 장착구 사용 중에는 불가
SIF TEQUIP:35 || TEQUIP:36
    RETURN 0
;밧줄 사용 중에는 불가
SIF TEQUIP:40
    RETURN 0
;훈도시와 알몸 와이셔츠 외의 코스프레 중에는 안 됨
SIF TEQUIP:59 > 2 && TEQUIP:59 != 11 && TEQUIP:59 != 17
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
;시체는 안됨
SIF TALENT:강시 == 1
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM192
PRINTL 유선 개발
COM_NAME = 유선 개발

DOWNBASE:0 += 500
DOWNBASE:기력 += 3000

IF ABL:PLAYER:기교 == 4
    SOURCE:20 = 5000
ELSEIF ABL:PLAYER:기교 >= 5
    SOURCE:20 = 2000
ENDIF

;ABL:순종을 본다
IF ABL:순종 == 0
    SOURCE:31 = 10000
ELSEIF ABL:순종 == 1
    SOURCE:31 = 8000
ELSEIF ABL:순종 == 2
    SOURCE:31 = 6000
ELSEIF ABL:순종 == 3
    SOURCE:31 = 4000
ELSEIF ABL:순종 == 4
    SOURCE:31 = 2000
ELSE
    SOURCE:31 = 500
ENDIF

;음유
SIF TALENT:음유
    SOURCE:18 = 300

IF ABL:PLAYER:기교 >= 5 || ABL:순종 >= 5
    IF TALENT:음유
        LOCAL:1 = RAND:2
    ELSEIF TALENT:106
        LOCAL:1 = RAND:4
    ELSEIF TALENT:107
        LOCAL:1 = RAND:8
    ELSE
        LOCAL:1 = RAND:6
    ENDIF
ELSE
    IF TALENT:음유
        LOCAL:1 = RAND:4
    ELSEIF TALENT:106
        LOCAL:1 = RAND:8
    ELSEIF TALENT:107
        LOCAL:1 = RAND:16
    ELSE
        LOCAL:1 = RAND:12
    ENDIF
ENDIF
SIF (ITEM:33 || NOITEM) && (TALENT:PLAYER:새드 || TALENT:PLAYER:초S || ABL:PLAYER:새드끼 > 2) && LOCAL:1 > 0
    LOCAL:1 -= 1
;말용
TFLAG:99 = LOCAL:1
CALL TRAIN_MESSAGE_COM192

IF LOCAL:1 == 0 && TALENT:110 == 0
    TALENT:134 = 1
    CALL CALC_GAUGE3_SLAVE, TARGET, 1
    IF (CFLAG:21 & 16) == 0
        TCVAR:50 += 1
        CFLAG:21 |= 16
    ENDIF
ELSEIF LOCAL:1 > 0
    TCVAR:45 += LOCAL:1
ENDIF

IF TALENT:120 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 2
ELSEIF TALENT:120 && TALENT:PLAYER:남자
    TCVAR:13 += 2
ENDIF
;주인 경험 플래그
SIF ASSIPLAY == 0 && ABL:마조끼 >= 3
    TFLAG:50 += 1

RETURN 1

;--------------------------------------------------
;조교시 메시지
;--------------------------------------------------
@TRAIN_MESSAGE_COM192
CALL KOJO_TRAIN_MESSAGE_COM
SIF FLAG:조교시텍스트표시 == 0 || CFLAG:99 == 1 || RESULT != 0
    RETURN 0

PRINTL
PRINTFORM %조사선택(CALLNAME:PLAYER, "는")% 
SIF ITEM:33 && (TALENT:PLAYER:새드 || TALENT:PLAYER:초S || ABL:PLAYER:새드끼 > 2)
    PRINTFORM %조사처리(ITEMNAME:33,"를")% 이용해 
PRINTFORML %CALLNAME:TARGET%의 유선을 개발해, 모유가 나오도록 하려 했다.
PRINTL
IF TALENT:110
    PRINTFORML 그러나 %CALLNAME:TARGET%의 유선을 개발하려면
    PRINTW 지금의 가슴의 크기의 상태로는 조금 무리인 것 같다….
ELSEIF TFLAG:99 == 0
    PRINTFORMW 경혈에 자극을 받자 %CALLNAME:TARGET%의 유선에서 모유가 흘러나오기 시작했다.
ELSE
    PRINTFORMW 기교가 부족해서 그런지 %CALLNAME:TARGET%의 유선을 개발할 수 없었다….
ENDIF
