    TIMES SOURCE:3 , 1.40
;B민감
SIF TALENT:106
    TIMES SOURCE:3 , 1.20
;B둔감
SIF TALENT:106
    TIMES SOURCE:3 , 0.90

IF FLAG:1100 & 1
    ;技師パッチ有効なら道具使用時ソースチェックを呼ぶ
    ;FLAG 1110:道具番号 1111:改善タイプ 1112:SOURCEの実値 
    FLAG:1110 = 0
    FLAG:1111 = 0
    FLAG:1112 = SOURCE:3
    CALL SOURCECHECK_CUSTOMTOOL
    SOURCE:3 = FLAG:1120
ENDIF

IF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
    TCVAR:12 += 1
ELSEIF TALENT:120 && TALENT:PLAYER:120
    TCVAR:13 += 1
ENDIF

;확장유두
IF TALENT:2
    SOURCE:20 = 500
    SOURCE:25 = 1000
    IF EXP:35 < 50
        TIMES SOURCE:20, 0.90
        TIMES SOURCE:25, 0.90
    ELSEIF EXP:35 < 100
        TIMES SOURCE:20, 0.80
        TIMES SOURCE:25, 0.80
    ELSEIF EXP:35 < 200
        TIMES SOURCE:20, 0.70
        TIMES SOURCE:25, 0.70
    ELSE
        TIMES SOURCE:20, 0.60
        TIMES SOURCE:25, 0.60
    ENDIF
ENDIF

;유두삽입로터의 착탈
IF TALENT:2
    IF TEQUIP:35
        TEQUIP:35 = 0
    ELSE
        TEQUIP:35 = 6
    ENDIF
    TCVAR:35 += 3
    TCVAR:45 += 5
ENDIF

;커맨드 속성：도구(조교자)
TFLAG:98 = 1
RETURN 1

