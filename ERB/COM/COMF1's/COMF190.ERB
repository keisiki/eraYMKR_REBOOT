IF FLAG:1100 & 1
    ;技師パッチ有効なら特殊な名前チェック
    FLAG:1110 = 0
    CALL NAMECHECK_CUSTOMTOOL
    IF COM_TOOL_NAME != "로터"
        PRINTFORML 유두 %COM_TOOL_NAME%
    ELSE
        PRINTL 유두 로터
    ENDIF 
ELSE
    COM_TOOL_CALLNAME = %COM_TOOL_NAME%
    PRINTL 유두 로터
ENDIF
COM_NAME = 유두 로터
CALL TRAIN_MESSAGE_COM190

DOWNBASE:0 += 100
DOWNBASE:1 += 100

SOURCE:12 = 120
SOURCE:31 = 70

