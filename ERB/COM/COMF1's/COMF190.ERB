IF ABL:3 == 0
    SOURCE:3 = 150
ELSEIF ABL:3 == 1
    SOURCE:3 = 360
ELSEIF ABL:3 == 2
    SOURCE:3 = 840
ELSEIF ABL:3 == 3
    SOURCE:3 = 1500
ELSEIF ABL:3 == 4
    SOURCE:3 = 2200
ELSE
    SOURCE:3 = 2800
ENDIF

