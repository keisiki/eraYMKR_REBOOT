@COM293
PRINTL 정액 키스
COM_NAME = 정액 키스
CALL TRAIN_MESSAGE_COM293

;-------------------------------------------------
;실행할 수 있을까의 판정
;-------------------------------------------------
;PLAYER가 무리하게 하므로 실행은 언제라도 가능

;더러움의 계산
TFLAG:242 = 0
;애액의 더러움
SIF STAIN:PLAYER:자지 & 1
    TFLAG:242 += 1
;정액의 더러움
SIF STAIN:PLAYER:자지 & 4
    TFLAG:242 += 3
;애널의 더러움
SIF STAIN:PLAYER:자지 & 8
    TFLAG:242 += 7
SIF STAIN:PLAYER:자지 & 16
    TFLAG:242 += 15

SIF TALENT:61
    TFLAG:242 /= 3
SIF TALENT:62
    TFLAG:242 *= 2
;-------------------------------------------------
;실행 결정
;-------------------------------------------------
;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
DOWNBASE:0 += 0
DOWNBASE:기력 += 80

SOURCE:22 = 1500
SOURCE:31 = 500

;위 쪽으로 계산한 더러운 데이터
SOURCE:30 = TFLAG:242*40 + 100

;ABL:봉사 정신을 본다
IF ABL:봉사정신 == 0
    SOURCE:15 = 420
    SOURCE:16 = 150
    TIMES SOURCE:30 , 4.00
ELSEIF ABL:봉사정신 == 1
    SOURCE:15 = 500
    SOURCE:16 = 300
    TIMES SOURCE:30 , 2.50
ELSEIF ABL:봉사정신 == 2
    SOURCE:15 = 580
    SOURCE:16 = 600
    TIMES SOURCE:30 , 1.50
ELSEIF ABL:봉사정신 == 3
    SOURCE:15 = 660
    SOURCE:16 = 900
    TIMES SOURCE:30 , 1.00
ELSEIF ABL:봉사정신 == 4
    SOURCE:15 = 740
    SOURCE:16 = 1500
    TIMES SOURCE:30 , 0.50
ELSE
    SOURCE:15 = 820
    SOURCE:16 = 2200
    TIMES SOURCE:30 , 0.10
ENDIF

;조교자의 입의 더러움과 노예의 입의 더러움을 처리
LOCAL = STAIN:PLAYER:입
STAIN:PLAYER:입 |= STAIN:입
STAIN:입 |= LOCAL

;키스 경험
TCVAR:23 += 1
TCVAR:PLAYER:23 += 1
CFLAG:172 += (ASSIPLAY == 0) ?  1 # 0

;정액을 마신 플래그
TFLAG:3 = 1
RETURN 1

