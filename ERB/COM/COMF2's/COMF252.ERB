SOURCE:25 = 5000

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
    SOURCE:20 = 13000
ELSEIF PALAM:16 < PALAMLV:2
    SOURCE:20 = 15500
ELSEIF PALAM:16 < PALAMLV:3
    SOURCE:20 = 18500
ELSEIF PALAM:16 < PALAMLV:4
    SOURCE:20 = 21000
ELSE
    SOURCE:20 = 23500
ENDIF

;사라시 장착하고 있는 경우 고통 소스 경감도 사라시 파손
IF TEQUIP:36
    SOURCE:20 -= 200
    TEQUIP:36 = 0
    ITEM:24 = 0
ENDIF
;의상을 장착하고 있는 경우 고통 소스 경감도 앞치마와 학교수영복 파손
IF TEQUIP:59
    SOURCE:20 -= 100
    SIF TEQUIP:59 == 1
        ITEM:44 = 0
    SIF TEQUIP:59 == 2
        ITEM:45 = 0
    TEQUIP:59 = 0
ENDIF

;아이언 메이든에 넣어지는 것은 이상 경험이므로 점을 넣는다
TCVAR:50 += 2

IF TALENT:120 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 2
ELSEIF TALENT:120 && TALENT:PLAYER:남자
    TCVAR:13 += 2
ENDIF

;커맨드 속성：도구(조교자)
SIF TEQUIP:90 == 0
    TFLAG:98 = 1
RETURN 1

