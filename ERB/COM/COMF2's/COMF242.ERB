;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;eraDDS의 것을 베이스로 작성
;기사 패치의 삼각 목마에 「□호스」나 「다랑어 있고의 목마」라는 이름을 붙이는 것도 있는 곳?
@COM242
PRINTL 삼각 목마
COM_NAME = 삼각 목마
CALL TRAIN_MESSAGE_COM242

IF TEQUIP:43
    DOWNBASE:0 += 50
    DOWNBASE:기력 += 80
    TEQUIP:43 = 0
    RETURN 1
ENDIF

;숫처녀라면 처녀를 잃는다
SIF TALENT:처녀 == 1
    TFLAG:1 = 1

DOWNBASE:0 += 70
DOWNBASE:기력 += 100

SOURCE:31 = 3000
SOURCE:32 = 1000

LOCAL:1 = 200

;ABL:마조끼를 본다
;남자의 경우, 아픔 배증
IF TALENT:120
    IF ABL:마조끼 == 0
        TIMES LOCAL:1 , 3.50
    ELSEIF ABL:마조끼 == 1
        TIMES LOCAL:1 , 3.00
        SOURCE:24 = 50
    ELSEIF ABL:마조끼 == 2
        TIMES LOCAL:1 , 2.50
        SOURCE:24 = 150
    ELSEIF ABL:마조끼 == 3
        TIMES LOCAL:1 , 2.00
        SOURCE:24 = 300
    ELSEIF ABL:마조끼 == 4
        TIMES LOCAL:1 , 1.00
        SOURCE:24 = 700
    ELSE
        TIMES LOCAL:1 , 0.60
        SOURCE:24 = 1400
    ENDIF
ELSE
    IF ABL:마조끼 == 0
        TIMES LOCAL:1 , 3.00
    ELSEIF ABL:마조끼 == 1
        TIMES LOCAL:1 , 2.50
        SOURCE:24 = 25
    ELSEIF ABL:마조끼 == 2
        TIMES LOCAL:1 , 2.00
        SOURCE:24 = 100
    ELSEIF ABL:마조끼 == 3
        TIMES LOCAL:1 , 1.00
        SOURCE:24 = 200
    ELSEIF ABL:마조끼 == 4
        TIMES LOCAL:1 , 0.80
        SOURCE:24 = 500
    ELSE
        TIMES LOCAL:1 , 0.60
        SOURCE:24 = 800
    ENDIF
ENDIF

;파과
IF TFLAG:1
    TIMES LOCAL:1 , 2.00

    ;정조관념
    IF TALENT:30
        TIMES SOURCE:31, 15.00
        SOURCE:32 += 10000
    ;정조무구애
    ELSEIF TALENT:31
        TIMES SOURCE:31, 0.50
        SOURCE:32 += 300
    ELSE
        SOURCE:32 += 3000
    ENDIF
ENDIF

;겁쟁이(마조끼 Lv3 이상은 계산에 포함하지 않는다)
IF TALENT:겁쟁이 && ABL:마조끼 < 3
    TIMES LOCAL:1 , 2.00
    TIMES SOURCE:32, 0.50
ENDIF

;아픔에 약하다
IF TALENT:40
    IF ABL:마조끼 > 2
        TIMES LOCAL:1 , 1.20
        TIMES SOURCE:32, 0.30
    ELSE
        TIMES LOCAL:1 , 2.00
        TIMES SOURCE:32, 0.50
    ENDIF
;아픔에 강하다
ELSEIF TALENT:41
    TIMES LOCAL:1 , 0.60
ENDIF

SOURCE:20 += LOCAL:1 * 15

IF TALENT:120
    SOURCE:20 += 3000
    SOURCE:19 = LOCAL:1 * 10
    SOURCE:31 = LOCAL:1 * 10
ELSE
    SOURCE:19 = LOCAL:1 * 5
    SOURCE:31 = LOCAL:1 * 5
ENDIF

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES LOCAL:1 , 0.80
ELSEIF PALAM:13 < PALAMLV:2
    TIMES LOCAL:1 , 0.90
ELSEIF PALAM:13 < PALAMLV:3
    TIMES LOCAL:1 , 1.00
ELSEIF PALAM:13 < PALAMLV:4
    TIMES LOCAL:1 , 1.10
ELSE
    TIMES LOCAL:1 , 1.20
ENDIF

SOURCE:22 += LOCAL:1

IF TALENT:120 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:120 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF
;SM교육 경험 플래그
SIF ASSIPLAY
    TFLAG:55 = 3

;커맨드 속성：도구(조교자)
SIF TEQUIP:90 == 0
    TFLAG:98 = 1

TEQUIP:43 = 1
;촉수 경험 플래그
TFLAG:90 = 0
RETURN 1

