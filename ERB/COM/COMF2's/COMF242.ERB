IF TALENT:120
    SOURCE:20 += 2000
    SOURCE:10 += 3000
    SOURCE:19 += LOCAL * 10
    SOURCE:31 += LOCAL * 10
ELSE
    SOURCE:10 += 2000
    SOURCE:19 += LOCAL * 5
    SOURCE:31 += LOCAL * 5
ENDIF

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES LOCAL , 0.80
ELSEIF PALAM:13 < PALAMLV:2
    TIMES LOCAL , 0.90
ELSEIF PALAM:13 < PALAMLV:3
    TIMES LOCAL , 1.00
ELSEIF PALAM:13 < PALAMLV:4
    TIMES LOCAL , 1.10
ELSE
    TIMES LOCAL , 1.20
ENDIF

SOURCE:22 += LOCAL

TIMES SOURCE:0 , 2.00
SIF TALENT:120 == 0
    TIMES SOURCE:1 , 2.00
TIMES SOURCE:2 , 2.00

IF TALENT:120 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:120 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF

RETURN 1

