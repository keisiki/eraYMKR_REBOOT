;-------------------------------------------------
DOWNBASE:0 += 0
DOWNBASE:1 += 30

SOURCE:18 = 500

;ABL:욕정을 본다
IF ABL:욕망 == 0
    TIMES SOURCE:18 , 0.25
ELSEIF ABL:욕망 == 1
    TIMES SOURCE:18 , 0.50
ELSEIF ABL:욕망 == 2
    TIMES SOURCE:18 , 0.75
ELSEIF ABL:욕망 == 3
    TIMES SOURCE:18 , 1.00
ELSEIF ABL:욕망 == 4
    TIMES SOURCE:18 , 1.25
ELSE
    TIMES SOURCE:18 , 1.50
ENDIF

;ABL:정액 중독을 본다
IF ABL:정액중독 == 0
    TIMES SOURCE:18 , 0.10
ELSEIF ABL:정액중독 == 1
    TIMES SOURCE:18 , 0.40
ELSEIF ABL:정액중독 == 2
    TIMES SOURCE:18 , 0.70
ELSEIF ABL:정액중독 == 3
    TIMES SOURCE:18 , 1.00
ELSEIF ABL:정액중독 == 4
    TIMES SOURCE:18 , 1.30
ELSE
    TIMES SOURCE:18 , 1.60
ENDIF

;조수의 입에 정액 더러움
STAIN:ASSI:0 |= 4

;콘돔의 정액을 초기화
