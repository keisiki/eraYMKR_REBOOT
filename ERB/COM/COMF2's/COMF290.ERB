;=============================================================================
;콘돔
;=============================================================================
;………………………………………………
;실행 판정
;………………………………………………
@COM_ABLE290
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:290 > 0
    RETURN 0
;조교자奉仕 · ウフフ系커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 2048) == 0
    RETURN 0
;コンドームを持っているか, 아이템なし設定でないとダメ
SIF ITEM:78 == 0 && NOITEM == 0
    RETURN 0
;조교자와 奴隷の少なくとも一方がオトコか후타나리でないとだめ
SIF EXIST_PENIS(PLAYER) == 0 && EXIST_PENIS(TARGET) == 0
    RETURN 0
;奴隷だけが棒を持っている場合
IF EXIST_PENIS(PLAYER) == 0 && EXIST_PENIS(TARGET)
    ;승마 중에는 불가
    SIF TEQUIP:43
        RETURN 0
    ;나체정식 중에는 불가
    SIF TEQUIP:60
        RETURN 0
    ;한증탕과 암반욕 외의 ○○ 욕탕 입욕 중에는 불가
    SIF TEQUIP:55 && TEQUIP:55 != 12 && TEQUIP:55 != 15
        RETURN 0
    ;기저귀 플레이 중에는 불가
    SIF TEQUIP:58
        RETURN 0
    ;훈도시 착용 중일 경우는 안 됨
    SIF TEQUIP:59 == 17
        RETURN 0
ENDIF
;조교자だけが棒を持っている場合
IF EXIST_PENIS(TARGET) == 0 && EXIST_PENIS(PLAYER)
    ;조수가 훈도시 착용 중일 경우에는 불가
    SIF ASSI >= 0 && ASSIPLAY && TEQUIP:ASSI:59 == 17
        RETURN 0
ENDIF
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
@COM290
PRINTL 콘돔
COM_NAME = 콘돔

TFLAG:99 = -1
LOCAL = 0
;대상이 봉을 가지고 있다
IF TALENT:남자 || TALENT:후타나리
    ;승마중, 나체정식안, 한증과 암반 욕 이외의 특수 목욕탕 입욕중, 옴트프레이중, 곤착용중을 제외
    SIF TEQUIP:43 == 0 && TEQUIP:60 == 0 && (TEQUIP:55 == 0 || TEQUIP:55 == 12 || TEQUIP:55 == 15) && TEQUIP:58 == 0 && TEQUIP:59 != 17
        LOCAL |= 1
ENDIF
;조교자가 봉을 가지고 있다
IF EXIST_PENIS(PLAYER)
    ;조수 조교중이 아니면 OK
    IF ASSIPLAY == 0
        LOCAL |= 2
    ;조수가 곤착용중이라면 제외
    ELSEIF ASSI >= 0 && ASSIPLAY && TEQUIP:PLAYER:59 != 17
        LOCAL |= 2
    ENDIF
ENDIF

;이러한 것은 없을 것이지만…
IF LOCAL == 0
    PRINTL 콘돔을 장착할 수 있는 사람이 없다.
    PRINTW 그러므로 아무것도 하지 않았다….
    RETURN 1
;대상과 조교자의 양쪽 모두를 장착할 수 있는 경우
ELSEIF LOCAL & 1 && LOCAL & 2
    PRINTL 콘돔의 탈착을 실시합니다.
    PRINTL 누구에게 콘돔을 끼웁니까?
    PRINTL (이미 장착하고 있는 대상을 선택했을 경우, 콘돔을 벗깁니다) 
    PRINT [0] 「조교자」 
    IF TEQUIP:PLAYER:31
        PRINTL (장착이 끝난 상태)
    ELSE
        PRINTL (미 장착)
    ENDIF
    PRINT [1] 「노예」 
    IF TEQUIP:31
        PRINTL (장착이 끝난 상태)
    ELSE
        PRINTL (미 장착)
    ENDIF

    $INPUT_LOOP
    INPUT
    IF RESULT == 0
        TFLAG:99 = 0
        CALL TRAIN_MESSAGE_COM290
        IF TEQUIP:PLAYER:31
            TEQUIP:PLAYER:31 = 0
        ELSE
            SIF NOITEM == 0
                CALL ITEM_CONSUME_COM290
            TEQUIP:PLAYER:31 = 1
        ENDIF
    ELSEIF RESULT == 1
        TFLAG:99 = 1
        CALL TRAIN_MESSAGE_COM290
        IF TEQUIP:31
            TEQUIP:31 = 0
        ELSE
            SIF NOITEM == 0
                CALL ITEM_CONSUME_COM290
            TEQUIP:31 = 1
        ENDIF
    ELSE
        GOTO INPUT_LOOP
    ENDIF
ELSE
    TFLAG:99 = 2
    CALL TRAIN_MESSAGE_COM290
    ;조교자만 장착 가능
    IF LOCAL & 2
        IF TEQUIP:PLAYER:31
            TEQUIP:PLAYER:31 = 0
        ELSE
            SIF NOITEM == 0
                CALL ITEM_CONSUME_COM290
            TEQUIP:PLAYER:31 = 1
        ENDIF
    ;대상만 장착 가능
    ELSE
        IF TEQUIP:31
            TEQUIP:31 = 0
        ELSE
            SIF NOITEM == 0
                CALL ITEM_CONSUME_COM290
            TEQUIP:31 = 1
        ENDIF
    ENDIF
ENDIF

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
DOWNBASE:0 += 0
DOWNBASE:기력 += 10

;조교 대상이 수면중 혹은 실신중의 경우는 소스 추가 없음.
SIF EQUIP:14 || TFLAG:899 > 0
    RETURN 1

;조교 대상이 처녀
IF TALENT:처녀 == 1
    SOURCE:11 = 10
    SOURCE:10 = 10
    SOURCE:18 = 20
ELSE
    SOURCE:11 = 10
    SOURCE:22 = 20
ENDIF

;정조관념
SIF TALENT:정조관념
    TIMES SOURCE:11 , 1.50

RETURN 1

;--------------------------------------------------
;콘돔 소비·보충 처리
;--------------------------------------------------
@ITEM_CONSUME_COM290
ITEM:78 -= 1
SIF FLAG:아이템확장 & 16 && MONEY:0 >= ITEMPRICE:78
    CALL FILL_PLURAL_ITEM, 78

;--------------------------------------------------
;조교시 메시지
;--------------------------------------------------
@TRAIN_MESSAGE_COM290
CALL KOJO_TRAIN_MESSAGE_COM
SIF FLAG:조교시텍스트표시 == 0 || CFLAG:지문소거판정 == 1 || RESULT != 0
    RETURN 0

SELECTCASE TFLAG:99
    CASE 0
        PRINTL
        IF TEQUIP:PLAYER:31
            PRINTFORMW %조사선택(CALLNAME:PLAYER, "는")% 스스로 콘돔을 벗겼다.
        ELSE
            ;수면중, 실신, 재갈, 눈 가림, 긴박, 때 멈추어 반발 Lv2 이상의 머지않아도 아니어서 순종 3이상의 경우
            IF ABL:순종 >= 3 && EQUIP:14 == 0 && TFLAG:899 <= 0 && TEQUIP:42 == 0 && TEQUIP:41 == 0 && TEQUIP:40 == 0 && TEQUIP:71 == 0 && MARK:반발각인 < 2
                PRINTFORMW %조사선택(CALLNAME:TARGET, "는")% 콘돔을 물고, 입을 사용해 %CALLNAME:PLAYER%의 페니스에 상냥하게 씌웠다….
            ELSE
                PRINTFORMW %조사선택(CALLNAME:PLAYER, "는")% 자신의 페니스에 콘돔을 씌웠다….
            ENDIF
        ENDIF
    CASE 1
        PRINTL
        IF TEQUIP:31
            PRINTFORMW %조사선택(CALLNAME:PLAYER, "는")% %CALLNAME:TARGET%의 콘돔을 벗겼다.
        ELSE
            PRINTFORMW %조사선택(CALLNAME:PLAYER, "는")% %CALLNAME:TARGET%의 페니스에 콘돔을 씌웠다….
        ENDIF
    CASE 2
        PRINTL
        IF EXIST_PENIS(PLAYER)
            IF TEQUIP:PLAYER:31
                PRINTFORMW %조사선택(CALLNAME:PLAYER, "는")% 스스로 콘돔을 벗겼다.
            ELSE
                ;수면중, 실신, 재갈, 눈 가림, 긴박, 때 멈추어 반발 Lv2 이상의 머지않아도 아니어서 순종 3이상의 경우
                IF ABL:순종 >= 3 && EQUIP:14 == 0 && TFLAG:899 <= 0 && TEQUIP:42 == 0 && TEQUIP:41 == 0 && TEQUIP:40 == 0 && TEQUIP:71 == 0 && MARK:반발각인 < 2
                    PRINTFORMW %조사선택(CALLNAME:TARGET, "는")% 콘돔을 물고, 입을 사용해 %CALLNAME:PLAYER%의 페니스에 상냥하게 씌웠다….
                ELSE
                    PRINTFORMW %조사선택(CALLNAME:PLAYER, "는")% 자신의 페니스에 콘돔을 씌웠다….
                ENDIF
            ENDIF
        ELSE
            IF TEQUIP:31
                PRINTFORMW %조사선택(CALLNAME:PLAYER, "는")% %CALLNAME:TARGET%의 콘돔을 벗겼다.
            ELSE
                PRINTFORM %조사선택(CALLNAME:PLAYER, "는")% 
                SIF ASSIPLAY && ABL:순종 >= 3
                    PRINTFORM 콘돔을 물고, 입을 사용해 
                PRINTFORMW %CALLNAME:TARGET%의 페니스에 콘돔을 씌웠다….
            ENDIF
        ENDIF
ENDSELECT
