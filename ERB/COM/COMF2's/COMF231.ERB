@COM231
PRINTL 피스트퍽
COM_NAME = 피스트퍽
CALL TRAIN_MESSAGE_COM231

;V경험을 수반하는 커맨드의 플래그(처녀막 재생 대응)
TFLAG:1 = 1

;-------------------------------------------------
;소스의 계산
;-------------------------------------------------
DOWNBASE:0 += 600
DOWNBASE:기력 += 300

SOURCE:20 = 1200
SOURCE:12 = 1200
SOURCE:22 = 1200
SOURCE:31 = 1200
SOURCE:17 = 1200

;ABL:V감각을 본다
IF ABL:V감각 == 0
    SOURCE:1 = 2000
ELSEIF ABL:V감각 == 1
    SOURCE:1 = 2500
ELSEIF ABL:V감각 == 2
    SOURCE:1 = 3000
ELSEIF ABL:V감각 == 3
    SOURCE:1 = 3300
ELSEIF ABL:V감각 == 4
    SOURCE:1 = 3600
ELSE
    SOURCE:1 = 3800
ENDIF

;EXP:V경험을 본다
IF EXP:V경험 < EXPLV:1
    TIMES SOURCE:1 , 0.20
    SOURCE:20 += 20000
    SOURCE:18 += 2000
    SIF TALENT:PLAYER:120 == 0
        TCVAR:50 += 1
ELSEIF EXP:V경험 < EXPLV:2
    TIMES SOURCE:1 , 0.60
    SOURCE:20 += 300
ELSEIF EXP:V경험 < EXPLV:3
    TIMES SOURCE:1 , 1.00
    SOURCE:20 += 50
ELSEIF EXP:V경험 < EXPLV:4
    TIMES SOURCE:1 , 1.20
    SOURCE:20 += 10
ELSEIF EXP:V경험 < EXPLV:5
    TIMES SOURCE:1 , 1.40
    SOURCE:20 += 0
ELSE
    TIMES SOURCE:1 , 1.60
    SOURCE:20 += 0
ENDIF

;[작은체형]
SIF TALENT:128
    TIMES SOURCE:20 , 2.00

SIF EXP:V확장경험 == 0
    TCVAR:50 += 1

TCVAR:0 += 25
TCVAR:32 += 1

SIF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
    TCVAR:12 += 1

RETURN 1

