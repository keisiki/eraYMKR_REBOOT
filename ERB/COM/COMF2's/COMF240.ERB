@COM_ABLE240
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:240 > 0
    RETURN 0
;고문계, 정신조작계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 16) == 0
    RETURN 0
;이상계 조교 필터가 오프되어 있지 않으면 불가
SIF FLAG:VA이상조교필터 & 4
    RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
    RETURN 0
;순종5미만의 ASSI일 경우, 実行できない(새드 · 狂気 · 망신 · 복종のどれかがあればＯＫ)
IF ASSIPLAY
    SIF ABL:ASSI:순종 < 5 && TALENT:ASSI:새드 == 0 && TALENT:ASSI:광기 == 0 && TALENT:ASSI:망신 == 0 && TALENT:ASSI:복종 == 0
        RETURN 0
ENDIF
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;배빵을 베이스로 작성
;말용으로 TFLAG:201을 사용. (0=통상, 1=역류, 2=흘려, 3=배설물 역류, 4=계란 역류, 5=기절)
@COM240
PRINTL 발로 밟기
COM_NAME = 발로 밟기
TFLAG:201 = 0

;실제로는 고통이 있기 (위해)때문에 좀 더 체력 기력을 갖고 있고 쉰다
;임신, 포란중, 회란이라면 소모는 보다 격렬해진다
DOWNBASE:0 += (TALENT:임신 || TALENT:포란중 || TALENT:회란) ?  110 # 80
DOWNBASE:기력 += (TALENT:임신 || TALENT:포란중 || TALENT:회란) ?  80 # 60

SOURCE:31 = 800

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
    SOURCE:20 = 600
ELSEIF PALAM:16 < PALAMLV:2
    SOURCE:20 = 1000
ELSEIF PALAM:16 < PALAMLV:3
    SOURCE:20 = 1600
ELSEIF PALAM:16 < PALAMLV:4
    SOURCE:20 = 2400
ELSE
    SOURCE:20 = 3600
ENDIF

;임신, 포란중, 회란이라면 고통은 보다 커진다
SIF TALENT:임신 || TALENT:포란중 || TALENT:회란
    TIMES SOURCE:20 , 1.80

;PALAM:공포를 본다
IF PALAM:17 < PALAMLV:1
    SOURCE:31 += 600
ELSEIF PALAM:17 < PALAMLV:2
    SOURCE:31 += 900
ELSEIF PALAM:17 < PALAMLV:3
    SOURCE:31 += 1300
ELSEIF PALAM:17 < PALAMLV:4
    SOURCE:31 += 1800
ELSEIF PALAM:17 >= PALAMLV:4
    SOURCE:31 += 2400
ENDIF

;마조나 왕M소유에는 오히려 포상
SIF TALENT:초M
    SOURCE:18 = 600
SIF TALENT:마조
    SOURCE:18 = 300

;조교자가 새드이나 왕S소유라면 파괴력증
IF TALENT:PLAYER:초S
    SOURCE:20 += 300
    SOURCE:31 += 100
ELSEIF TALENT:PLAYER:새드
    SOURCE:20 += 150
    SOURCE:31 += 50
ENDIF

CALL TRAIN_MESSAGE_COM240

TFLAG:198 = 0
;미약등의 약을 사용하고 있으면(자) 역류
IF TEQUIP:11 == 1 || TEQUIP:18
    TFLAG:201 = 1
    TFLAG:198 |= 1
ENDIF
;이뇨제를 사용하고 있으면(자) 흘려
IF TEQUIP:12
    TCVAR:6 += 1
    BASE:뇨의 = 0
    TFLAG:32 = 1
    TFLAG:201 = 2
    TFLAG:198 |= 2
ENDIF
;배설물 역류
IF TEQUIP:25 == 7
    TEQUIP:25 = 0
    TCVAR:1 += 5
    IF TFLAG:172 > 20
        LOCAL = 5
    ELSEIF TFLAG:172 > 10
        LOCAL = 3
    ELSEIF TFLAG:172 > 5
        LOCAL = 2
    ELSE
        LOCAL = 1
    ENDIF
    IF FLAG:조교모드 & 256
        TCVAR:7 += 0
    ELSE
        TCVAR:7 += LOCAL
    ENDIF
    TFLAG:172 = 0
    TFLAG:140 |= 256
    TFLAG:201 = 3
    TFLAG:198 |= 4
ENDIF
;계란 역류
IF TEQUIP:93
    TEQUIP:93 = 0
    TFLAG:201 = 4
    TFLAG:198 |= 8
ENDIF
;나머지 체력이 적으면 기절
;(일단 체력을 500에 고정, 후에 DOWNBASE:0으로 한층 더 줄여지게 되므로 확실히 조교 종료가 된다)
IF BASE:0 < 600
    TFLAG:201 = 5
    TFLAG:198 |= 16
    BASE:0 = 500
    DOWNBASE:기력 += 1200
ENDIF

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 2
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 2
ENDIF

;관장에 의한 배설 첫체험은 이상 경험＋1
IF TFLAG:198 & 4 && (CFLAG:첫시츄에이션 & 2) == 0
    TCVAR:50 += 1
    CFLAG:첫시츄에이션 |= 2
ENDIF
;기절할 정도로 짓밟고 되는 것도 이상이라고 할 수 있으므로 이상 경험＋1
IF TFLAG:198 & 16 && (CFLAG:첫가학 & 2) == 0
    TCVAR:50 += 1
    CFLAG:첫가학 |= 2
ENDIF
RETURN 1

