@COM_ABLE234
;개별 설정 커맨드 필터
SIF DITEMTYPE:999:234 > 0
    RETURN 0
;고문계, 정신조작계 커맨드를 유효로 하지 않으면 불가
SIF (FLAG:커맨드확장 & 16) == 0
    RETURN 0
;Ｖ조교 필터가 오프되어 있지 않으면 불가
SIF FLAG:VA이상조교필터 & 1
    RETURN 0
;처녀には使えない
SIF TALENT:처녀
    RETURN 0
;조교자가 [소인]であることが前提
SIF TALENT:PLAYER:소인 == 0
    RETURN 0
;남자라면 안 됨
SIF TALENT:남자
    RETURN 0
;조교 대상이 [소인]일 경우에는 ダメ
SIF TALENT:소인
    RETURN 0
;主人調教の場合, 순종이 3미만かつ屈服刻印が1미만이면 불가
SIF PLAYER == MASTER && ABL:순종 < 3 && MARK:약물각인 < 1
    RETURN 0
;ASSI일 경우, 순종4이상または새드かつ조교 대상も순종4이상じゃないとできない。
IF ASSIPLAY
    SIF ABL:ASSI:순종 < 4 && (TALENT:ASSI:새드 == 0 && ABL:순종 < 4)
    RETURN 0
ENDIF
;[작은체형]なら순종이 4이상かつ마조끼が4이상じゃないと実行できない
IF TALENT:작은체형
    SIF ABL:순종 < 4 || ABL:마조끼 < 4
        RETURN 0
ENDIF
;妊娠中のときはダイビング系は連続で使えない
SIF TALENT:임신 && (PREVCOM == 234 || PREVCOM == 235)
    RETURN 0
;일정의 V경험とV확장경험이 필요([巨躯]の場合は軽減)
IF TALENT:거구
    LOCAL = 75
    LOCAL:1 = 10
ELSE
    LOCAL = 150
    LOCAL:1 = 20
ENDIF
SIF EXP:V경험 < LOCAL || EXP:V확장경험 < LOCAL:1
    RETURN 0
;潤滑不足の場合は不可能
SIF PALAM:10 < PALAMLV:5
    RETURN 0
;조교 대상の체력이 1500미만または기력이 500미만이면 불가
SIF BASE:0 < 1500 || BASE:기력 < 500
    RETURN 0
;조교자의 체력이 500미만または기력이 250미만이면 불가
SIF BASE:PLAYER:체력 < 500 || BASE:PLAYER:기력 < 250
    RETURN 0
;Ｖ계 장착구 사용 중에는 불가
SIF TEQUIP:20 || TEQUIP:21
    RETURN 0
;승마 중에는 불가
SIF TEQUIP:43
    RETURN 0
;욕실 플레이 중에는 플레이 매트가 없으면 불가
SIF TEQUIP:53 && ITEM:42 == 0 && NOITEM == 0
    RETURN 0
;샤워 중에는 불가
SIF TEQUIP:54
    RETURN 0
;○○목욕탕 입욕 중에는 불가
SIF TEQUIP:55
    RETURN 0
;기저귀 플레이 중에는 불가
SIF TEQUIP:58
    RETURN 0
;알몸 앞치마, 학교수영복 플레이, 코스프레 중에는 불가
SIF TEQUIP:59
    RETURN 0
;나체정식 중에는 불가
SIF TEQUIP:60
    RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
    RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;피스트 성교를 기본으로 작성
@COM234
IF NO:PLAYER == 10
    COM_NAME = 보지 크레이들
ELSEIF PREVCOM == 234
    COM_NAME = 동굴탐험
ELSE
    COM_NAME = 보지 다이빙
ENDIF
IF NO:PLAYER == 23
    COM_NAME = 스이카의 %COM_NAME%
ELSEIF NO:PLAYER == 88
    COM_NAME = 샹하이의 %COM_NAME%
ELSEIF NO:PLAYER == 89
    COM_NAME = 호라이의 %COM_NAME%
ENDIF
PRINTFORML %COM_NAME%
CALL TRAIN_MESSAGE_COM234

;V경험을 수반하는 커맨드의 플래그(처녀막 재생 대응)
TFLAG:1 = 1

DOWNBASE:0 += 800
DOWNBASE:기력 += 400

SOURCE:12 = 1200
SOURCE:17 = 1200
SOURCE:20 = 3500
SOURCE:22 = 1200
SOURCE:31 = 10000

;ABL:V감각을 본다
IF ABL:V감각 == 0
    SOURCE:1 = 2000
ELSEIF ABL:V감각 == 1
    SOURCE:1 = 2500
ELSEIF ABL:V감각 == 2
    SOURCE:1 = 3000
ELSEIF ABL:V감각 == 3
    SOURCE:1 = 3300
ELSEIF ABL:V감각 == 4
    SOURCE:1 = 3600
ELSE
    SOURCE:1 = 3800
ENDIF

;[작은체형]
SIF TALENT:작은체형
    TIMES SOURCE:20 , 2.00

IF TALENT:남자 == 0 && TALENT:PLAYER:남자 == 0
    TCVAR:12 += 1
ELSEIF TALENT:남자 && TALENT:PLAYER:남자
    TCVAR:13 += 1
ENDIF

;연속으로 사용했을 경우
IF PREVCOM == 234
    DOWNBASE:0 += 200
    DOWNBASE:기력 += 100
    TIMES SOURCE:1 , 1.30
    TIMES SOURCE:20 , 2.00
    TIMES SOURCE:22 , 2.00
    TIMES SOURCE:31 , 3.00
ENDIF

TCVAR:0 += 25
TCVAR:32 += 3

SIF PREVCOM == 234 && TFLAG:134 == NO:PLAYER
    BASE:기력 /= 2

TFLAG:134 = NO:PLAYER
BASE:PLAYER:체력 -= 400
BASE:PLAYER:기력 -= 200

;노예의 V⇔조교자의 몸의 불결이 이동
STAIN:PLAYER:입 |= STAIN:보지
STAIN:PLAYER:손 |= STAIN:보지
STAIN:PLAYER:가슴 |= STAIN:보지
STAIN:보지 |= STAIN:PLAYER:입
STAIN:보지 |= STAIN:PLAYER:손
STAIN:보지 |= STAIN:PLAYER:가슴

RETURN 1

