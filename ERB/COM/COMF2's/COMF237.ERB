@EQUIP_COM237
PRINTL <빨래집게(코)>

DOWNBASE:0 += 55
DOWNBASE:기력 += 60

LOCAL = 1400

;ABL:마조끼를 본다
IF ABL:마조끼 == 0
    LOCAL:1 = 0
ELSEIF ABL:마조끼 == 1
    LOCAL:1 = 120
ELSEIF ABL:마조끼 == 2
    LOCAL:1 = 240
ELSEIF ABL:마조끼 == 3
    LOCAL:1 = 480
ELSEIF ABL:마조끼 == 4
    LOCAL:1 = 960
ELSE
    LOCAL:1 = 1920
ENDIF

;PALAM:욕정을 본다
IF PALAM:13 < PALAMLV:1
    TIMES LOCAL , 1.40
    TIMES LOCAL:1 , 0.70
ELSEIF PALAM:13 < PALAMLV:2
    TIMES LOCAL , 1.10
    TIMES LOCAL:1 , 0.90
ELSEIF PALAM:13 < PALAMLV:3
    TIMES LOCAL , 1.00
    TIMES LOCAL:1 , 1.00
ELSEIF PALAM:13 < PALAMLV:4
    TIMES LOCAL , 0.90
    TIMES LOCAL:1 , 1.10
ELSE
    TIMES LOCAL , 0.70
    TIMES LOCAL:1 , 1.40
ENDIF

;도착적
IF TALENT:80
    TIMES LOCAL , 0.80
    TIMES LOCAL:1 , 1.50
ENDIF
;마조
SIF TALENT:82
    TIMES LOCAL:1 , 1.20
;왕M
SIF TALENT:178
    TIMES LOCAL:1 , 1.50

SOURCE:18 += LOCAL:1
SOURCE:20 += LOCAL
SOURCE:22 += (LOCAL + LOCAL:1)/2
SOURCE:31 += LOCAL + LOCAL:1

RETURN 1

