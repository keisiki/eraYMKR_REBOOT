REPEAT CHARANUM
    MARK:COUNT:98 = 0
    ;主人は除外
    SIF COUNT == MASTER
        CONTINUE
    ;失踪中などこの場にいないなら除外
    SIF CFLAG:COUNT:4 == 1
        CONTINUE

