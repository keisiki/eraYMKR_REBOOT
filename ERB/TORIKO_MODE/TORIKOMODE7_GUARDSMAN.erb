    ;감시
    LOCAL:6 = 0
ELSEIF ARG == 3
    ;전투
    LOCAL:6 = 1
ENDIF
;완성된 값을 더한다.
RESULT = LOCAL:0*10000000000000000  + LOCAL:1*100000000000000 + LOCAL:2 *100000000000 + LOCAL:3 *1000000000 + LOCAL:4*100000 + LOCAL:5*10 + LOCAL:6
