;=============================================================================
;마조끼
;=============================================================================
@ABLUP21
DRAWLINE
SIF ABL:마조끼 >= 5
    JUMP ABLUP_MAX

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[解放]、[マゾ]なら無視できる）
SIF COST21(5)
    PRINTFORM %EXPNAME:50% {COST21(5)} 이상, 그리고 
;欲望がマゾっ気＋１レベルでないといけない
PRINTFORML %ABLNAME:11% {ABL:마조끼 + 1}LV 이상, 그리고 

PRINTFORM [0] - %PALAMNAME:16%의 구슬×{COST21(0)}, %PALAMNAME:14%의 구슬×{COST21(1)}
SIF COST21(4) > 0
    PRINTFORM , %EXPNAME:30% {COST21(4)} 이상
PRINTFORM , %EXPNAME:2% 1 이상……
CALL SHOW_ISABLUP_COMMON, CAN21(0)

IF COST21(2) > 0
    PRINTFORM [1] - %PALAMNAME:16%의 구슬×{COST21(2)}, %PALAMNAME:13%의 구슬×{COST21(3)}
    SIF COST21(4) > 0
        PRINTFORM , %EXPNAME:30% {COST21(4)} 이상
    PRINT ……
    CALL SHOW_ISABLUP_COMMON, CAN21(1)
ENDIF

PRINTL [100] - 돌아간다
$INPUT_LOOP
INPUT
IF RESULT == 100
    RETURN 0
ELSEIF (RESULT == 0 || RESULT == 1) && CAN21(RESULT) != 0
    PRINTL 조건을 만족하고 있지 않습니다.
    RESTART
ELSEIF RESULT == 0
    JUEL:16 -= COST21(0)
    JUEL:14 -= COST21(1)
ELSEIF RESULT == 1
    JUEL:16 -= COST21(2)
    JUEL:13 -= COST21(3)
ELSE
    GOTO INPUT_LOOP
ENDIF

ABL:마조끼 += 1
PRINTFORMW %ABLNAME:21%의 레벨이 %조사처리(TOSTR(ABL:마조끼),"가")% 되었습니다.

@AUTO_ABLUP21
#LOCALSIZE 1
#LOCALSSIZE 1
IF CAN21(1) == 0
    JUEL:16 -= COST21(2)
    JUEL:13 -= COST21(3)
ELSEIF CAN21(0) == 0
    JUEL:16 -= COST21(0)
    JUEL:14 -= COST21(1)
ELSE
    RETURN 0
ENDIF

ABL:마조끼 += 1
RETURN 1

;--------------------------------------------------
;レベルアップに必要な珠計算、レベルアップ予告処理
;--------------------------------------------------
@ISABLUP21
SIF ABL:마조끼 >= 5
    RETURN 0

CALLF CALC_COST21, "CALC"

;条件別にＯＫかダメかを記録する
RETURN CAN_ABLUP21("CHECK")

@COST21(ARG)
#FUNCTION
RETURNF CALC_COST21("GET", ARG)

@CALC_COST21(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
    RETURNF LOCAL:ARG
;必要な条件の算出
VARSET LOCAL, 0

IF ABL:마조끼 == 0
    LOCAL:0 = 100
    LOCAL:1 = 100
    LOCAL:2 = 100
    LOCAL:3 = 100
    LOCAL:4 = 0
ELSEIF ABL:마조끼 == 1
    LOCAL:0 = 500
    LOCAL:2 = 500
    LOCAL:1 = 300
    LOCAL:3 = 500
    LOCAL:4 = 1
ELSEIF ABL:마조끼 == 2
    LOCAL:0 = 1500
    LOCAL:1 = 1000
    LOCAL:2 = 1200
    LOCAL:3 = 1000
    LOCAL:4 = 10
ELSEIF ABL:마조끼 == 3
    LOCAL:0 = 3000
    LOCAL:1 = 6000
    LOCAL:2 = 0
    LOCAL:3 = 0
    LOCAL:4 = 50
    ;一線越えない
    IF TALENT:일선을넘지않음
        LOCAL:0 *= 2
        LOCAL:1 *= 2
        LOCAL:4 *= 2
    ENDIF
ELSEIF ABL:마조끼 == 4
    LOCAL:0 = 5000
    LOCAL:1 = 12000
    LOCAL:2 = 0
    LOCAL:3 = 0
    LOCAL:4 = 100
    ;一線越えない
    IF TALENT:일선을넘지않음
        LOCAL:0 *= 3
        LOCAL:1 *= 3
        LOCAL:4 *= 3
    ENDIF
ENDIF

;サドであればあげ難い
IF ABL:새드끼 >= 5
    TIMES LOCAL:0 , 5.00
    TIMES LOCAL:1 , 5.00
    TIMES LOCAL:2 , 5.00
    TIMES LOCAL:3 , 5.00
    TIMES LOCAL:4 , 5.00
ELSEIF ABL:새드끼 == 4
    TIMES LOCAL:0 , 4.00
    TIMES LOCAL:1 , 4.00
    TIMES LOCAL:2 , 4.00
    TIMES LOCAL:3 , 4.00
    TIMES LOCAL:4 , 4.00
ELSEIF ABL:새드끼 == 3
    TIMES LOCAL:0 , 3.00
    TIMES LOCAL:1 , 3.00
    TIMES LOCAL:2 , 3.00
    TIMES LOCAL:3 , 3.00
    TIMES LOCAL:4 , 3.00
ELSEIF ABL:새드끼 == 2
    TIMES LOCAL:0 , 2.00
    TIMES LOCAL:1 , 2.00
    TIMES LOCAL:2 , 2.00
    TIMES LOCAL:3 , 2.00
    TIMES LOCAL:4 , 2.00
ELSEIF ABL:새드끼 == 1
    TIMES LOCAL:0 , 1.50
    TIMES LOCAL:1 , 1.50
    TIMES LOCAL:2 , 1.50
    TIMES LOCAL:3 , 1.50
    TIMES LOCAL:4 , 1.50
ENDIF

;解放
IF TALENT:해방
    TIMES LOCAL:0 , 0.50
    TIMES LOCAL:1 , 0.50
    TIMES LOCAL:2 , 0.50
    TIMES LOCAL:3 , 0.50
    TIMES LOCAL:4 , 0.50
ENDIF
;倒錯的
IF TALENT:80
    TIMES LOCAL:0 , 0.75
    TIMES LOCAL:1 , 0.75
    TIMES LOCAL:2 , 0.75
    TIMES LOCAL:3 , 0.75
    TIMES LOCAL:4 , 0.75
ENDIF
;マゾ
IF TALENT:82
    TIMES LOCAL:0 , 0.50
    TIMES LOCAL:1 , 0.50
    TIMES LOCAL:2 , 0.50
    TIMES LOCAL:3 , 0.50
    TIMES LOCAL:4 , 0.50
ENDIF
;淫乱
IF TALENT:음란
    TIMES LOCAL:0 , 0.80
    TIMES LOCAL:1 , 0.80
    TIMES LOCAL:2 , 0.80
    TIMES LOCAL:3 , 0.80
    TIMES LOCAL:4 , 0.80
ENDIF

;ＬＶ３から４、４から５に上げるときは異常経験必要（素質：[解放]、[マゾ]なら無視できる）
SIF ABL:마조끼 >= 3 && TALENT:해방 == 0 && TALENT:82 == 0
    LOCAL:5 = ABL:마조끼 - 2

RETURNF 0

@CAN21(ARG)
#FUNCTION
RETURNF CAN_ABLUP21("GET", ARG)

@CAN_ABLUP21(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
    RETURNF LOCAL:ARG
VARSET LOCAL, 0
;欲望がマゾっ気＋１レベルでないといけない
IF ABL:욕망 < ABL:마조끼 + 1
    ;欲望が不足
    LOCAL:0 |= 4
    LOCAL:1 |= 4
ENDIF

;異常経験が必要な場合
IF EXP:이상경험 < COST21(5)
    LOCAL:0 |= 2
    LOCAL:1 |= 2
ENDIF

;苦痛快楽経験が必要な場合
IF EXP:고통쾌락경험 < COST21(4)
    LOCAL:0 |= 2
    LOCAL:1 |= 2
ENDIF

;苦痛의 구슬で上げる
SIF JUEL:16 < COST21(0)
    LOCAL:0 |= 1
;屈服의 구슬で上げる
SIF JUEL:14 < COST21(1)
    LOCAL:0 |= 1
;この場合절정経験が1이상必要
SIF EXP:절정경험 < 1
    LOCAL:0 |= 2

IF COST21(2) > 0
    ;苦痛의 구슬で上げる
    SIF JUEL:16 < COST21(2)
        LOCAL:1 |= 1
    ;欲情의 구슬で上げる
    SIF JUEL:13 < COST21(3)
        LOCAL:1 |= 1
ELSE
    LOCAL:1 = 256
ENDIF

RETURNF (LOCAL:0 == 0 || LOCAL:1 == 0)
