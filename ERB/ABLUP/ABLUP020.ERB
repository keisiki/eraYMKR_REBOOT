@ABLUP20
DRAWLINE
SIF ABL:20 >= 5
    JUMP ABLUP_MAX

;ＬＶ３이상に上げるときは異常経験必要（素質：[解放]なら無視できる）
SIF COST20(5)
    PRINTFORM %EXPNAME:50% {COST20(5)} 이상, 그리고 
;欲望がサドっ気＋１レベルでないといけない
PRINTFORML %ABLNAME:11% {ABL:20 + 1}LV 이상, 그리고 

PRINTFORM [0] - %PALAMNAME:32%의 구슬×{COST20(0)}, %PALAMNAME:11%의 구슬×{COST20(1)}
SIF COST20(4) > 0
    PRINTFORM , %EXPNAME:39% {COST20(4)} 이상
PRINT ……
CALL SHOW_ISABLUP_COMMON, CAN20(0)

PRINTFORM [1] - %PALAMNAME:32%의 구슬×{COST20(2)}, %PALAMNAME:13%의 구슬×{COST20(3)}
SIF COST20(4) > 0
    PRINTFORM , %EXPNAME:39% {COST20(4)} 이상
PRINT ……
CALL SHOW_ISABLUP_COMMON, CAN20(1)

PRINTL [100] - 돌아간다
$INPUT_LOOP
INPUT
IF RESULT == 100
    RETURN 0
ELSEIF (RESULT == 0 || RESULT == 1) && CAN20(RESULT) != 0
    PRINTL 조건을 만족하고 있지 않습니다.
    RESTART
ELSEIF RESULT == 0
    JUEL:32 -= COST20(0)
    JUEL:11 -= COST20(1)
ELSEIF RESULT == 1
    JUEL:32 -= COST20(2)
    JUEL:13 -= COST20(3)
ELSE
    GOTO INPUT_LOOP
ENDIF

ABL:20 += 1
PRINTFORMW %ABLNAME:20%의 레벨이 %조사처리(TOSTR(ABL:20),"가")% 되었습니다.

@AUTO_ABLUP20
#LOCALSIZE 1
#LOCALSSIZE 1
IF CAN20(1) == 0
    JUEL:32 -= COST20(2)
    JUEL:13 -= COST20(3)
ELSEIF CAN20(0) == 0
    JUEL:32 -= COST20(0)
    JUEL:11 -= COST20(1)
ELSE
    RETURN 0
ENDIF

ABL:20 += 1
RETURN 1

;--------------------------------------------------
;レベルアップに必要な珠計算、レベルアップ予告処理
;--------------------------------------------------
@ISABLUP20
SIF ABL:20 >= 5
    RETURN 0

CALLF CALC_COST20, "CALC"

;条件別にＯＫかダメかを記録する
RETURN CAN_ABLUP20("CHECK")

@COST20(ARG)
#FUNCTION
RETURNF CALC_COST20("GET", ARG)

@CALC_COST20(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
    RETURNF LOCAL:ARG
;必要な条件の算出
VARSET LOCAL, 0

IF ABL:20 == 0
    LOCAL:0 = 100
    LOCAL:1 = 100
    LOCAL:2 = 100
    LOCAL:3 = 100
    LOCAL:4 = 0
ELSEIF ABL:20 == 1
    LOCAL:0 = 500
    LOCAL:1 = 500
    LOCAL:2 = 500
    LOCAL:3 = 300
    LOCAL:4 = 1
ELSEIF ABL:20 == 2
    LOCAL:0 = 1200
    LOCAL:1 = 1000
    LOCAL:2 = 1500
    LOCAL:3 = 1000
    LOCAL:4 = 10
ELSEIF ABL:20 == 3
    LOCAL:0 = 6000
    LOCAL:1 = 6000
    LOCAL:2 = 3000
    LOCAL:3 = 6000
    LOCAL:4 = 50
    ;一線越えない
    IF TALENT:27
        LOCAL:0 *= 2
        LOCAL:1 *= 2
        LOCAL:2 *= 2
        LOCAL:3 *= 2
        LOCAL:4 *= 2
    ENDIF
ELSEIF ABL:20 == 4
    LOCAL:0 = 10000
    LOCAL:1 = 10000
    LOCAL:2 = 5000
    LOCAL:3 = 12000
    LOCAL:4 = 100
    ;一線越えない
    IF TALENT:27
        LOCAL:0 *= 3
        LOCAL:1 *= 3
        LOCAL:2 *= 3
        LOCAL:3 *= 3
        LOCAL:4 *= 3
    ENDIF
ENDIF

;マゾであればあげ難い
IF ABL:21 >= 5
    TIMES LOCAL:0 , 5.00
    TIMES LOCAL:1 , 5.00
    TIMES LOCAL:2 , 5.00
    TIMES LOCAL:3 , 5.00
    TIMES LOCAL:4 , 5.00
ELSEIF ABL:21 == 4
    TIMES LOCAL:0 , 4.00
    TIMES LOCAL:1 , 4.00
    TIMES LOCAL:2 , 4.00
    TIMES LOCAL:3 , 4.00
    TIMES LOCAL:4 , 4.00
ELSEIF ABL:21 == 3
    TIMES LOCAL:0 , 3.00
    TIMES LOCAL:1 , 3.00
    TIMES LOCAL:2 , 3.00
    TIMES LOCAL:3 , 3.00
    TIMES LOCAL:4 , 3.00
ELSEIF ABL:21 == 2
    TIMES LOCAL:0 , 2.00
    TIMES LOCAL:1 , 2.00
    TIMES LOCAL:2 , 2.00
    TIMES LOCAL:3 , 2.00
    TIMES LOCAL:4 , 2.00
ELSEIF ABL:21 == 1
    TIMES LOCAL:0 , 1.50
    TIMES LOCAL:1 , 1.50
    TIMES LOCAL:2 , 1.50
    TIMES LOCAL:3 , 1.50
    TIMES LOCAL:4 , 1.50
ENDIF

;倒錯的
IF TALENT:80
    TIMES LOCAL:0 , 0.75
    TIMES LOCAL:1 , 0.75
    TIMES LOCAL:2 , 0.75
    TIMES LOCAL:3 , 0.75
    TIMES LOCAL:4 , 0.75
ENDIF
;サド
IF TALENT:81
    TIMES LOCAL:0 , 0.50
    TIMES LOCAL:1 , 0.50
    TIMES LOCAL:2 , 0.50
    TIMES LOCAL:3 , 0.50
    TIMES LOCAL:4 , 0.50
ENDIF
;淫乱
IF TALENT:170
    TIMES LOCAL:0 , 0.80
    TIMES LOCAL:1 , 0.80
    TIMES LOCAL:2 , 0.80
    TIMES LOCAL:3 , 0.80
    TIMES LOCAL:4 , 0.80
ENDIF

;ＬＶ３이상に上げるときは異常経験必要（素質：[解放]なら無視できる）
SIF ABL:20 > 2 && TALENT:해방 == 0
    LOCAL:5 = ABL:20 - 2

RETURNF 0

@CAN20(ARG)
#FUNCTION
RETURNF CAN_ABLUP20("GET", ARG)

@CAN_ABLUP20(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
    RETURNF LOCAL:ARG
VARSET LOCAL, 0
;欲望がサドっ気＋１レベルでないといけない
IF ABL:11 < ABL:20 + 1
    ;欲望が不足
    LOCAL:0 |= 4
    LOCAL:1 |= 4
ENDIF

;異常経験が必要な場合
IF EXP:50 < COST20(5)
    LOCAL:0 |= 2
    LOCAL:1 |= 2
ENDIF

;ＳＭ教育経験が必要なことあり
IF EXP:39 < COST20(4)
    LOCAL:0 |= 2
    LOCAL:1 |= 2
ENDIF

;先導의 구슬で上げる
SIF JUEL:32 < COST20(0)
    LOCAL:0 |= 1
;習得의 구슬で上げる
SIF JUEL:11 < COST20(1)
    LOCAL:0 |= 1

;先導의 구슬で上げる
SIF JUEL:32 < COST20(2)
    LOCAL:1 |= 1
;欲情의 구슬で上げる
SIF JUEL:13 < COST20(3)
    LOCAL:1 |= 1

RETURNF (LOCAL:0 == 0 || LOCAL:1 == 0)
