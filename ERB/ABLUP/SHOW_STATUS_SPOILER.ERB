;============================================================================
;표시용의 범용 함수
;条件に合致している場合とそうでない場合で色を変える
;そもそも表示するかどうかのチェックも含めて統合
;ARGS:0 表示文字列, ARG:0 達成条件, ARG:1 0=通常 1=경험等一度超えると取り返しが付かない物
;
;返り値 達成条件を満たしていれば1, それ以外の場合は0
;表示の時に
;============================================================================
@SPOILER_PRINT_FLAG( ARGS:0, ARG:0, ARG:1=0)
#FUNCTION
;#LOCALSIZE 10

LOCAL:0 = GETCOLOR()
LOCAL:1 = 0xFFFFFF
LOCAL:2 = 0x444444
LOCAL:3 = 0xFFFF00
LOCAL:4 = 0x440000
    
;달성 조건에 따라 색을 바꾼다
IF ARG:0
    ;달성
    SETCOLOR LOCAL:(ARG:1 * 2 + 1)
    LOCAL:9 = 1
ELSE
    ;미달성
    SETCOLOR LOCAL:(ARG:1 * 2 + 2)
    LOCAL:9 = 0
ENDIF
PRINTFORM %ARGS:0% 
SETCOLOR LOCAL:0
RETURNF LOCAL:9

;============================================================================
;매각 조건의 달성 상황 표시
;TALENT에 대상 캐릭터가 설정되어 있는 전제
;============================================================================
@SPOILER_PRINT_SELL
;#LOCALSIZE 5

IF CFLAG:매각가능 < 2
    ;売却条件の表示
    IF CFLAG:매각가능 == 0
        ;基礎条件
        PRINT 판매 기초 조건：
        LOCAL:0 = SPOILER_PRINT_FLAG("순종+욕망 6이상 ", (ABL:순종+ABL:욕망)>=6, 0)
        LOCAL:1 = 1
        IF (TALENT:반항적 || TALENT:꿋꿋함)
            LOCAL:0 = SPOILER_PRINT_FLAG("순종 4이상 ", (ABL:순종>=4), 0) && LOCAL:0
            LOCAL:1 += 1
        ENDIF
        IF (TALENT:자제심 || TALENT:억압 || TALENT:저항)
            LOCAL:0 = SPOILER_PRINT_FLAG("욕망 4이상 ", (ABL:욕망>=4), 0) && LOCAL:0
            LOCAL:1 += 1
        ENDIF
        LOCAL:2 = 0
        LOCAL:2 += SPOILER_PRINT_FLAG("감각 3이상 ",  ABL:C감각 >= 3 || ABL:V감각 >= 3 || ABL:A감각 >= 3 || ABL:B감각 >= 3)

        IF LOCAL:0 && LOCAL:2
            CALLF SPOILER_PRINT_FLAG("(OK)",1)
        ELSE
            CALLF SPOILER_PRINT_FLAG(@"({LOCAL:0+LOCAL:2}/2)",0)
        ENDIF
        
        PRINTL
        ;追加条件
        PRINT 판매 추가 조건：
        LOCAL:3 = 0
        LOCAL:3 += SPOILER_PRINT_FLAG("기교 3이상+봉사정신 3이상 ", ABL:기교 >= 3 && ABL:봉사정신 >= 3)
        LOCAL:3 += SPOILER_PRINT_FLAG("노출 3이상+자위중독 2이상 ",  ABL:노출증 >= 3 && ABL:자위중독 >= 2)
        PRINTL
        PRINT 　　　　　　　  
        LOCAL:3 += SPOILER_PRINT_FLAG("마조끼 3이상 ",  ABL:마조끼 >= 3)
        LOCAL:3 += SPOILER_PRINT_FLAG("감각 합계 13이상 ",  ABL:C감각+ABL:V감각+ABL:A감각+ABL:B감각 >= 13)
        LOCAL:3 += SPOILER_PRINT_FLAG("순종 5이상 or 욕망 5이상 ", ABL:순종 >= 5 || ABL:욕망 >= 5)
        
        IF LOCAL:3
            CALLF SPOILER_PRINT_FLAG("(OK)",1)
        ELSE
            CALLF SPOILER_PRINT_FLAG("(NG)",0)
        ENDIF
        PRINTL
        CALL NEW_DRAWLINE
    ENDIF
ENDIF
RETURN

