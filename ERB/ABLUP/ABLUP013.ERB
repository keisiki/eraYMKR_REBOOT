    PRINTFORM [1] - %PALAMNAME:12%의 구슬×{COST13(1)}
    SIF COST13(3) > 0
        PRINTFORM , %EXPNAME:20% {COST13(3)} 이상
    PRINT ……
    CALL SHOW_ISABLUP_COMMON, CAN13(1)
ENDIF

IF COST13(2) > 0
    PRINTFORM [2] - %PALAMNAME:11%의 구슬×{COST13(2)}, %EXPNAME:2% 1 이상……
    CALL SHOW_ISABLUP_COMMON, CAN13(2)
ENDIF

PRINTL [100] - 돌아간다
$INPUT_LOOP
INPUT
