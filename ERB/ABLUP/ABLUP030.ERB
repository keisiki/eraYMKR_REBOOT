@COST30(ARG)
#FUNCTION
RETURNF CALC_COST30("GET", ARG)

@CALC_COST30(ARGS, ARG)
#FUNCTION
SIF ARGS == "GET"
    RETURNF LOCAL:ARG
;必要な条件の算出
VARSET LOCAL, 0

IF ABL:자위중독 == 0
    LOCAL:0 = 10000
    LOCAL:1 = 10000
    LOCAL:2 = 3000
    LOCAL:3 = 1000
    LOCAL:4 = 100
    LOCAL:5 = 20
ELSEIF ABL:자위중독 == 1
    LOCAL:0 = 25000
    LOCAL:1 = 25000
    LOCAL:2 = 6000
    LOCAL:3 = 3000
    LOCAL:4 = 250
    LOCAL:5 = 40
ELSEIF ABL:자위중독 == 2
    LOCAL:0 = 50000
    LOCAL:1 = 50000
    LOCAL:2 = 12000
    LOCAL:3 = 6000
    LOCAL:4 = 500
    LOCAL:5 = 60
ELSEIF ABL:자위중독 == 3
    LOCAL:0 = 100000
    LOCAL:1 = 100000
    LOCAL:2 = 20000
    LOCAL:3 = 15000
    LOCAL:4 = 1000
    LOCAL:5 = 100
    ;一線越えない
    IF TALENT:일선을넘지않음
        TIMES LOCAL:0 , 2.00
        TIMES LOCAL:1 , 2.00
        TIMES LOCAL:2 , 2.00
        TIMES LOCAL:3 , 2.00
        TIMES LOCAL:4 , 2.00
        TIMES LOCAL:5 , 2.00
    ENDIF
ELSEIF ABL:자위중독 == 4
    LOCAL:0 = 300000
    LOCAL:1 = 300000
    LOCAL:2 = 40000
    LOCAL:3 = 40000
    LOCAL:4 = 2000
    LOCAL:5 = 160
    ;一線越えない
    IF TALENT:일선을넘지않음
        TIMES LOCAL:0 , 3.00
        TIMES LOCAL:1 , 3.00
        TIMES LOCAL:2 , 3.00
        TIMES LOCAL:3 , 3.00
        TIMES LOCAL:4 , 3.00
        TIMES LOCAL:5 , 3.00
    ENDIF
ENDIF

;自慰しやすい
IF TALENT:60
    TIMES LOCAL:0 , 0.25
    TIMES LOCAL:1 , 0.25
    TIMES LOCAL:2 , 0.25
    TIMES LOCAL:3 , 0.25
    TIMES LOCAL:4 , 0.25
ENDIF
;倒錯的
IF TALENT:80
    TIMES LOCAL:0 , 0.75
    TIMES LOCAL:1 , 0.75
    TIMES LOCAL:2 , 0.75
    TIMES LOCAL:3 , 0.75
    TIMES LOCAL:4 , 0.75
ENDIF
;中毒しやすい
IF TALENT:84
    TIMES LOCAL:0 , 0.50
    TIMES LOCAL:1 , 0.50
    TIMES LOCAL:2 , 0.50
    TIMES LOCAL:3 , 0.50
    TIMES LOCAL:4 , 0.50
    TIMES LOCAL:5 , 0.50
;中毒しにくい
ELSEIF TALENT:85
    TIMES LOCAL:0 , 1.50
    TIMES LOCAL:1 , 1.50
    TIMES LOCAL:2 , 1.50
    TIMES LOCAL:3 , 1.50
    TIMES LOCAL:4 , 1.50
    TIMES LOCAL:5 , 1.50
ENDIF
;[中毒扇動]有効
IF TFLAG:995 == 1
    TIMES LOCAL:0 , 0.80
    TIMES LOCAL:1 , 0.80
    TIMES LOCAL:2 , 0.80
    TIMES LOCAL:3 , 0.80
    TIMES LOCAL:4 , 0.80
    TIMES LOCAL:5 , 0.80
ENDIF
;淫乱
IF TALENT:음란
    TIMES LOCAL:0 , 0.50
    TIMES LOCAL:1 , 0.50
    TIMES LOCAL:2 , 0.50
    TIMES LOCAL:3 , 0.50
    TIMES LOCAL:4 , 0.50
ENDIF
;淫核／淫茎・淫尻
SIF TALENT:음핵／음경
    TIMES LOCAL:0 , 0.50
SIF TALENT:음고
    TIMES LOCAL:1 , 0.50

;ＬＶ２から３, ＬＶ３から４, ４から５に上げるときは異常経験必要（素質：[自慰しやすい][中毒しやすい][淫乱]なら無視できる）
SIF ABL:자위중독 >= 2 && TALENT:60 == 0 && TALENT:84 == 0 && TALENT:음란 == 0
    LOCAL:6 = ABL:자위중독 - 1

;Ａ感覚
LOCAL:7 = ABL:자위중독 + 2 - TALENT:음란 - ((ABL:자위중독 + 2 - TALENT:음고) / 6)

RETURNF 0

